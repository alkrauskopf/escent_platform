
@import "application-variables.scss";

.classroom_container {
  width: 100%;
  margin: 0 auto;
}

.offering_container {
  width: 100%;
  margin: 0 auto;
}

.offering_content {
  background: #FFFFFF;
}

.offering_header {
  padding-top:.5em;
  padding-bottom: 0em;
  width: 100%;
}

.offering_logo_box {
  padding-top:0em;
  padding-bottom: 0em;
  width: 100%;
}

.offering_logo_text {
  padding-top: .5em;
  padding-bottom: 0em;
  font-weight:bold;
  text-align:center;
  font-style: italic;
  color:$blue_title;
}

.offering_title_text {
  padding-top: 1em;
  padding-bottom: 0em;
  font-size:18px;
  font-weight:bold;
  text-align:center;
  vertical-align:middle;
  font-style: normal;
  color:$blue_title;
}

.lu_title_text {
  padding-top: 1em;
  padding-bottom: 0em;
  font-size:16px;
  font-weight:normal;
  text-align:center;
  vertical-align:middle;
  font-style: normal;
  color:$dark_text;
}

.offering_archive_text {
  padding-top: 0em;
  padding-bottom: 0em;
  font-size:10px;
  font-weight:normal;
  color:$gray_text;
}

.lu_panel_box {
  margin-top: 0em;
  margin-left: .5em;
  padding-bottom: 1em;
  width:99%;
  border: 1px solid $border_gray;
  border-radius: 5px;
  background-color:$panel_background_2;
}
.lu_panel_box_label {
  padding-top: 1.5em;
  padding-bottom: .3em;
  padding-left: 1em;
  font-size:12px;
  font-weight:normal;
  text-align:left;
  font-style: normal;
  color:$blue_text;
}
.lu_homework_text {
  padding: 1em 1em 1em 1em;
  line-height:1.4em;
  word-wrap: break-word;
  text-align:left;
  color:$red_text;
}

.lu_remarks {
  padding: 1em 1em 1em 1em;
  line-height:1.4em;
  word-wrap: break-word;
  text-align:left;
  color:$dark_text;
}

.lu_mastery_text {
  padding-top: 0em;
  padding-bottom: 0em;
  font-size:12px;
  font-weight:normal;
  color:$dark_text;
}

.lu_resource_list {
  margin-left: .5em;
  width:99%;
  padding-top: .5em;
  padding-bottom: 0em;
  list-style:none;
  line-height: 1em;
  font-size:11px;
  font-weight:normal;
  color:$blue_text;
}

.lu_feature_panel {
  padding-top: 0em;
  padding-bottom: 0em;
  margin-left: .5em;
  list-style:none;
  line-height: 1em;
  font-size:11px;
  font-weight:normal;
}


.no_leaders {
  vertical-align:middle;
  text-align:center;
  font-size:11px;
  font-weight:bold;
  color: $red_text;
  padding-top:0em;
  padding-bottom:1em;
}

.offering_panel_box {
  width: auto;
  height: auto;
  padding-bottom: 1em;
  padding-top: 2em;
}

.offering_panel_header{
  width:auto;
  height:3em;
  vertical-align: middle;
  text-align:center;
  font-family:Verdana, Arial, Helvetica, sans-serif;
  font-size:14px;
  font-weight:bold;
  background:url(<%= asset_path('mediashim.png') %>) repeat-x top left;
  padding-top:.5em;
  padding-left:0em;
  border:1px solid $border_gray
}

.offering_panel_text {
  font-size: 12px;
  text-align:center;
  vertical-align:middle;
  color: $dark_text;
}

.offering_page_text {
  font-size:12.0px;
  text-align: justify;
  font-weight:normal;
  color:$dark_text;
  line-height: 1.5em;
  font-family:Verdana, Arial, Helvetica, sans-serif;
}

.offering_teachers {
  padding-top:.5em;
  padding-bottom: 1em;
  width: 100%;
}

.offering_students {
  padding-top:.5em;
  padding-bottom: 1em;
  width: 100%;
}

.lu_discussion_closed {
  font-size: 12px;
  vertical-align:middle;
  font-weight:bold;
  text-align:center;
  font-style: italic;
  color: $gray_text;
}