
@import "application-variables.scss";

.organization_container {
  width: 100%;
  margin: 0 auto;
}

.organization_content {
  background: $panel_background;
}

.organization_heading {
  padding-top:.5em;
  padding-bottom: 0em;
  width: 100%;
}

.organization_logo_box {
  padding-top:1em;
  padding-left:1em;
  padding-bottom: 0em;
  width: 100%;
}

.organization_logo_text {
  padding-top: .5em;
  padding-bottom: 0em;
  font-weight:bold;
  text-align:center;
  font-style: italic;
  color:$blue_title;
}

.organization_title_text {
  width:100%;
  padding-top: 1em;
  padding-bottom: 0em;
  font-size:18px;
  font-weight:bold;
  text-align:center;
  vertical-align:middle;
  font-style: normal;
  color:$blue_title;
}

.organization_address_text {
  width:100%;
  padding-top: 0em;
  padding-bottom: 0em;
  font-size:11px;
  font-weight:normal;
  text-align:center;
  vertical-align:middle;
  font-style: normal;
  color:$blue_title;
}
.organization_contact_name {
  width:100%;
  padding-top: 1em;
  padding-bottom: 0em;
  padding-left:1em;
  font-size:11px;
  font-weight:bold;
  text-align:left;
  vertical-align:middle;
  font-style: normal;
  color:$blue_title;
}
.organization_contact_pic {
  width:100%;
  padding-top: 1em;
  padding-bottom: 1em;
  padding-left:1em;
}
.organization_contact_text {
  width:100%;
  padding-top: 0em;
  padding-bottom: 0em;
  padding-left:1em;
  font-size:11px;
  font-weight:normal;
  text-align:left;
  vertical-align:middle;
  font-style: normal;
  color:$blue_title;
}

.organization_page_text {
  width:100%;
  font-size:12.0px;
  text-align: left;
  font-weight:normal;
  color:$dark_text;
  line-height: 1.5em;
  font-family:Verdana, Arial, Helvetica, sans-serif;
}

.user_panel {
  margin:1em 0em 1em 0em;
}

.user_side_panel {
  padding:0em 3em 0em 3em;
}

.organization_panel {
  width:90%;
  padding-top:1em;
  padding-bottom:1em;
  padding-left:5%;
  font-size:12.0px;
  text-align: left;
  font-weight:normal;
  color:$blue_text;
  line-height: 1.5em;
  font-family:Verdana, Arial, Helvetica, sans-serif;
}

.organization_panel_list {
  margin-left: .5em;
  width:99%;
  padding-top: .5em;
  padding-bottom: 0em;
  list-style:none;
  line-height: 1em;
  font-size:12px;
  font-weight:normal;
  color:$blue_text;
}

.organization_app_stats {
  margin-left: 1em;
  width:99%;
  word-wrap: break-word;
  padding-top: 0em;
  padding-bottom: 0em;
  list-style:none;
  line-height: 1.5em;
  font-size:13px;
  font-weight:normal;
  color:$dark_text;
}

.organization_panel_header{
  width:auto;
  height:3em;
  vertical-align: middle;
  text-align:center;
  font-family:Verdana, Arial, Helvetica, sans-serif;
  font-size:14px;
  font-weight:bold;
  background:url(<%= asset_path('mediashim.png') %>) repeat-x top left;
  padding-top:.5em;
  padding-left:0em;
  color: $dark_text;
  border:1px solid $border_gray
}

.organization_panel_text {
  margin: .5em 0em 0em 0em;
  font-size: 12px;
  text-align:left;
  vertical-align:middle;
  color: $blue_text;
}
.organization_panel_text .teacher_box{
  padding: 1em 0em 0em 0em;
}

.organization_user_panel_text {
  margin: .5em 3em 0em 3em;
  font-size: 14px;
  text-align:left;
  vertical-align:middle;
  color: $dark_text;
}

.organization_offerings {
  margin-left: 0em;
  width:99%;
  word-wrap: break-word;
  padding-top: 0em;
  padding-bottom: 0em;
  vertical-align:top;
  line-height: 1.5em;
  font-size:12px;
  font-weight:normal;
  color:$dark_text;
}

.key_required {
  padding-left: 5em;
  padding-top:.5em;
  padding-bottom:.5em;
  font-style: italic;
  font-size:10px;
  font-weight:normal;
  color:$blue_text;
}
.offering_row {
  padding-top:.5em;
  padding-bottom:1em;
}
.offering_link {
  font-weight:normal;
}
.assess_link {
  padding: 0em 0em 0em 2em;
  font-size:12px;
  font-weight:normal;
  color:$red_text;
}