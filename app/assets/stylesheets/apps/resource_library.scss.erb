@import "application-variables.scss";
@import 'bootstrap';


.rl_container {
  width: 100%;
  margin: 0 auto;
}

.edit_button {
  font-size:14px;
}

.update_button {
  font-size:18px;
}

.resource_container {
  width: 100%;
  margin: 0 auto;
}
.resource_button_row {
  padding:1em 0em 2em 3em;
  text-align: left;
  font-size:16px;
}
.resource_content {
  background: $panel_background;
}
.resource_panel_title {
  width:100%;
  margin-top:1em;
  padding-bottom:1em;
  word-wrap:break-word;
  text-align:center;
  font-weight:normal;
  font-size:16px;
  color:$blue_text;
}

.resource_manage_box {
  margin:0em 0em 0em 0em;
  padding:5em 2em 5em 2em;
  border-radius: 0px;
  border:1px solid #ddd;
}

.precision_resource_panel {
  @extend .panel-heading;
  border-top:3px solid $gold_panel;
}

.resource_add_row {
  margin:0em 0em 0em 0em;
  padding:0em 0em 0em 3em;
}

.resource_title {
  margin: 1em 0em 1em 0em;
  font-size:16px;
  text-align:center;
  font-weight:bold;
  color:$blue_text;
}

.resource_subtitle {
  margin: 1em 0em 1em 0em;
  font-size:15em;
  color:$blue_text;
}

.resource_edit_box {
  margin: 0em 0em 0em 0em;
  border: 0px solid #ddd;
  font-size: 15px;
}
.resource_edit_row {
  padding: 1em 0em 2em 0em;
  border: 0px solid #ddd;
}

.resource_text_field {
  padding-left: 1em;
  vertical-align:top;
  float: left;
  color:$dark_text;
}
.resource_select_field {
  padding-left: 1em;
  vertical-align:top;
  float: left;
  color:$blue_text;
}
.resource_label_field {
  padding-right:1em;
  text-align: right;
  vertical-align:top;
  color:$dark_text;
}
.resource_prep_box {
  padding: 0em 0em 2em 0em;
  border: 0px solid #ddd;
}
.resource_prep_header {
  text-align: left;
  padding:1em 0em .5em 1em;
  font-size:16px;
  vertical-align:top;
  color:$blue_text;
}
.resource_prep_field {
  text-align: left;
  padding:1em 0em .5em 1em;
  font-size:14px;
  vertical-align:top;
  color:$blue_text;
}
.resource_strand_row {
  font-size:18px;
}
.resource_strand_check_box {
  padding-left:3em;
}

.resource_pool_select {
  font-size:14px;
  color:$red_text;
  font-weight:normal;
}
.resource_pool_list {
  border:0px solid #ddd;
  padding: 3em 0em 1em 0em;
}
.resource_pool_list_box {
  border-radius: 10px;
  border:3px solid #ddd;
  padding: 0em 2em 1em 2em;
  background-color: $panel_background_ifa;
}
.resource_pool_panel {
  @extend .panel-heading;
  margin: 0em 0em 0em 0em;
  background-color: $blue_panel;
  color:white;
  text-align:left;
  vertical-align:middle;
  min-height:2.0em;
  font-size:16px;
}
.resource_pool_header_label {
  font-weight:bold;
  text-align:center;
  vertical-align:middle;
}
.resource_pool_row {
  padding-top:1em;
  padding-bottom:1em;
  border-bottom:1px solid #ddd;
  font-size:14px;
  color:$dark_text;
  font-weight:normal;
  text-align:left;
  vertical-align:top;
}
.resource_pool_name {
  font-style: normal;
  font-size:15px;
  color:$dark_text;
}
.resource_pool_name .title {
  font-weight:bold;
}
.resource_pool_name .status {
  font-size:12px;
  color:$red_text;
  font-weight:bold;
}
.resource_pool_name .status .available{
  color:$blue_text;
}
.resource_pool_button {
  padding:1em 1em 1em 1em;
}




.resource_header {
  padding-top:.5em;
  padding-bottom: 0em;
  width: 100%;
}

.resource_logo_box {
  padding-top:0em;
  padding-bottom: 0em;
  width: 50%;
}

.resource_logo_text {
  padding-top: .5em;
  padding-bottom: 0em;
  font-weight:bold;
  text-align:left;
  font-style: italic;
  color:$blue_title;
}

.resource_title_text {
  padding-top: 0em;
  padding-bottom: 0em;
  font-size:17px;
  font-weight:normal;
  text-align:center;
  vertical-align:middle;
  font-style: normal;
  color:$red_title;
}

.resource_standard_name {
  padding-top: 0em;
  padding-bottom: 0em;
  font-size:13px;
  font-weight:normal;
  text-align:center;
  color:$blue_text;
}

.resource_standards {
  padding-top: 0em;
  padding-bottom: 0em;
  font-size: 12px;
  font-weight: normal;
  text-align: left;
  color: $blue_text;
}

.resource_panel_box {
  width: auto;
  height: auto;
  padding-bottom: 8em;
  padding-top: 2em;
}


.resource_discussion {
  width: auto;
  height: auto;
  padding-bottom: 0em;
  padding-top: 0em;
}

.resource_panel_header{
  width:auto;
  height:3em;
  vertical-align: middle;
  text-align:center;
  font-family:Verdana, Arial, Helvetica, sans-serif;
  font-size:14px;
  font-weight:bold;
  background:url(<%= asset_path('mediashim.png') %>) repeat-x top left;
  padding-top:.5em;
  padding-left:0em;
  border:1px solid $border_gray
}

.resource_panel_text {
  font-size: 13px;
  text-align:left;
  vertical-align:middle;
  color: $blue_text;
}
.resource_text_right {
  text-align:right;
}

.resource_no_content {
  font-size:small;
  color: $gray-text;
}

.resource_status {
  font-size: 14px;
  font-style: italic;
  color: $red_text;
}

.resource_discussion_closed {
  font-size: 12px;
  vertical-align:middle;
  font-weight:bold;
  text-align:center;
  font-style: italic;
  color: $gray_text;
}

.resource_panel_header{
  width:auto;
  height:3em;
  vertical-align: middle;
  text-align:left;
  font-family:Verdana, Arial, Helvetica, sans-serif;
  font-size:14px;
  font-weight:bold;
  background:url(<%= asset_path('mediashim.png') %>) repeat-x top left;
  padding-top:.5em;
  padding-left:3em;
  border:1px solid $border_gray
}


.resource_discussion_label {
  font-size: 12px;
  vertical-align:middle;
  font-weight:bold;
  text-align:left;
  padding-left:0em;
  color: $dark_text;
}
.resource_discussion_trigger {
  font-size: 12px;
  cursor:pointer;
  text-decoration: underline;
  float:right;
  font-weight:bold;
  padding-right:2em;
  color: $dark_text;
}