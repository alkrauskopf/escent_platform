/* -------------------------------------------------------------- 
   forms.css
   * Sets up some default styling for forms
   * Gives you classes to enhance your forms
-------------------------------------------------------------- */

/* Fieldsets */
fieldset { }
legend { display: none; }
label { font-size: 11px; float: left; padding-right: 3px; line-height: 1.8em; }

/* Text fields */
input              { float: left; }
input.text {
  border: none;
  background: url(<%= asset_path('bg_input_field_shadow.gif') %>) top left no-repeat;
  overflow: hidden;
  height: 15px;
  margin-top: -2px;
  margin-right: 10px;
  vertical-align: middle;
  padding: 4px 5px 0 5px;
  font-family: Verdana;
  font-size: 10px;
  border-bottom:1px solid #CCCCCC;
  border-right:1px solid #CCCCCC;
}
.share_content_login input.disabled_email,
.share_pilot_feedback_login input.disabled_email,
.discussion_root_login input.disabled_email,
.discussion_reply_login input.disabled_email {
  background-image: url(<%= asset_path('bg_input_field_disabled_email_shadow.gif') %>);
}
.share_content_login input.disabled_password,
.share_pilot_feedback_login input.disabled_password,
.discussion_root_login input.disabled_password,
.discussion_reply_login input.disabled_password { 
	background-image: url(<%= asset_path('bg_input_field_disabled_password_shadow.gif') %>);
}

input#keywords { margin-top: 2px; }
input.disabled { color: #999; }
input.text:focus   {}
.FormRowData input { float: none; }
/* Input submit */
div.submit_warp input.save	 { color: #2789bb; font-weight:bold; }

input.submit { margin-left: 5px; }
input.remove { left: 6px; }
input.view   { left: 9px; }
/* checkbox fields */
input.check        { float: none; }
input.radio        { float: none; }
input.invalid      { border-color:#FBC2C4; }
input.reset        { float: left; margin-left: 10px; }
input.right-submit { margin-left: 5px; }
/* Textareas */
textarea            { border:1px solid #bbb; padding:5px; font-size: 1em; }
textarea:focus      { border:1px solid #999; }
textarea.invalid    { border-color:#FBC2C4; }

/* for form style and font */
.formBox h2, .formBox p, .formBox h3 { clear: both; }
.formBox p {
	padding: 15px 0px 5px 16px;
	font-size:12px; 
	position: relative;
}

.formBox p label {
	float: left;
	width: 260px;
	text-align: right;
}
.formBox form label.right-label { 
	width: auto;
	line-height: 1.3em;
	margin-left: 5px;
	margin-right: 15px;
}
.formBox form input.submit { margin-left: 160px; margin-right: 10px; }
.formBox p strong { color: #333; line-height: 1.8em; }



/* Select fields */
select              { float: left; border:1px solid #ccc; background:#f6f6f6; }
select:focus        { border:1px solid #999; background:#fff; }
option              { display: block; }
/* Button */
button              { float: left; }
/* Success, error & notice boxes for messages and errors. */
.error,
.notice, 
.success       { border:1px solid #ddd; }
.error ul,
.notice ul, 
.success ul    { list-style-type:square; }
.error         { background:#FBE3E4; color:#D12F19; border-color:#FBC2C4; }
.notice        { background:#FFF6BF; color:#817134; border-color:#FFD324; }
.success       { background:#E6EFC2; color:#529214; border-color:#C6D880; }
.message a     { color:#215F89; }
.error a       { color:#D12F19; }
.notice a      { color:#817134; }
.success a     { color:#529214; }