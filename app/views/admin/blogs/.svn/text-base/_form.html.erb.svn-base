<div id="blog_error_message">
	  <%= render :partial => "/shared/error_and_notice" %>
</div>
<div class="FormRow">
	<div class="FormRowTitle" style="text-align:center;">
	<%= label_tag 'title', 'Title:' %>
	</div>
	<div class="FormRowData">
		<%= text_field :blog, :title , :value => @blog.title, :size => "60" %>
		<%= vaild_tag %>      
	</div>
</div>	
<div class="FormRow">
	<div class="FormRowTitle">
		<%= label_tag 'active', 'Active:' %>
	</div>
	<div class="FormRowData">
		<%= check_box :blog, :active %>    
	</div>
</div>
<div class="FormRow">
	<div class="FormRowTitle">
		<%= label_tag 'description', 'Description:' %>
	</div>
	<div class="FormRowData">
		<%= text_area :blog, :description , :value => @blog.description , :class => "mceEditor"%>
		<%= vaild_tag %>      
	</div>
</div>