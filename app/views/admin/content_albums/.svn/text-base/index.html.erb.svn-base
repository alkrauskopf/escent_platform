<div class="clear">
	<h2 style="float:left;">Content Ablums</h2>
	<div style="float: right;">
		<%= button_to_remote "Add ablum", {:update => "content_panel", :before => "Element.show('loading')", :complete => "Element.hide('loading');", :url => {:controller => :content_albums, :action => :new}, :method => :get}, {:class =>"fsn-button ui-button ui-state-default ui-corner-all"} %> 
	</div>
</div>
<table id="Ablums" class="tablesorter">
	<thead>
		<tr>
			<th>Name</th>
			<th>Description</th>
			<th>Cover</th>			
			<th>&nbsp;</th>
			<th>&nbsp;</th>			
		</tr>
	</thead>
	<tbody>
	  <% @content_albums.each do |content_album| -%>
	  <tr>
	    <td><%= content_album.name %></td>
	    <td><%= h content_album.description %></td>
			<td><%= content_album.cover_show %></td>
	    <td>
        <%= button_to_remote  "Edit", {:update => "content_panel", :before => "Element.show('loading')", :complete => "Element.hide('loading');", :url => {:controller => :content_albums, :action => :edit, :content_album_id => content_album}}, {:class => "fsn-button ui-button ui-state-default ui-corner-all" } %>
	    </td>
      <td>
        <%= button_to_remote "Remove", {:update => "content_panel", :before => "Element.show('loading')", :complete => "Element.hide('loading');", :url => {:controller => :content_albums, :action => :destroy, :content_album_id => content_album}}, {:class => "fsn-button ui-button ui-state-default ui-corner-all" } %>
      </td>
	  </tr>
	  <% end -%>
	</tbody>  	
</table>
<br style="clear:both" />
<p>
 <%= button_to_remote "Back", {:update => "content_panel", :url => {:controller => :content, :action => :index, :organization_id => @current_organization}},{:class => "fsn-button ui-button ui-state-default ui-corner-all" } %>
</p>

<script type="text/javascript" charset="utf-8">
jQ(document).ready(function() {
  jQ("#Ablums").tablesorter({ 
    headers: { 2: { sorter: false }, 3: { sorter: false } } 
  });
});
</script>