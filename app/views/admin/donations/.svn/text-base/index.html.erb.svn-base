<h1>Listing Donations</h1>

<table>
  <tr>
  	<th>Donor's Name</th>
    <th>Merchant account</th>
    <th>Transaction status</th>
    <th>Amount</th>
    <th>Authorization code</th>
    <th>Response message</th>
  </tr>

<% @payments.each do |payment| %>
  <tr>
  	 <td><%=h payment.user.full_name unless payment.user.nil? %></td>
    <td><%=h payment.merchant_account.name %></td>
    <td><%=h payment.transaction_status.name unless payment.transaction_status.blank?  %></td>
    <td><%=h payment.amount %></td>
    <td><%=h payment.authorization_code %></td>
    <td><%=h payment.response_message %></td>
    <td><%= link_to 'Show', :action=>:show, :id=>payment.id %></td>
  </tr>
<% end %>
</table>

<br />

