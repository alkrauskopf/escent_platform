<div style="margin-bottom: 20px; font-size: 11px; line-height:16px;">
	<strong>Friends </strong> are members of the network that have registered through your organization or have added your organization to their Favorites List. <br/>This lets them assume various <strong>Roles</strong> in your organziation. <br/>You, as the administrator, have the ability to remove this person from your organization's list of Friends.
</div>
<div style="margin-bottom: 20px; font-size: 11px; line-height:16px;">
	<%= link_to_remote "back", :update => "our_family_panel", :url => {:controller => :our_family, :action => :roles, :organization_id => @current_organization}, :method => :get %>
</div>
<div id="friends">
	<table id="users" >
		<thead>
			<tr>
				<th>&nbsp;</th>
				<th>&nbsp;</th>
				<th>&nbsp;</th>
				<th>Name</th>
				<!-- ALK Remove Religious Affiliation  
				<th style="width:150px;">Religious <br />Affiliation</th>
				-->
				<th>Roles</th>

			</tr>
		</thead>
		<tbody>
			<% for person in @people do -%>
			<tr>

				<td class="button" width=60px style="padding-top:5px;padding-bottom:5px;padding-left:10px;padding-right:10px">
					<%= button_to_remote "Send message", {:update => "our_family_panel", :url => {:controller => :our_family, :action => :contact, :organization_id => @current_organization, :id => person }, :method => :get}, :class =>"fsn-button ui-button ui-state-default ui-corner-all"  %>
				</td>					
				<td class="button" width=60px style="padding-top:5px;padding-bottom:5px;padding-left:10px;padding-right:10px">					
					<%= button_to_remote "Dis-Associate", {:update => "our_family_panel", :url => {:controller => :our_family, :action => :remove_association, :organization_id => @current_organization, :id => person}, :confirm => "Are you sure?"}, :class =>"fsn-button ui-button ui-state-default ui-corner-all" %>
				</td>
				<% if person.home_organization == @current_organization %>
					<% if person.is_suspended %>
					<td class="button" width=60px style="padding-top:5px;padding-bottom:5px;padding-left:10px;padding-right:10px">					
						<%= button_to_remote "Un-Suspend", {:update => "our_family_panel", :url => {:controller => :our_family, :action => :edit_user_toggle_suspended, :organization_id => @current_organization, :id => person}, :confirm => "Are you sure?"}, :class =>"fsn-button ui-button ui-state-default ui-corner-all" %>
					</td>
					<% else %>
					<td class="button" width=60px style="padding-top:5px;padding-bottom:5px;padding-left:10px;padding-right:10px">					
						<%= button_to_remote "Suspend Login", {:update => "our_family_panel", :url => {:controller => :our_family, :action => :edit_user_toggle_suspended, :organization_id => @current_organization, :id => person}, :confirm => "Are you sure?"}, :class =>"fsn-button ui-button ui-state-default ui-corner-all" %>
					</td>				
					<% end %>
				<% else %>
					<td>&nbsp;</td>
				<% end %>				
				<td ><%= link_to person.full_name, {:controller => "/users", :action => :member_public_profile, :organization_id => @current_organization, :id => person}, {:target => "_blank"} %></td>

				<td><%= person.roles.find_all_by_scope_id_and_scope_type(@current_organization, "Organization").collect{|r| r.name}.to_sentence %></td>

			</tr>
			<% end -%>	
		</tbody>
	</table>
</div>
