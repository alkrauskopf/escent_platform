
<div style = "font-size:14px; color: #000000;">
	Assign Your Tagged Resources To <strong><%= @classroom.course_name %>,&nbsp;<%=@topic.title%>.</strong>
	<br/>
	<br/> 
	<div class="flash_notice" style="display:none;"></div>
	<div>
	<% unless @avail_resources.size.zero? %>
	<table id="roles" class="tablesorter" style="width:99%;">
		<thead>
			<tr>
				<th>&nbsp;
				</th>
				<th><center>Featured?</center>
				</th>
				<th>Resource Title</th>
				<th>Contributor</th>
			</tr>
		</thead>
		<tbody id="topic_content">
			<% for rsrc in @topic.contents.uniq do -%>
				<% unless rsrc.nil? || !(rsrc.content_status.name == "Available" || rsrc.content_status.name =="Restricted")%>
				<tr id="<%= rsrc.public_id %>" class="content-list-item" style="color: #C83A14; vertical-align:middle;">
					<td width=10%, style="vertical-align:middle; padding-left:10px">
						<%= button_to_remote "Remove", {:update => "topics_panel", :url => {:controller => :topics, :action => :assign_resource, :organization_id => @current_organization, :classroom_id => @classroom, :topic_id => @topic,:content_id => rsrc, :add_function => false }, :confirm => "Remove Resource From Topic. Are You Sure?"},{:class =>"fsn-button ui-button ui-state-default ui-corner-all"}  %>
					</td>
					
					<td width=10%, style="padding-left:30px; color: #C83A14; vertical-align:middle;">
						<input id="featured_content" name="featured_content" type="radio" value="<%=rsrc.public_id%>" <%= @topic.featured_content == rsrc.id ? 'checked' : ''%> />
					</td>
					
					<td width=50%, style="color: #C83A14; vertical-align:middle;">
						<strong><%= link_to rsrc.title.titleize,{:controller => "site/site", :action => "static_resource", :organization_id => @current_organization, :id => rsrc}, {:target => "_blank"} %></strong>
						&nbsp;&nbsp; &nbsp;<%= rsrc.subject_area.name.humanize if rsrc.subject_area %> <%= rsrc.content_resource_type.name.humanize if rsrc.content_resource_type %>
						<% if rsrc.content_status.name =="Restricted"%>&nbsp;<i>(RESTRICTED)</i><% end %>
						<br/><%= rsrc.description%>					
					</td>
						<td  width=30%, style="font-size:11px; color: #C83A14; vertical-align:middle;">
							<% unless rsrc.user.nil?%><%= rsrc.user.full_name%>,&nbsp <br/><%end%>
							<% if rsrc.organization%> <%= rsrc.organization.name %>
								<% else %> <% Former Orgnanization%>
							<% end %>						
						</td>
					</tr>
				</tr>
				<% end %>
			<% end -%>
			<% unless @current_user.favorite_resources.nil? || @current_user.favorite_resources.empty?%>
				<% for rsrc in @current_user.favorite_resources do -%>
					<% unless rsrc.nil? || @topic.contents.include?(rsrc) || !(rsrc.content_status.name == "Available" || rsrc.content_status.name =="Restricted")%>
						<tr id="<%= rsrc.public_id %>" class="content-list-item" style="color: #C83A14; vertical-align:middle;">
						<td width=10%, style="vertical-align:middle; padding-left:2px">
							<%= button_to_remote "Add To Topic", {:update => "topics_panel", :url => {:controller => :topics, :action => :assign_resource, :organization_id => @current_organization, :classroom_id => @classroom, :topic_id => @topic,:content_id => rsrc, :add_function => true }},{:class =>"fsn-button ui-button ui-state-default ui-corner-all"}  %>
						</td>
					
						<td width=10%, style="color: #000000; vertical-align:middle;">
							&nbsp;
						</td>
					
						<td width=50%, style="color: #000000; vertical-align:middle;">
							<strong><%= link_to rsrc.title.titleize,{:controller => "site/site", :action => "static_resource", :organization_id => @current_organization, :id => rsrc}, {:target => "_blank"} %></strong>
							&nbsp;&nbsp; &nbsp;<%= rsrc.subject_area.name.humanize if rsrc.subject_area %> <%= rsrc.content_resource_type.name.humanize if rsrc.content_resource_type %>
						<% if rsrc.content_status.name =="Restricted"%>&nbsp;<i>(RESTRICTED)</i><% end %>
							<br/><%= rsrc.description%>					
						</td>
						<td  width=30%, style="font-size:11px; color: #000000; vertical-align:middle;">
							<% unless rsrc.user.nil?%><%= rsrc.user.full_name%>,&nbsp <br/><%end%>
							<% if rsrc.organization%> <%= rsrc.organization.name %>
								<% else %> <% Former Orgnanization%>
							<% end %>						
						</td>
					</tr>
					</tr>
					<% end%>
				<% end %>
			<% end -%>
			
		</tbody>
		</table>
		<% else -%>	
		<strong>No Resources Available To Add or Remove.</strong>
	<% end -%>

	</div>
	<div style="width:100%; text-align:left; padding:10px;">
	<%= link_to "Back", {:update => "topics_panel", :url => {:controller => :topics, :action => :index, :organization_id => @current_organization, :classroom_id => @classroom.id}, :remote => true } %>
	</div>
</div>
<script type="text/javascript" charset="utf-8">
	jQ(document).ready(function() {
		jQ('input.add_resource').click(function() {
			var $this = jQ(this);
			var url = $this.parents("form").attr("action");
			jQ.post(url, function(data) {
				$this.parents("tr").remove();
				jQ('.flash_notice').html(data).css("display", "block");
			})
			return false;
		})
	})
</script>
<script type="text/javascript">
jQ(document).ready(function() {
		
	// var $resultsBox = jQ("#search-results");	
	
	var $resultsBox = jQ("#result-box-dialog");		
	
	function search_content(keywords, type) {
	  search_url = "<%= url_for :controller => :content, :action => :search_with_type, :organization_id => @current_organization %>";
		jQ.get(search_url, {'keywords': keywords, 'type':type, 'render_html':'search_results_for_topics'}, function(data) {
			$resultsBox.html(data)
		});
	}
	
	jQ("#search_button").click(function() {
		var keywords = jQ("input[name='keywords']", jQ(this).parent("p")).val();
		var type = "";
		jQ("input[name='content_search_type']", jQ(this).parents("div.dialog")).each(function() {
       if(jQ(this).attr('checked')) {
         type = jQ(this).val();
       }
		})
		search_content(keywords, type);
	});
	
	jQ("#dialog_keywords").keyup(function(event){
	    if (event.keyCode == 13) {
			var keywords = jQ(this).val();
	        search_content(keywords);
	    }
	});
	
	var save_contents = function() {
    var items = jQ(".content-list-item");
       var content_ids = new Array();
    var $topic_content = jQ("#topic_content");
    items.each(function() {
     content_ids.push(this.id);
    })
		jQ.post('<%= url_for :controller => :topics, :action => :sort_content, :id => @topic, :organization_id => @current_organization %>', {'content_ids[]':content_ids}, function(data) {
			$topic_content.css('background', '#f0f0e8')
			.fadeTo('slow', 0.5, function() {
				$topic_content.css('background', '#fff')
				$topic_content.fadeTo("slow", 1)
				$topic_content.parent("table").parent("div").html(data)
				$topic_content.css("padding", "0")
			})						
		})
	}

	jQ('#add_content').click(function() {
		jQ('.dialog').dialog('open');
		return false;
	})

  var addActionToPaginationCouldCheck = function() {
    jQ(".result-box-dialog :checkbox").click(function() {
      var $this = jQ(this);
      var id = $this.val();
      if($this.attr("checked")) {
        jQ("p:eq(0)", $this.parents(".dialog")).append("<input id='"+id+"' name='hidden_content_ids' type='hidden' value='"+id+"' />")
      } else {
        jQ("input#"+id).remove();
      }
    })
  }
	
	jQ(".dialog").dialog({
		bgiframe: true,
		autoOpen: false,
		width: 800,
		height: 400,
		modal: true,
		buttons: {
			'Add Selected Resource To Topic': function() {
				var content_ids = new Array();
				var $this = jQ(this);
        // jQ("input[name='content_ids[]']", jQ(this)).each(function() {
        //  if(jQ(this).attr('checked')) {
        //    content_ids.push(jQ(this).val());
        //  }
        // });
        jQ("input[name='hidden_content_ids']", jQ(this)).each(function() {
           content_ids.push(jQ(this).val());
        });
				jQ.post('<%= url_for :controller => :topics, :action => :add_content, :id => @topic, :organization_id => @current_organization,:classroom_id => @classroom.id %>', {'content_ids[]':content_ids}, function(data) {
					jQ("#topic_content").html(data);
					$this.dialog('close');
				})
			},
			Cancel: function() {
				jQ(this).dialog('close');
			}
		}
	});

	function showDialogContent(title, content_id) {
		$dialog = jQ("#view-content");
		// next line is broken.		
		$dialog.attr("title", title);
		jQ.post('<%= url_for :controller => :content, :action => :show, :organization_id => @current_organization %>', {'id':content_id}, function(data) {
			$dialog.html(data);
			$dialog.dialog('open');
		})
	}
	
	var addButtonAction = function(parent_elem) {
		jQ("button", parent_elem).each(function() {
			jQ(this).click(function() {
				var title = jQ(this).parent("td").parent("tr").children("td").eq(0).text();
				var content_id = jQ(this).parent("td").parent("tr").attr("id");
				showDialogContent(title, content_id)
				return false;
			})
		})
	}

	addButtonAction(jQ("#topic_content"));
	addButtonAction(jQ("#search-results-dialog"));	
	addActionToPaginationCouldCheck();

	jQ("#view-content").dialog({
		bgiframe: true,
		autoOpen: false,
		width: 500,
		modal: true,
		buttons: {
			Close: function() {
				jQ(this).dialog('close');
			}
		}
	});	
	
	jQ('div#result-box-dialog div.pagination a').live('click', function() {
		jQ(this).parents('.result-box-dialog').load(this.href, function() {addActionToPaginationCouldCheck();addButtonAction(jQ("#search-results-dialog"));});
		return false
	})	
	// Set a content as Featured.
	var topic_id = "<%=@topic.public_id%>";
	var set_featured_url = "/admin/topics/set_featured_content/<%=@current_organization.public_id%>";
	jQ('#topic_content input[type=radio]').setFeatured(set_featured_url, topic_id)
});
</script>