<div style="width:100%;">
    <div id="discussion_abuses">
        <table id="abuses" class="tablesorter">
            <thead>
                <tr>
                    <th style="width:400px;">
                        Discussionx
                    </th>
                    <th>
                        Complaints
                    </th>
                    <th>
                        &nbsp;
                    </th>
                    <th>
                        &nbsp;
                    </th>
                </tr>
            </thead>
            <tbody id="abuse_results">
                <% for discussion in @discussions do %>
                <tr class="report_abuse_comment">
                    <td>
                        <%= discussion.comment %>
                    </td>
                    <td>
                        <%= discussion.reported_abuses.size %>
                    </td>
                    <td>
                        <%= button_to_remote "Remove", {:update => "discussion_abuses", :url => {:controller => :topics, :action => :remove_discussion, :organization_id => @current_organization, :discussion_id => discussion.id, :id => @topic}, :method => :post}, :confirm => "Confirm Remove?", :class =>"fsn-button ui-button ui-state-default ui-corner-all remove" %>
                    </td>
                    <td id="<%= discussion.id %>">
                        <%= link_to_remote :view, :update => "discussion_abuses", :url => {:controller => :topics, :action => :view_discussion_abuses, :organization_id => @current_organization, :discussion_id => discussion.id, :id => @topic}, :method => :post %>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
        <div class="digg_pagination">
            <%#= will_paginate @abuses %>
        </div>
        <div style="margin:0 auto;">
            <%= button_to_remote "Cancel", {:update => "topics_panel", :url => {:controller => :topics, :action => :index, :organization_id => @current_organization}}, :class => "fsn-button ui-button ui-state-default ui-corner-all" %>
        </div>
    </div>
    <script type="text/javascript" charset="utf-8">
        jQ(document).ready(function(){
            jQ("#abuses").tablesorter({
                headers: {
                    1: {
                        sorter: false
                    },
                    2: {
                        sorter: false
                    },
                    3: {
                        sorter: false
                    },
                    4: {
                        sorter: false
                    }
                }
            });
        });
    </script>
</div>
