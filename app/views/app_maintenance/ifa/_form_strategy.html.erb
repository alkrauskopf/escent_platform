<div class="container Form_Container">
  <%= render :partial => "/shared/error_and_notice" %>
  <%= form_for(:act_strategy, :url => app_maintenance_ifa_strategy_create_path(:organization_id => @current_organization)) do |f| %>
      <div class="row ifa_edit_row">
        <div class="col-md-2 ifa_edit_label">
          Subject
        </div>
        <div class="col-md-10 ifa_edit_text">
          <%=  select(:act_strategy, :act_subject_id, @subjects.collect{|m| [m.name,m.id]}, {:selected=>(@current_strategy.act_subject.nil? ? 0 : @current_strategy.act_subject.id), :prompt => 'Select Subject'}) %>
        </div>
      </div>
      <div class="row ifa_edit_row">
        <div class="col-md-2 ifa_edit_label">
          Position
        </div>
        <div class="col-md-10 ifa_edit_text">
          <%= text_field :act_strategy, :pos, :size => 4, :value => @current_strategy.pos %>
        </div>
      </div>
      <div class="row ifa_edit_row">
        <div class="col-md-2 ifa_edit_label">
          Name
        </div>
        <div class="col-md-10 ifa_edit_text">
          <%= text_field :act_strategy, :name, :size => 50, :value => @current_strategy.name %>
        </div>
      </div>
      <div class="row ifa_edit_row">
        <div class="col-md-2 ifa_edit_label">
          Description
        </div>
        <div class="col-md-10 ifa_edit_text">
          <%= text_area :act_strategy, :description, :rows=>6, :cols => 60, :value => @current_strategy.description %>
        </div>
      </div>

      <div class="row ifa_edit_row">
        <div class="col-md-2 ifa_edit_label">
          Active?
        </div>
        <div class="col-md-10 ifa_edit_text">
          <%= check_box :act_strategy, :is_active, :checked=> @current_strategy.active?%>
        </div>
      </div>
      <div class="row ifa_edit_row">
        <div class="col-md-2 ifa_edit_label">
          <%= f.submit 'Create Strategy',:class =>"button_blue" %>
        </div>
      </div>
  <% end %>
</div>
