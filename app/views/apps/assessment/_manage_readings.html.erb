
<div style = "font-size:12px; color: #000000;padding-left:10px;">
	<br/>
	<span style ="text-align:center; color: #C83A14; font-size:18px">
	<strong>Readings Repository</strong>
	</span>
	<div style = "padding-bottom:10px;padding-left:0px; ">
	<%= form_for(:act_reading, :url => ifa_question_reading_add_path(:organization_id => @current_organization, :classroom_id => @classroom, :function => "New")) do |form| -%>
		<table  style="width:200px;margin-left:305px;">
			<tbody>  
				<tr>
					<td style="width:120px; font-size:normal">
						<!--<%#=  select( :read, :subject_id, ActSubject.find(:all, :conditions=>["id <> ?", 99], :order => "name").collect{|s| [s.name, s.id]}, {:prompt => ActSubject.first.name}) %>-->
            <%=  select( :read, :subject_id, ActSubject.all_subjects.collect{|s| [s.name, s.id]}, {:prompt => ActSubject.first.name}) %>
          </td>
        			<td>
          				<%= form.submit 'Create New Reading',:class => 'fsn-button ui-button ui-state-default ui-corner-all' %>
        			</td>			
				</tr>
			</tbody>
		</table>
	<% end -%>
	</div>
	<div>
	<% unless @readings.size.zero? %>
	<div id="assign_resources_panel">
		<table id="resource_levels"  class="tablesorter" style="width:99%;">
			<thead>
				<tr>
					<% header_string = pluralize(@readings.size.to_s, " Related Reading") + " In The Repository" %>
					<th><strong><%= header_string %></strong></th>											
				</tr>
			</thead>
			<tbody>  
				<% sub_ids = @readings.group_by(&:act_subject_id) %>
				<% sub_ids.each do |si, readings| %>
					<% subj_name = ActSubject.find(si).name -%> 
					<% col_label = readings.size.to_s + " " + subj_name-%>
					<tr>
					<td class="resource_levels_close">

					<%= link_to '', ifa_subject_readings_path(:organization_id => @current_organization, :classroom_id => @classroom, :subject_id => si) %>
					<strong><%= col_label %></strong>
					<span></span>
					</td>
					</tr>
					<% end -%>
			</tbody>
		</table>
	<br/>

	</div>
<% else -%>
	<br/>
	<span style ="text-align:center; color: #C83A14; font-size:11px">
	<i>* * *  There Are No Related Readings In The Library At This Time  * * *</i>
	</span>
<% end -%>	

</div>
</div>
