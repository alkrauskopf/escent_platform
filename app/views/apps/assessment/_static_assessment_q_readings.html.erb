
	<% assess_header = "header" + qdx.to_s -%>
	<% assess_show = "show" + qdx.to_s-%>
	<% assess_list = "list" + qdx.to_s-%>
	<% assess_hide = "hide" + qdx.to_s-%>

	<table  id="<%= assess_header%>" style="width:500px;">
		<tbody>  
			<style type="text/css" media="screen">
	    		table,tr,td { border:none; }
				table tr:hover{
        		background-color: transparent;
      			}
   			</style>
			<% col_label = q.act_rel_reading.label.titleize -%>
			<tr>
				<td style=" width:20px; color: #000000; vertical-align:middle; font-size:10px" >
					&nbsp;
				</td>
				<td style=" width:20px; color: #000000; vertical-align:middle; font-size:10px" >
					&nbsp;
				</td>
				<td id="<%=assess_show%>" style="width:80px; color: #000000; vertical-align:middle;text-align:right; font-size:10px" >
					<u>Show Reading</u>
				</td>
				<td  colspan=2 style="vertical-align:top; color: #000000; text-align:left; font-size:10px; margin-top:0px; font-weight:normal" >
					<i><%= col_label %></i>
				</td>
			</tr>
		</tbody>
	</table>

	<table id="<%=assess_list%>">
		<tbody>  
			<style type="text/css" media="screen">
	    		table,tr,td { border:none; }
				table tr:hover{
        		background-color: transparent;
      			}
   			</style>
			<% col_label = q.act_rel_reading.label.titleize -%>
			<tr>
				<td style=" width:20px; color: #000000; vertical-align:middle; font-size:10px" >
					&nbsp;
				</td>
				<td style=" width:20px; color: #000000; vertical-align:middle; font-size:10px" >
					&nbsp;
				</td>
				<td id="<%=assess_hide%>" style="width:80px; color: #000000; vertical-align:middle;text-align:left; font-size:10px" >
					<u>Hide Reading</u>
				<td  colspan=2 style="vertical-align:top; color: #000000; text-align:left; font-size:10px; margin-top:0px; font-weight:normal" >
					&nbsp;
				</td>
			</tr>
			<tr>
				<td style=" width:20px; color: #000000; vertical-align:middle; font-size:10px" >
					&nbsp;
				</td>
				<td style=" width:20px; color: #000000; vertical-align:middle; font-size:10px" >
					&nbsp;
				</td>
				<td  colspan=3 style="width:460px; text-align:left;">
					<%= simple_format q.act_question_reading.reading %>
				</td>
			</tr>
		</tbody>
	</table>

<script type="text/javascript">
jQ(document).ready(function() {
  		  jQ("#<%=assess_header%>").show();
		  jQ("#<%=assess_list%>").hide();		  

	jQ("#<%=assess_show%>").click(function() {
		  	jQ("#<%=assess_header%>").hide();	 
	   		jQ("#<%=assess_list%>").slideDown("slow");
	})

	jQ("#<%=assess_hide%>").click(function() {
	   		jQ("#<%=assess_list%>").slideUp("slow");
	   		jQ("#<%=assess_header%>").show();
	})	
});
</script>