<div id="assess_options">
  <div class="row">
    <div class="col-md-7">
      <%= @current_user.last_name %> Students Only:
    </div>
    <div id="student_filter" class="col-md-5" style="padding-top:.7em;">
      <% if @current_user.ifa_user_option.is_student_filtered %>
          <%= (image_tag "button_enabled.png",:width => 12) -%>
      <% else -%>
          <%= (image_tag "button_disabled.png",:width => 12) -%>
      <% end -%>
    </div>
  </div>
  <div class="row">
