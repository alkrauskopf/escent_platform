<script type="text/javascript">
jQ(document).ready(function() {
  		  jQ("#filter_header").show();
		  jQ("#filter_list").hide();		  

	jQ("#filter_show").click(function() {
		  	jQ("#filter_header").hide();	 
	   		jQ("#filter_list").slideDown("slow");
	})

	jQ("#filter_hide").click(function() {
	   		jQ("#filter_list").slideUp("slow");
	   		jQ("#filter_header").show();
	})	
});
