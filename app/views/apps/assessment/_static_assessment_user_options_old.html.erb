<script type="text/javascript">
jQ(document).ready(function() {
 	jQ("#period_change").click(function(){
		var period = jQ('#period_begin').val();
		var assessment_id = '<%= @assessment.public_id %>';
		var user = "<%= @current_user.public_id %>";
		var url = "<%= ifa_user_options_assessment_update_url(:organization_id => @current_organization) %>";
			jQ.get(url, {'assessment_id':assessment_id, 'begin_date':period, 'user_id': user}, function(data) {
			jQ("#assess_stats").html(data); 
	   		jQ("#assess_stats").show();
		  	jQ("#filter_header").hide();	 
	   		jQ("#filter_list").show();
			});
	})
});
</script>

