	</table>		
		<div class="FormRow submit_warp" style =" padding-left:650px;font-size:18px;font-weight:normal">
			<br/>
			<%= submit_tag "Update Question", :class =>"fsn-button ui-button ui-state-default ui-corner-all save" %>
		</div>
	<% end -%>
</div>		

	
		
		
