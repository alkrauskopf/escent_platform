
<div style = "font-size:12px; color: #000000;padding-left:10px;">
	<% unless @reading_list.size.zero? %>
	<div id="assign_resources_panel">
		<table id="authorization_levels"  class="tablesorter" style="width:99%;">
			<tbody>  
				<% gen_ids = @reading_list.group_by(&:act_genre_id) -%>
				<% gen_ids.each do |gi, readings| -%>
					<% genre_name = ActGenre.find(gi).name -%> 
					<% col_label = readings.size.to_s + " " + genre_name-%>
					<tr>
					<td class="authorization_levels_close" style ="font-size:12px; color:#C73914">
					<%= link_to '', :controller => "apps/assessment", :action => :genre_readings, :organization_id => @current_organization, :classroom_id => @classroom,  :subject_id => @current_subject.id, :genre_id => gi %>
					<%= col_label %>
					<span></span>
					</td>
					</tr>
					<% end -%>
			</tbody>
		</table>
	<br/>

	</div>
<% else -%>
	<br/>
	<span style ="color: #C83A14; font-size:11px">
	<center><i>* * *  There Are No Related Readings In The Library At This Time  * * *</i></center>
	</span>
<% end -%>	

</div>
<script type="text/javascript" charset="utf-8">
jQ(document).ready(function() { 
	jQ('.fsn-button').addUIStateClass();
});
</script>
<script type="text/javascript" charset="utf-8">
jQ(document).ready(function() {
	jQ('#authorization_levels .authorization_levels_close').toggleAuthorizationLevels();
	jQ('#authorization_levels .authorization_levels_open').toggleAuthorizationLevels();	
  jQ("#roles").tablesorter({ headers: { 1: { sorter: false }} });
});
</script>