
<div class="row">
  <div class="col-md-3">
    <div class="assess_header_left">
      <%= image_tag(@current_organization.logo.url, :alt => @current_organization.name, :width => 150) if @current_organization.logo.file? -%>
    </div>
  </div>
  <div class="col-md-6">
      <div class= "assess_header_ctr">
        <%= @classroom_name   %>
      </div>
  </div>
  <div class="col-md-3">
     <div class="assess_header_right">
        <% if @student_pic -%>
          <%= image_tag @current_user.picture.url(:thumb) %>
        <% end %>
     </div>
  </div>
</div>
<div class="row">
  <div class="col-md-3">
    <div class= "assess_header_text">
      <%= @teacher.nil? ? '' : ('Teacher: ' + @teacher.full_name) %>
    </div>
  </div>
  <div class="col-md-6">
    <div class= "assess_header_text">
      <%=@assessment.act_subject.name.upcase %>,&nbsp;<%= Time.now.strftime("%B %d, %Y")%>
    </div>
  </div>
  <div class="col-md-3">
    <div class= "assess_header_text">
      <%= @student_name %>
    </div>
  </div>
</div>
<hr>
<div class="row">
<%= form_for(:act_submission, :url => ifa_submission_add_path(:organization_id => @current_organization, :classroom_id => @classroom, :topic_id => @topic,:assessment_id => @assessment,:begin_time => @begin_time, :function => "Submit")) do |form| -%>
  <%= render :partial => "/shared/error_and_notice" %>
  <div class="row">
    <div class="col-md-2" >
      <div class= "assess_form_left">
        <% if @preview -%>
          <%= link_to 'Return', ifa_assessment_view_path(:organization_id => @current_organization, :classroom_id => @classroom, :assessment_id => @assessment)%>
        <% else -%>
          <%= link_to 'Return', ifa_assessment_take_path(:organization_id => @current_organization, :classroom_id => @classroom, :assessment_id => @assessment, :topic_id => @topic), :confirm => "Are You Sure? You Have Not Submitted Your Assessment." %>
        <% end -%>
      </div>
    </div>
    <div class="col-md-8">
      <div class= "assess_form_title">
        <%= @assessment.name.titleize %>
      </div>
    </div>
    <div class="col-md-2"></div>
  </div>
	<table style="width:775px; margin-left:0px; border:0px">
		<tbody>
		<style type="text/css" media="screen">
	    table,tr,td { border:medium}
		table tr:hover{
        background-color: transparent;
      }
    	</style>

			  <% @assessment.act_questions.each_with_index do |quest,idx| %>
   			 	<%= render :partial => "view_question_in_assessment" , :locals => {:quest => quest, :num => idx+1} %>
			<% end -%>
				<tr>
					<td colspan=5 style="vertical-align:top; text-align:center; padding-top:5px; padding-bottom:5px; padding-left:0px;color: #C83A14; font-size:10px; margin-top:0px; font-weight:normal" >
						<center>- - -  End Of Assessment - - -</center><br/>
					</td>
				</tr>
				<tr>
					<td colspan=5 style="vertical-align:top; text-align:center; padding-top:5px; padding-bottom:5px; padding-left:0px;color: #000000; font-size:11px; margin-top:0px; font-weight:normal" >
						<center>Optional Comment: <%= text_field :act_submission, :student_comment, :size => 55, :maxlength => 150 %></center>
					</td>
				</tr>
		</tbody>
	</table>

	
	<div class="FormRow submit_warp">
	  <% unless @preview -%>
		<%= render :partial => "submit_assessment_button" %>
	  <% end -%>
	</div>	
<% end -%>
	<% if @preview -%>
		<center><%= button_to "Submit", ifa_assessment_update_path(:organization_id => @current_organization, :classroom_id => @classroom, :assessment_id => @assessment), :class => "fsn-button ui-button ui-state-default ui-corner-all" %></center>
		<br/><br/>
	<% end -%>

</div>
