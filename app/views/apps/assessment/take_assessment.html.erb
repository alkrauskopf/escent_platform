<div id="mainContent">

  	<div style="text-align:center;  word-wrap:break-word; color: #C83A14;  font-size: 18px; font-style: normal; font-weight: bold">
		<br/><strong><%= @classroom.course_name.upcase  %> </strong><br/>
	</div>
	
	<%= render :partial => "/shared/error_and_notice" %>
		
	<div style="float:none;width:97%;" class="mempro_box clear">
	 <p style="float:right; word-wrap:break-word; overflow:hidden;">
      <br />
			<% return_link = "Return To " + @classroom.course_name.upcase %>
			<%= link_to return_link, :controller => "/site/site", :action => :static_classroom, :organization_id => @current_organization, :topic_id => @topic, :id => @classroom%>
	</p>
    <div id="member_ico">
      <% if @current_user.picture.url.split("/").last == "missing.png" %>
        <%= image_tag "member_ico.gif" %>
 		<br/>
		<%= link_to "Please Add Your Picture", {:controller => "/users", :action => :edit_profile, :organization_id => @current_organization, :id => @current_user} %>

      <% else %>
        <%= image_tag @current_user.picture.url(:thumb) %>
      <% end %>
    </div>
    <div id="member_info">
			<div style="float:left; width:630px;">
	      <p class="name" style="width:630px; word-wrap:break-word; overflow:hidden; font-size:16px" > <%= @current_user.full_name %> <br/></p>

		  <p class="homeorginfo_label"> 
			<br/><%= link_to (image_tag @current_organization.logo.url :med_thumb), :controller => "/site/site", :action => :static_organization, :organization_id => @current_organization -%></br>
		  </p>
					
              <% if @submission && @success%>
			 		<span class="normal_text"style="width:630px; font-size:12px; text-align:center; width: 200px; font-weight:normal; color:#C73914;">
						<br/>
						<strong> <i>Successful Assessment Submission </i><%= @current_user.first_name -%>!</strong><br/>
						<br/>
						<% @current_organization.ifa_org_option.act_masters.each do |mstr| -%>
						<% sms = mstr.sms_new(@submission, @submission.act_subject, Date.today, Date.today, @current_organization.ifa_org_option.sms_h_threshold, false) %>
						<% unless sms == 0 -%>
						Preliminary <%= mstr.abbrev %> Score: <strong><%= sms %></strong><br/>
						<% end -%>					
						<% end -%>
						Time To Complete: <strong><%= number_with_precision(@submission.duration/60.0, :precision => 1) %> Minutes </strong><br/>
					</span>
					<span style ="width:630px; word-wrap:break-word; overflow:hidden; font-size:12px; padding-left:00px; font-weight:normal; color:#000000;">
						<% if @classroom.ifa_classroom_option.is_ifa_notify %>
							Your <%= @classroom.course_name %>&nbsp;teacher has been notified.<br/>
						<% end -%>
						<% if @submission.is_final -%>
							&nbsp;<br/>
						<% else -%>
							Your dashboard will be updated when your teacher reviews the assessment.<br/>
					 	<% end -%>
					 </span>
				<% else -%>
			 		<span class="normal_text"style="width:630px; font-size:12px; text-align:center; width: 200px; font-weight:normal; color:#C73914;">
						<br/>
						<br/>
					</span>
				<% end -%>
				<br/>
				<% unless @range_list.size.zero? -%>
					<span style ="width:630px; word-wrap:break-word; overflow:hidden; font-size:12px; font-weight:normal; color:#000000;">
					<% unless @suggested_topics.nil? || @suggested_topics.empty?%>
						<%= @classroom.course_name %> Units you should be concentrating on.<br/>
						<% @suggested_topics.each do |tpc| -%>
							<span style ="width:630px; word-wrap:break-word; overflow:hidden; font-size:12px; padding-left:200px; font-weight:normal; color:#000000;">
								-&nbsp;&nbsp;&nbsp;<%= link_to tpc.title, :controller => "/site/site", :action => :static_classroom, :organization_id => @current_organization, :topic_id => tpc, :id => @classroom %><br>
							</span>
						<% end -%>
						<br/>
					<% end -%>
		  			</span>
				<% else -%>	
					<span style ="width:630px; word-wrap:break-word; overflow:hidden; font-size:12px; font-weight:normal; color:#000000;">
					<%= @current_user.first_name %>, you have no finalized formative assessment results thus far.<br/>
					Select an assessment below.
		  			</span>
				<% end -%>
<!--
 		  <%#= render :partial => "ifa_dashboard_updates" %>
-->
		</div>	
    </div>
	<% unless @range_list.size.zero? -%>
	    <%= render :partial => "/apps/assessment/ifa_dashboard", :locals => {:div_key => (@entity_dashboard ? @entity_dashboard.public_id : "assess"), :dashboard => (@entity_dashboard ? @entity_dashboard : nil)} %>	  
	<% end -%>
  </div>	



  <div id="control_panel" >
 
   <ul>

      <li>
		<%  tab_1_label = @classroom.course_name + " Assessments" %>		
		<a href="#tabs-1"><span class="tab_label">
		<%= tab_1_label %></span></a>				
		</li>

	  <li>
		<%  tab_2_label = "Your Growth" %>
		<a href="#tabs-2"><span class="tab_label">
		<%= tab_2_label %></span></a>								
      </li>

	  </li>

    </ul>



	

<div id="tabs-1" class="favorite_organizations" style="width:900px; margin-left:20;">


	<%= render :partial => "list_classroom_assessments"  -%>


</div>


	<div id="tabs-2" class="favorite_organizations" style="width:900px">

	<div style = "font-size:12px; color: #000000;padding-left:10px;">
	<% unless @assessment_subjects.size.zero? %>
		<br/>
		<span style ="color: #C83A14; font-size:18px">
		<center><strong>Your Assessment History, <%= @current_user.first_name %></strong></center>
		</span>

	<div>

	<br/>
	<div id="assign_resources_panel">
		<table id="authorization_levels" class="tablesorter" style="width:99%;">
			<tbody>  
				
				<% @assessment_subjects.each do |sub| -%>
					<tr>
						<td class="authorization_levels_close">
						<%= link_to '', :controller => "apps/assessment", :action => :growth_dashboards, :organization_id => @current_organization, :classroom_id => @classroom, :topic_id => @topic, :group => "student", :subject_id => sub.id, :id => @current_user %>
						<strong><%= sub.name.titleize %></strong>
						<span></span>
						</td>
					</tr>
				<% end -%>
			</tbody>
	</table>
	<br/>

	</div>
<% else -%>
	<br/>
	<span style ="color: #C83A14; font-size:16px">
	<center><i>* * *  You Have No Finalized Assessments On Record, <%= @current_user.first_name %> * * *</i></center>
	</span>
<% end -%>	

</div>
</div>


   </div>
	

</div>


<br style="clear:both" />

<script type="text/javascript" charset="utf-8">
jQ(document).ready(function() {
	jQ('#authorization_levels .authorization_levels_close').toggleAuthorizationLevels();
	jQ('#authorization_levels .authorization_levels_open').toggleAuthorizationLevels();	
  jQ("#roles").tablesorter({ headers: { 1: { sorter: false }} });
});
</script>

<script type="text/javascript" charset="utf-8">
  jQ(document).ready(function(){
    jQ('#control_panel').tabs();
  });
</script>