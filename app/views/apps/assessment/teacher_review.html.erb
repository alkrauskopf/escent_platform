<div>
  <div class= 'row panel_title_blue'>
    <%= @classroom.course_name.upcase  %>
  </div>
  <hr>
	<%= render :partial => "/shared/error_and_notice" %>
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-2">
      <div class="row ifa_teacher_box">
        <%= @current_user.full_name %>
      </div>
    </div>
    <div class="col-md-7">
      <div class="row ifa_teacher_review">
        <% unless @range_list.size.zero? -%>
            <%= render :partial => "/apps/assessment/ifa_dashboard_with_toggle" %>
        <% else -%>
          No Recent <%= @current_standard.abbrev.upcase%> Assessments
        <% end -%>
      </div>
    </div>
    <div class="col-md-1">
      <%= link_to 'Return', offering_view_path(:organization_id => @current_organization, :topic_id => @topic, :id => @classroom) %>
    </div>
    <div class="col-md-1"></div>
  </div>

  <div id="control_panel" >
    <ul>
      <li>
        <%  tab_1_label = "Pending Assessments" %>
        <a href="#tabs-1"><span class="tab_label">
        <%= tab_1_label %></span></a>
      </li>
      <li>
        <%  tab_2_label = "Student Assessments" %>
        <a href="#tabs-2"><span class="tab_label">
        <%= tab_2_label %></span></a>
      </li>
      <li>
        <%  tab_3_label = @classroom.course_name + " Classroom Growth" %>
        <a href="#tabs-3"><span class="tab_label">
        <%= tab_3_label %></span></a>
      </li>
    </ul>

    <div id="tabs-1" class="row">
      <div class="col-md-1"></div>
      <div class="col-md-10">
        <%= render :partial => "/apps/assessment/teacher_review_pending" %>
      </div>
      <div class="col-md-1"></div>
    </div>
    <div id="tabs-2" class="row">
      <div class="col-md-1"></div>
      <div class="col-md-10">
        <%= render :partial => "/apps/assessment/teacher_review_assessments" %>
      </div>
      <div class="col-md-1"></div>
    </div>
    <div id="tabs-3" class="row">
      <div class="col-md-1"></div>
      <div class="col-md-10">
        <%= render :partial => "/apps/assessment/teacher_review_growth" %>
      </div>
      <div class="col-md-1"></div>
    </div>
  </div>
<script type="text/javascript" charset="utf-8">
  jQ(document).ready(function(){
    jQ('#control_panel').tabs();
  });
</script>
</div>