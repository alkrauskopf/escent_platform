	
<div id="panelists_activity" >
	<div style ="text-align:center; color: #2061a5; font-size:14px; margin-top:5px; font-weight:normal">
		<%= @current_organization.provider_app_name(@current_application) %>&nbsp;Activity
	</div>
	<% unless @current_organization.bloggers.empty? %>
		<% @current_organization.bloggers.each do |panelist| -%>
			<% unless @current_organization.blog_posts.for_user(panelist).empty? -%>
				<table id="panelist_<%= panelist.public_id %>"   style="border:0px solid #ddd; width:840px; margin-left:40px;">
					<tbody>  
						<tr>
							<td class="resource_levels_close">
                <%= link_to '', :controller => "apps/blogs", :action => :panelist_activity, :organization_id => @current_organization, :panelist_id => panelist  %>
                <%= panelist.last_name %>&nbsp;<small>(<%= @current_organization.blog_posts.for_user(panelist).size%>)</small>
                <span></span>
							</td>
						</tr>
					</tbody>
				</table>
			<script type="text/javascript" charset="utf-8">
			jQ(document).ready(function() {
				jQ('#panelist_<%= panelist.public_id %> .resource_levels_close').toggleResourceLevels();
				jQ('#panelist_<%= panelist.public_id %> .resource_levels_open').toggleResourceLevels();	
			});
			</script>
			<% end -%>
		<% end -%>
	<% else -%>
	
	  	<div style="text-align:center;  word-wrap:break-word; color: #C83A14;  font-size: 13px; font-style: normal; font-weight: normal">
				<br/><br/>
				* * * No Panelists * * * 
				<br/><br/><br/><br/>
		</div>
	<% end -%>

</div>
