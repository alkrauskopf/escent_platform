<div id="post_form">
<%= render :partial => "/shared/error_and_notice" %>

	<table style="width:550px; margin-left:100px; padding-bottom:40px; border:0px solid #ddd;">
		<tbody>
			<style type="text/css" media="screen">
		    table,tr,td { border:medium}
			table tr:hover{
	        background-color: transparent;
	      }
	    	</style>																									
			<tr >
				<td style="width:110px; width:fixed; vertical-align:top; border:0px solid #ddd;  padding-left:17px; padding-top:0px; text-align:center; color: #000000; font-size:11px; font-weight:normal">
					Title
				</td>

				<td style=" vertical-align:top; border:0px solid #ddd;  padding-left:0px; padding-top:0px; text-align:center; color: #000000; font-size:11px; font-weight:normal">
				     <%= text_field :blog_post, :title, :value=>  blog_post.title, :size => 70, :maxlength => 250 %>		
				</td>
			</tr>
			<tr >
				<td style="width:110px; width:fixed; vertical-align:top; border:0px solid #ddd;  padding-left:17px; padding-top:0px; text-align:center; color: #000000; font-size:11px; font-weight:normal">
					Point-Of-View
				</td>

				<td style=" vertical-align:top; border:0px solid #ddd;  padding-left:0px; padding-top:0px; text-align:center; color: #000000; font-size:11px; font-weight:normal">
				     <%= text_field :blog_post, :pov, :value=>  blog_post.pov, :size => 32 %>		
				</td>
			</tr>
			<tr >
				<td style="width:110px; width:fixed; vertical-align:top; border:0px solid #ddd;  padding-left:17px; padding-top:0px; text-align:center; color: #000000; font-size:11px; font-weight:normal">
					Body<br/>
					<span style = "color: #C73914; font-size:10px;">
						To Partition, <br/>Insert: [-more-]
					</span>
				</td>

				<td style=" vertical-align:top; border:0px solid #ddd;  padding-left:0px; padding-top:0px; text-align:center; color: #000000; font-size:11px; font-weight:normal">
				     <%= text_area :blog_post, :body,  :value => blog_post.body , :rows => 15, :cols => 55 %>		
				</td>
			</tr>
			<tr >
				<td style="width:110px; width:fixed; vertical-align:top; border:0px solid #ddd;  padding-left:17px; padding-top:0px; text-align:center; color: #000000; font-size:11px; font-weight:normal">
					Position
				</td>

				<td style=" vertical-align:top; border:0px solid #ddd;  padding-left:0px; padding-top:0px; text-align:center; color: #000000; font-size:11px; font-weight:normal">
					<%= text_field :blog_post, :position, :value=>(blog_post.position.nil? ? blog.blog_posts.size+1 : blog_post.position), :size => 2, :maxlength => 2 %>
				</td>
			</tr>
		</tbody>
	</table>
</div>
