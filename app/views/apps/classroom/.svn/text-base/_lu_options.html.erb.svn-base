<div id="lu_options_<%=lu.public_id%>" >
	<div style ="color: #2061a5; font-size:13px; padding-top:5px; font-weight:normal"> 
		<u>Options</u>
	</div>
	<table style="width:750px; border:0px solid #ddd;">
		<tbody>
			<tr style=" border:0px;">
				<% featured_button = lu.featured? ? "button_enabled.png" : "button_disabled.png" -%>				
				<td   id="toggle_feature" style="width:30px; width:fixed; border:0px solid #ddd; font-size:11px; cursor:pointer; vertical-align:middle; text-align:left; color: #C83A14;font-weight:normal;">
						<%= (image_tag featured_button,:width => 12) -%>
				</td>			
				<td  style="width:220px; width:fixed; border:0px solid #ddd; font-size:12px; padding-left:0px; vertical-align:middle; text-align:left;color: #2061a5;font-weight:normal;">
						Unit&nbsp;<%= lu.featured? ? "Currently Featured" : "Not Currently Featured" %>
				</td>		
				<% open_button = lu.open? ? "button_enabled.png" : "button_disabled.png" -%>				
				<td   id="toggle_discussion" style="width:30px; width:fixed; border:0px solid #ddd; font-size:11px; cursor:pointer; vertical-align:middle; text-align:left; color: #C83A14;font-weight:norm;">
						<%= (image_tag open_button,:width => 12) -%>
				</td>			
				<td  style="width:220px; width:fixed; border:0px solid #ddd; font-size:12px; padding-left:0px; vertical-align:middle; text-align:left;color: #2061a5;font-weight:normal;">
						Discussion Forum&nbsp;<%= lu.open? ? "Open" : "Closed" %>
				</td>
				<% notify_button = lu.notify? ? "button_enabled.png" : "button_disabled.png" -%>				
				<td   id="toggle_notify" style="width:30px; width:fixed; border:0px solid #ddd; font-size:11px; cursor:pointer; vertical-align:middle; text-align:left; color: #C83A14;font-weight:normal;">
						<%= (image_tag notify_button,:width => 12) -%>
				</td>			
				<td  style=" border:0px solid #ddd; font-size:12px; padding-left:0px; vertical-align:middle; text-align:left;color: #2061a5;font-weight:normal;">
						Discussion Notifications&nbsp;<%= lu.notify? ? "On" : "Off" %>
				</td>
			</tr>
		</tbody>					
	</table>
	<table style="width:750px; border:0px solid #ddd;">
		<tbody
			<tr style=" border:0px solid #ddd;">
				<td  id="clear_discussion" style="width:50px; width:fixed; border:0px solid #ddd; font-size:11px; padding-left:5px; vertical-align:middle; text-align:left; color: #2061a5;font-weight:normal;">
					<span class="fsn-button ui-button ui-state-default ui-corner-all" style="cursor:pointer">
						Clear
					</span>
				</td>			
				<td  style="width:200px; width:fixed; border:0px solid #ddd; font-size:12px; padding-left:0px; vertical-align:middle; text-align:left;color:#2061a5;font-weight:normal;">
					<%= pluralize(lu.discussions.active.size.to_s, "Discussion Comment") %>
				</td>
				<td   style="width:50px; width:fixed; border:0px solid #ddd; font-size:11px; padding-left:0px; vertical-align:middle; text-align:left; color: #2061a5;font-weight:normal;">
					&nbsp;
				</td>			
				<td  style="width:200px; width:fixed; border:0px solid #ddd; font-size:11px; padding-left:0px; vertical-align:middle; text-align:left;color: #2061a5;font-weight:normal;">
					&nbsp;
				</td>
				<td   style="width:50px; width:fixed; border:0px solid #ddd; font-size:11px; padding-left:0px; vertical-align:middle; text-align:left; color: #2061a5;font-weight:normal;">
					&nbsp;
				</td>			
				<td  style="width:200px; width:fixed; border:0px solid #ddd; font-size:11px; padding-left:0px; vertical-align:middle; text-align:left;color:#2061a5;font-weight:normal;">
					&nbsp;
				</td>
			</tr>
		</tbody>					
	</table>
</div>

<script type="text/javascript">
jQ(document).ready(function() {
	jQ('#toggle_feature').click(function() {
		var url = "<%= url_for :controller => '/apps/classroom', :action => :toggle_lu_options, :organization_id => @current_organization, :topic_id => lu, :option=>"feature" %>";
			jQ.get(url, { }, function(data) {
			jQ("#lu_options_<%=lu.public_id%>").html(data); 
	   		jQ("#lu_options_<%=lu.public_id%>").show();
			});
	})
});
</script>

