<div id="class_surveys" style="padding:0px; width:99%;  border:0px; margin: 0px 0px 0px 0px; text-align:left; min-height:5px;">
	<table style="width:99%;">
		<thead>
			<tr>
				<th><strong>STUDENTS</strong></th>											
			</tr>
		</thead>
	</table>

		<% classroom.classroom_periods.each do |period| -%>
				<table id="period_<%= period.public_id %>" class="tablesorter" style="width:99%;">
					<tbody>
						<% col_label = "View " + pluralize(period.students.size,  " Student") + ": " + period.name  %>
						<tr>
						<td class="ifa_levels_close" style=" color: #2061a5;">
							<%= link_to '', :controller => "apps/classroom", :action => :manage_period_students, :organization_id => @current_organization, :period_id => period, :classroom_id => classroom %>
							<%= col_label %>
							<span></span>
						</td>
						</tr>
					</tbody>
				</table>
<script type="text/javascript" charset="utf-8">
jQ(document).ready(function() {
	jQ('#period_<%= period.public_id %> .ifa_levels_close').toggleIfaLevels();
	jQ('#period_<%= period.public_id %> .ifa_levels_open').toggleIfaLevels();
});
</script>

		<% end -%>
		<br/>

</div>

