<div style="padding-top:10px;padding-bottom:0px;">
	<span id="back_<%= folder.nil? ? '' : folder.public_id %>_<%= content.id.to_s%>" style="cursor:pointer">
		<button>Back</button>
	</span><br/>
</div>
	<%= render :partial => "/shared/content", :locals => {:panel_id_prefix => "folder_content_" + folder.id.to_s, :content => content} %>
	
<script type="text/javascript" charset="utf-8">
  jQ(document).ready(function() {
			jQ("#back_to_folder_content<%=folder.id.to_s%>").click(function() {
			  url = jQ(this).attr("href")
			  jQ.post(url, {}, function(data) {
			    jQ("#folder_panel_<%=folder.id%>").html(data)
			  })
			  return false;
			})
  })
</script>
<script type="text/javascript">
jQ(document).ready(function() {
	jQ('#back_<%= folder.nil? ? '' : folder.public_id %>_<%= content.id.to_s%>').click(function() {
		var url = "<%= url_for :controller => '/apps/classroom', :action => :list_folder_resources, :organization_id => @current_organization, :folder_id => folder.id, :topic_id => lu  %>";
			jQ.get(url, { }, function(data) {
			jQ("#folder_content_panel_<%= folder.nil? ? '': folder.id.to_s%>").html(data); 
	   		jQ("#folder_content_panel_<%= folder.nil? ? '': folder.id.to_s%>").show();
			});
	})
});
</script>