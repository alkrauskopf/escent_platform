
	<% (admin ? (subject_parent.nil? ? @current_organization.offerings_in_folder(folder) : @current_organization.unfoldered_offerings_for_parent_subject(subject_parent)) : @current_user.offerings_taught(@current_organization)).each do|offering| -%>
		<table style="width:680px; width:fixed; text-align:left; margin-top:0px; padding-bottom:0px; border:0px solid #ddd;">
			<tbody>  
				<style type="text/css" media="screen">
		    		table,tr,td { border:none; }
					table tr:hover{
	        		background-color: transparent;
	      			}
	   			</style>
					<tr style="border:0px solid #ddd;">
						<td  style="  width:40px; width:fixed; border:0px solid #ddd; vertical-align:top; text-align:left;padding-top:5px">
							<span class="fsn-button ui-button ui-state-default ui-corner-all">
								 <%= link_to "Edit" ,{:controller => "apps/classroom", :action => :setup_classroom, :organization_id => @current_organization,  :classroom_id => offering}%>
							</span>
						</td>
						<td  style="color: #2061a5;  border:0px solid #ddd; font-size:12px; line-height:1.4em; font-weight:bold; vertical-align:bottom; text-align:left;padding-bottom:5px;padding-top:5px">
							<%= offering.course_name %>
							<% unless offering.active? -%>
								<span style = "color: #C83A14; font-size:10px; padding-top:0px; font-weight:normal ">
									&nbsp;<i>(Not Active)</i>&nbsp;
								</span>
							<% end -%>
							<br/>
							<span style = "color: #000000; font-size:10px; padding-top:0px; font-weight:normal ">
								<%= offering.teachers.empty? ? "(No Teachers)" : offering.teacher_list %>&nbsp;&nbsp;
								<%= pluralize( offering.classroom_periods.size, " Period")%>,&nbsp;<%= pluralize( offering.learning_units.size, " Learning Unit")%>						
							</span>
						</td>
					</tr>	
				</tbody>
			</table>						
		<script type="text/javascript">
		jQ(document).ready(function() {
		  		  jQ("#<%=offering.public_id%>_off_header").show();
				  jQ("#<%=offering.public_id%>_off_descript").hide();		  
		
			jQ("#<%=offering.public_id%>_off_show").click(function() {
				  	jQ("#<%=offering.public_id%>_off_header").hide();	 
			   		jQ("#<%=offering.public_id%>_off_descript").slideDown("slow");
			})
		
			jQ("#<%=offering.public_id%>_off_hide").click(function() {
			   		jQ("#<%=offering.public_id%>_off_descript").slideUp("slow");
			   		jQ("#<%=offering.public_id%>_off_header").show();
			})	
		});
		</script>
		<% end -%>

