
<div class="offering_students">
	<table class="tablesorter"> 
		<tbody>
			<% if classroom.homework_option?%>
				<tr>
					<td width = 120px style ="vertical-align:top; padding-top:0px; padding-left:00px; padding-bottom:0px">
						<span class="fsn-button ui-button ui-state-default ui-corner-all" style="cursor:pointer">
							<%= link_to "Homework", offering_homework_path(:organization_id => @current_organization, :classroom_id => @classroom, :topic_id => @current_topic) %>
						</span>
					</td>
				</tr>
			<% end -%>
      <% if false %>  #  Bypass Email Funcationality
        <tr>
          <td width = 120px style ="vertical-align:bottom; padding-top:0px; padding-left:00px; padding-bottom:0px">
            <% send_link = 'Email Instructor' -%>
            <p width = 110px style="padding-top:20px; padding-left:10px; padding-bottom:5px; float:left; word-wrap:break-word; overflow:hidden;">
              <a id="send_message_link" href="#"><%= send_link %></a>
            </p>
            <div id="send_message_form" style="display:none">
              <%= form_tag %>
                <textarea id="message_content" name="message[content]" cols="35" rows="5"></textarea>
                <input type="hidden" name="to" value="teachers">
                <input type="hidden" name="message[sender]" value="<%= @current_user.full_name %>">
                <input type="hidden" name="classroom_id" value="<%= classroom.id %>">
                <input type="hidden" name="message[classroom_id]"value="<%= classroom.id %>">
                <input type="hidden" name="message[sender_id]"value="<%= @current_user.id %>">
                <input type="submit" class="submit" value="Send Message" />
              </form>
            </div>
            <div id="send_message_succefully" style="display:none">
              <i>Message Sent</i>
            </div>
            &nbsp;&nbsp;&nbsp;
          </td>
        </tr>
      <% end %>
		</tbody>
	</table>
	<% if classroom.ifa_classroom_option && @current_provider.ifa_org_option && classroom.act_subject-%>
		<table > 
			<tbody>
				<tr>
					<td width = 200px style ="vertical-align:top; padding-top:0px; padding-left:00px; padding-bottom:5px">
						<%#= link_to (image_tag "assess_pill.png",:width => 80), ifa_assessment_take_path(:organization_id => @current_organization,:classroom_id => classroom, :topic_id => topic) %>
            <%= link_to 'Assessments', ifa_assessment_take_path(:organization_id => @current_organization,:classroom_id => classroom, :topic_id => topic), class: 'btn btn-primary btn-xs' %>
					</td>
				</tr>
				<tr>
					<td style ="width:200px; padding-top:0px; padding-left:0px; padding-bottom:0px; color:#C83A14; font-size:11px;">
		 				<% @current_provider.ifa_org_option.act_masters.each do |mstr| -%>
							<% latest_scores = @current_user.current_sms_score(mstr,classroom.act_subject) %>
							<% if latest_scores -%>
								<% if latest_scores.sms_finalized > 0 -%>
					 				Estimated Level: <%= scores_with_sat_equivalent(latest_scores.sms_finalized, mstr, classroom.act_subject) %>
								<% end -%>
							<% end -%>
						<% end -%>
					</td>
				</tr>
			</tbody>
		</table>
	<% end -%>
</div>

