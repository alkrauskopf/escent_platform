
<div class="offering_teachers">
	<table class="tablesorter"> 
		<tbody>						
			<% if classroom.ifa_classroom_option -%>
				<tr>
					<td width = 20px style ="vertical-align:top; text-align:right; padding-top:0px; padding-right:8px; padding-bottom:10px;color:#0000FF; font-size:13px;">
						<%= @teacher_assessments.size %>
					</td>
					<td width = 180px style ="vertical-align:middle; padding-top:0px; padding-left:00px; padding-bottom:10px;color:#0000FF; font-size:13px;">
            <%#= link_to 'Assessments', ifa_teacher_review_path(:organization_id => @current_organization, :classroom_id => classroom, :topic_id => @current_topic), class: 'btn btn-primary btn-xs' %>
            <!-- NEW IFA Stuff -->
            <% if !@current_classroom_period.nil? %>
                <%= link_to 'Assessments', ifa_submission_teacher_review_path(:organization_id => @current_organization,:classroom_id => classroom.id, :period_id => @current_classroom_period.id, :topic_id => (@current_topic.nil? ? nil : @current_topic.id)), class: 'btn btn-primary btn-xs' %>
            <% end %>
          </td>
				</tr>
			<% end %>
			<% unless true || classroom.participants.size < 1 -%>   # Bypass messaging functionality
				<tr>
					<td colspan=2 style ="vertical-align:top; text-align:left; padding-top:0px; padding-left:00px; padding-bottom:15px;color:#0000FF; font-size:13px;">
						<% send_link = (image_tag "msg_students.png", :width => 100) -%>
						<p width = 200px style="padding-top:0px; padding-left:30px; padding-bottom:5px; float:left; word-wrap:break-word; overflow:hidden;"><a id="send_message_link" href="#"><%= send_link %></a></p>
             <div id="send_message_form" style="display:none">
               <%= form_tag %>
                  <textarea id="message_content" name="message[content]" cols="40" rows="5"></textarea>
                  <input type="hidden" name="to" value="students">
                  <input type="hidden" name="message[sender]" value="<%= @current_user.full_name %>">
                  <input type="hidden" name="classroom_id" value="<%= classroom.id %>">
                  <input type="hidden" name="message[classroom_id]"value="<%= classroom.id %>">
                  <input type="hidden" name="message[sender_id]"value="<%= @current_user.id %>">
                  <input type="submit" class="submit" value="Send Message" />
                </form>
						  </div>
					    <div id="send_message_succefully" style="display:none">
                <i>Message Sent</i>
					    </div>
						<br/>
					</td>																			
				</tr>									
			<% end -%>
		</tbody>	
	</table>
</div>

