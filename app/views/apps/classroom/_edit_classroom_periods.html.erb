

<div id="period_add" style = "font-size:12px; color: #000000;padding-left:0px;">
	<div id="period_data">

		<%= render(:partial => "list_periods", :locals => {:admin => admin}) %>

	</div>
</div>
<script type="text/javascript">
jQ(document).ready(function() {
	jQ('#add_period').click(function() {
		var period = jQ('#classroom_period_period_name').val();
		var teacher_id = jQ('#classroom_period_teacher_id').val();
		var duration = jQ('#classroom_period_duration').val();
		var url = "<%= url_for :controller => '/apps/classroom', :action => :add_period, :organization_id => @current_organization, :classroom_id => @classroom %>";
			jQ.get(url, {'period_name':period, 'teacher_id': teacher_id, 'duration': duration }, function(data) {
			jQ("#period_add").html(data); 
	   		jQ("#period_add").show();
			});
	})
});
</script>

