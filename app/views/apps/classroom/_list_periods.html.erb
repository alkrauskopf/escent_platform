
	<% unless classroom.classroom_periods.size == 0 -%>
		<table style="width:700px; margin-left:20px; border:0px solid #ddd;">
			<style type="text/css" media="screen">
		    		table,tr,td { border:none }
					table tr:hover{
	        		background-color: transparent;
	      			}
	   			</style>
				<tbody>  
					<tr  style="border:0px solid #ddd" >
						<td style="border:0px solid #ddd; color:#2061a5; font-size:12px; font-weight:normal; line-height:1.3em">
							<u><%=pluralize(classroom.classroom_periods.size, " Period")%></u>
						</td>
					</tr>
				<% classroom.classroom_periods.sort_by{|p| p.name.upcase}.each do |period| %>
					<tr  style="border:0px solid #ddd;" >
						<td style="border:0px solid #ddd; color:#2061a5; font-size:12px; font-weight:normal; line-height:1.3em">
							<%= period.name %>:&nbsp;&nbsp;
							<span style = "color:#000000; font-size:10px; font-weight:normal">
								<%= period.teachers.empty? ? "(No Teachers)" : period.teacher_list %>,&nbsp;&nbsp;<%= period.week_duration %>&nbsp;Min/Wk
							</span>
						</td>
					</tr>
				<% end -%>
			</tbody>
		</table>	
	<% else -%>
		<div style = "color:#2061a5; font-size:12px; font-weight:normal; text-align:center ">
			* *  No Periods Defined * *	
		</div>
	<% end-%>