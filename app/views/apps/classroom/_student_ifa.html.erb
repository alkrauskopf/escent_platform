<div class="left_panel_box">
  <div class="offering_panel_header ">
    <span class="offering_panel_text"><%= student.full_name %>&nbsp;Growth & Roadmaps</span>
  </div>
  <div class="left_panel_noscroll_box">
    <div class="row ifa_assessment_row">
      <% if !current_period.nil? %>
        <div class="col-md-3">
          <%= link_to 'Assess SAT', ifa_take_path(:organization_id => @current_organization,:classroom_id => classroom.id, :period_id => current_period.id, :topic_id => (topic.nil? ? nil : topic.id)), class: 'button_blue' %>
        </div>
        <div class="col-md-9 ass_label">
          <%= pluralize(student.act_submissions.for_subject(classroom.act_subject).size, ' Assessment') %>&nbsp;|
          <%= pluralize(student.ifa_dashboards.for_subject(classroom.act_subject).size, ' Dashboard') %>
        </div>
      <% else %>
          No Classroom Period Defined
      <% end %>
    </div>
    <% if classroom.ifa_plannable? %>
      <div class="row ">
        <div class="col-md-12 left_panel_title_row ">
          <%= pluralize(student.ifa_plans.size, ' SAT Growth Plan')%>
        </div>
      </div>
        <%= render :partial => 'apps/classroom/student_plannable_list', :locals=>{:classroom => classroom, :student=> student} %>
    <% end %>
  </div>
</div>