 <div class= 'lu_benchmark_list'>
   <div class="type_title">
     <%= pluralize(@benches.size, ' Benchmark') %> - <%= @strand.name %>
   </div>
   <% @benches.each.with_index do |bench, idx| %>
     <div class="row">
       <div class="col-md-1">
         <div class="benchmark_index">
           <%= (idx+1).to_s %>)
         </div>
       </div>
       <div class="col-md-10 benchmark_descript">
         <%= bench.description.html_safe %>&nbsp;(<%= bench.source_standard.abbrev %>)
       </div>
     </div>
   <% end %>
 </div>
 <% if !@improvements.empty? %>
   <hr>
   <div class= 'lu_benchmark_list'>
     <div class="type_title">
       <%= pluralize(@improvements.size, ' Improvement Idea') %>
     </div>
     <% @improvements.each.with_index do |improve, idx| %>
       <div class="row">
         <div class="col-md-1">
           <div class="benchmark_index">
             <%= (idx+1).to_s %>)
           </div>
         </div>
         <div class="col-md-10 benchmark_descript">
           <%= improve.description.html_safe %>
         </div>
       </div>
     <% end %>
   </div>
 <% end %>
 <hr>