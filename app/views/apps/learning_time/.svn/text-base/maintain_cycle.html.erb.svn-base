
	<div style ="color: #2061a5; font-size:16px; margin-top:0px; padding-top:20px; font-weight:bold"> 
		<strong><center><%=@task %>&nbsp;<%= @framework.name %>&nbsp;Cycle</center></strong>
	</div>
	
	<%= render :partial => "/shared/error_and_notice" %>

	
	<div class="Form clear">
		<% form_for(:elt_type, :url => {:controller => "/apps/learning_time", :action => :maintain_cycle, :organization_id => @current_organization, :elt_cycle_id=>@cycle, :elt_framework_id => @framework, :app_id => @app.id, :task=>@task, :function => @task}) do |form| %>
		
			<%= render :partial => "/apps/learning_time/form_cycle", :locals=>{:org=>@current_organization, :button_label=> (@task == "New" ? "Create Cycle" : "Update"), :framework => @framework, :cycle => @cycle} %>
		
		<% end -%>	
		<% unless @task == "New"%>
			<%= render :partial => "/apps/learning_time/assign_cycle_activities", :locals=>{:framework => @framework, :cycle => @cycle, :app => @app} %>
		<% end -%>				
		<% unless @task == "New" || @cycle.active?%>
			<% form_for(:elt_type, :url => {:controller => "/apps/learning_time", :action => :maintain_cycle, :organization_id => @current_organization, :elt_cycle_id=>@cycle, :elt_framework_id => @framework, :app_id => @app.id, :task=>@task, :function => "Delete"}) do |form| %>
				<div class="FormRow submit_warp" style= "padding-left:25px; padding-bottom:20px">	
					<br/>
					<%= submit_tag "Delete", :confirm => "Are you sure?", :class =>"fsn-button ui-button ui-state-default ui-corner-all save"  %>
					<br/>
				</div>			
			<% end -%>	
		<% end -%>
	</div>	

<style type="text/css" media="screen">
.FormRowData { width: auto; }
.form_title { display: block; font-family: Verdana,Arial,Helvetica,sans-serif; font-size:12px;	padding:10px 0; }
.FormSectionTitle { margin-top: 10px;}
* html .FormRow { float: none; display: block; width: 530px; }
</style>
