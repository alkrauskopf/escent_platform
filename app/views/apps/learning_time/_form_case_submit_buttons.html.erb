
  <% if elt_case.updatable?(@current_user)%>
      <div class='panel_row'>
        <div class='row'>
          <hr>
          <div class='col-md-3 '>
              <%= submit_tag 'Exit Without Saving', class: 'btn btn-warning btn-xs' %>
          </div>
          <div class='col-md-3'>
            <div style='float:right'>
              <%= submit_tag ('Submit ' + (elt_case.elt_type.elt_activity_type.nil? ? '' : elt_case.elt_type.elt_activity_type.name)), class: 'btn btn-success btn-xs' %>
            </div>
          </div>
          <div class='col-md-3 '>
            <div style='float:right'>
              <%= link_to 'Add Image', elt_case_evidence_add_path(:elt_case_id => elt_case), class: 'btn btn-info btn-xs', :target => '_blank' %>
            </div>
          </div>
          <div class='col-md-3 '>
            <div style='float:right'>
              <%= submit_tag 'Destroy', class: 'btn btn-danger btn-xs'%>
            </div>
          </div>
        </div>
      </div>
  <% else -%>
      <div class='row'>
        <hr>
        <div class='col-md-3 '>
          <%= link_to 'Return', elt_path(:organization_id => @current_organization), class: 'btn btn-primary btn-xs' %>
        </div>
        <div class='col-md-9'>
          &nbsp;
        </div>
      </div>
  <% end -%>
