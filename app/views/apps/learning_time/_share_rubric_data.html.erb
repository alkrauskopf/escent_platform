
<div id ="share_rubric_data" style = "font-size:12px; color: #2061a5; padding-left:0px;">
	<div style ="color: #2061a5; font-size:14px; margin-top:5px; font-weight:normal"> 
		<strong><center><%=org_type.name %>&nbsp;Knowledge Base</center></strong>
	</div>
	<% unless @current_organization.app_provider(app).elt_types.shareable.empty?%>
		<% if  @current_organization.provider?(app) -%>
			<center>
				<table style="width:350px;margin-left:0px; margin-top:0px;">
					<tbody>  
						<tr  style="border:0px solid #ddd;" >
							<td   id = "school" style="width:100px; width:fixed;  border:0px solid #ddd;vertical-align:middle;  padding-left:100px; padding-right:0px; padding-top:2px; text-align:center; color: #2061a5; font-size:10.5px; font-weight:bold">
								<%=  select(:school, :type_id,  OrganizationType.k12.collect{|t| [t.name, t.id]}, :prompt=> "Select School Type") %>
							</td>
						</tr>
					</tbody>
				</table>	
			</center>
		<% end -%>

<script type="text/javascript">
jQ(document).ready(function() {
	jQ('#school').change(function() {
		var type_id = jQ('#school_type_id').val();
		var url = "<%= url_for :controller => '/apps/learning_time', :action => :select_org_type, :organization_id => @current_organization, :app_id => app.id  %>";
			jQ.get(url, {'organization_type_id':type_id}, function(data) {
			jQ("#share_rubric_data").html(data); 
	   		jQ("#share_rubric_data").show();
			});
	})
});
</script>
		<% (@current_organization.provider?(app) ? @current_organization.elt_types.active : @current_organization.app_provider(app ).elt_types.active.shareable).each do |activity| -%>
			<% rubric_list = @current_organization.provider?(app) ? activity.rubrics.active :  activity.shareable_rubrics -%>
			<% active_rubric = rubric_list.empty? ? nil : rubric_list.last %>
			<% unless active_rubric.nil? %>
				<table style="width:850px;margin-left:20px; border:1px solid #ddd;">
					<style type="text/css" media="screen">
					    table,tr,td { border:medium}
						table tr:hover{
				        background-color: transparent;
				      }
			    	</style>
					<thead>
						<tr>
							<th style="font-weight:bold; font-size:12px;">
								<%= activity.name %>&nbsp;Data
							</th>
						</tr>
					</thead> 
					<tbody>  
						<tr  style="border:0px solid #ddd;" >
							<td   style= "border:0px solid #ddd;">
								<%= render :partial => "/apps/learning_time/schools_by_rubric", :locals=>{:org_type => org_type, :rubric => active_rubric, :rubric_list=> rubric_list, :activity=>activity, :app=>app} %>
							</td>
						</tr>
					</tbody>
				</table>	
			<% end -%>
		<% end -%>


	<% else -%>
		<div style ="color: #2061a5; font-size:14px; margin-top:5px; font-weight:bold"> 
			No Shareable Data For <%= @current_organization.app_provider(app).short_name %>&nbsp;Activities
		</div>	
	<% end -%>

</div>