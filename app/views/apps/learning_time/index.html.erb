<div id="main_content">

  <div style="text-align:center;  padding-top:10px; word-wrap:break-word; color: #C83A14;  font-size: 16px; font-style: normal; font-weight: bold">
		<%= @current_provider.short_name %>&nbsp;<%= @current_application.app_name(:provider=>@current_provider) %>
    <span style = "text-align:center; word-wrap:break-word; color: #C83A14;  font-size: 14px; font-style: normal; font-weight: normal">
      <br/><%= @current_cycle.nil? ? ("No Active Diagnostic Cycle For " + @current_organization.short_name) : @current_cycle.name %>
    </span>
	</div>

  <div style="float:none;width:96.7%;" class="mempro_box clear" style="margin-left:00px;">
<!--
			<div id="leftpane_appl">	
				<%#= render :partial => "apps/app_blog/app_blog_list", :locals=>{:app=>@current_application} %>
			</div>
			<div id="rightpane_appl"></div>
-->
			<div id="centerpane_appl">
              <% if !@current_cycle.nil? %>
                <%= render :partial => "/apps/learning_time/activity_map", :locals => {:org => @current_organization} %>
              <% end %>
                  <div id="activity_list">
					<% unless @current_provider.nil? || @current_cycle.nil? -%>
						<table style="width:600px; text-align:left;font-size:12px; margin-left:0px;">
							<tbody>  
								<style type="text/css" media="screen">
						    		table,tr,td { border:none; }
									table tr:hover{
					        		background-color: transparent;
					      			}
					   			</style>

								<% @current_cycle.activities.for_client.active.each do |activity| -%>
									<% if activity.has_active_indicators? %>
										<tr >
                      <td  style="width:10%; vertical-align:middle; text-align:left;padding-left:0px">
												<span class="fsn-button ui-button ui-state-default ui-corner-all">
                              <%= link_to 'Begin', elt_case_add_path(:organization_id => @current_organization, :elt_cycle_id => @current_cycle, :school_id=> @current_organization, :elt_type_id => activity)%>
                        </span>
											</td>
											<td  style="vertical-align:middle; text-align:left;padding-left:0px">
												<span style="color: #2061a5;"><%= activity.name %></span>
											</td>
										</tr>
									<% end -%>
								<% end -%>
							</tbody>
						</table>	
					<% end -%>
 		    	</div>
			</div>
  		</div>
	
	  <div id="control_panel" >
	   <ul>
	      <li>
			<%  tab_2_label = "All " + @current_organization.short_name + " Cases" %>
	        <a href="#tabs-2"><span class="tab_label">
			<%= tab_2_label %></span></a>
		  </li>
	      <li>
			<%  tab_3_label = (@current_provider.short_name  + " Community") -%>
	        <a href="#tabs-3"><span class="tab_label">
			<%= tab_3_label %></span></a>
		  </li>
	      <li>
			<%  tab_6_label = "Reports/Plans" %>
	        <a href="#tabs-6"><span class="tab_label">
			<%= tab_6_label %></span></a>
		  </li>

			<% if @admin -%>
		      <li>
				<%  tab_9_label = "Options" %>
		        <a href="#tabs-9"><span class="tab_label">
				<%= tab_9_label %></span></a>
			  </li>
			<% end -%>
			<% if @admin && @current_organization.provider?(@current_application) -%>
		      <li>
				<%  tab_7_label = "Surveys" %>
		        <a href="#tabs-7"><span class="tab_label">
				<%= tab_7_label %></span></a>
			  </li>
		      <li>
				<%  tab_8_label = "Tool Maintenance" %>
		        <a href="#tabs-8"><span class="tab_label">
				<%= tab_8_label %></span></a>
			  </li>
			<% end -%>
	    </ul>
	
		<div id="tabs-2" class="favorite_organizations" style="width:900px">
		    	<%= render :partial => "/apps/learning_time/list_case_cycles", :locals=>{:org=>@current_organization} %>
	   	</div>
		<div id="tabs-3" class="favorite_organizations" style="width:900px">
          <% org_type = (@current_organization == @current_provider) ? nil : @current_organization.organization_type %>
          <%= render :partial => "/apps/learning_time/share_rubric_data", :locals=>{:org_type => org_type,
                                                                                    :standard => nil,
                                                                                    :rubric => nil, :activity => @current_provider.elt_master_activity} %>
	   	</div>
		<div id="tabs-6" class="favorite_organizations" style="width:900px">
	    	<%= render :partial => "/apps/learning_time/analysis_summaries", :locals=>{ :org => @current_organization} %>
	   	</div>
		<% if @current_user.elt_admin_for_org?(@current_organization) -%>
			<div id="tabs-9" class="favorite_organizations" style="width:900px">
		    	<%= render :partial => "/apps/learning_time/manage_options", :locals=>{:org=>@current_organization, :app=>@current_application} %>
		   	</div>   	
	 	<% end -%>   	 	   
		<% if @current_user.elt_admin_for_org?(@current_organization) && @current_organization.appl_owner?(@current_application) -%>
			<div id="tabs-7" class="favorite_organizations" style="width:900px">
	 	  		<%= render :partial => "/apps/shared/sumarize_surveys", :locals => {:admin => @admin, :org => @current_organization, :app => @current_application} %>
		   	</div> 
			<div id="tabs-8" class="favorite_organizations" style="width:900px">
		    	<%= render :partial => "/apps/learning_time/maintain_tool", :locals=>{:org => @current_organization} %>
		   	</div>   	
	 	<% end -%> 
	 </div>

</div>

<script type="text/javascript">
	jQ(document).ready(function() {
		function showDialogContent(title, content_id) {
			$dialog = jQ("#view-content");
			// next line is broken.		
			$dialog.attr("title", title);
			jQ.post('<%= url_for :controller => :content, :action => :show, :organization_id => @current_organization %>', {'id':content_id}, function(data) {
				$dialog.html(data);
				$dialog.dialog('open');
			})
		}

		var addButtonAction = function() {
			jQ("button", jQ("#topic_content")).each(function() {
				jQ(this).click(function() {
					var title = jQ(this).parent("td").parent("tr").children("td").eq(0).text();
					var content_id = jQ(this).parent("td").parent("tr").attr("id");
					showDialogContent(title, content_id)
					return false;
				})
			})
		}
		jQ('.dialog').dialog('close');
		addButtonAction();

	})
</script>

<script type="text/javascript" charset="utf-8">
  jQ(document).ready(function(){
    jQ('#control_panel').tabs();
  });
</script>
