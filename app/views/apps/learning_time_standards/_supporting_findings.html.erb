<%= @findings.size %>
<table style="width:580px;margin-top:0px; border:0px solid #ddd;">
    <tbody>
    <% @findings.group_by{|f| f.activity}.each do |activity, findings| -%>
            <tr style="border-top:1px solid #ddd; ">
              <td colspan=2 style=" border:0px solid #ddd; color: #2061a5; font-weight:bold; vertical-align:bottom;text-align:left; font-size:10px" >
                <%= activity.name %>
              </td>
            </tr>
            <% findings.each do |finding| %>
                <tr>
                  <td style=" width:10%; border:0px solid #ddd; line-height:1.2em; color: #2061a5; padding-left:5px; padding-top:2px; padding-bottom:3px; vertical-align:top;text-align:left; font-size:10px" >
                    <%= finding.elt_case.submit_date.nil? ? "Date?" : finding.elt_case.submit_date.strftime("%m-%d-%y") %>
                    <br/><%= finding.elt_case.user ? finding.elt_case.user.last_name : "" %>
                  </td>
                  <td style=" border:0px solid #ddd; line-height:1.2em; color: #2061a5; padding-left:1px; padding-top:2px; padding-bottom:3px; vertical-align:top;text-align:left; font-size:10px" >
                        <span style = 'color:#C73914'> <%= finding.rubric? ? finding.rubric.name + ':  ' : '' %> </span>
                    <%= finding.note %>
                  </td>
                </tr>
            <% end -%>
        <% end -%>
    </tbody>
</table>

