<table style="width:100%;margin-top:0px; border:0px solid #ddd;">
  <tbody>
    <% @findings.group_by{|f| f.activity}.each do |activity, findings| -%>
      <tr style="border-top:1px solid #ddd; ">
        <td colspan=2 style=" border:0px solid #ddd; color: #2061a5; font-weight:bold; vertical-align:middle;text-align:left; font-size:11px" >
          <%= activity.name %>
        </td>
      </tr>
      <% findings.each do |finding| %>
        <tr>
          <td style=" width:15%; border:0px solid #ddd; line-height:1.3em; color: #2061a5; padding-left:5px; padding-top:2px; padding-bottom:3px; vertical-align:top;text-align:left; font-size:11px" >
            <%= finding.elt_case.submit_date.nil? ? "Date?" : finding.elt_case.submit_date.strftime('%b %d, %y') %>
            <br/><%= finding.elt_case.user ? finding.elt_case.user.last_name : "" %>
          </td>
          <td style=" border:0px solid #ddd; line-height:1.2em; color: #2061a5; padding-left:1px; padding-top:2px; padding-bottom:3px; vertical-align:top;text-align:left; line-height:1.3em; font-size:12px" >
            <span style = 'color:#C73914;font-weight:bold'> <%= finding.rubric? ? finding.rubric.name + ':  ' : '' %> </span>
            <%= finding.note.html_safe %>
          </td>
        </tr>
      <% end -%>
    <% end -%>
  </tbody>
</table>

