<div style ='padding-bottom:20px'>
  <div style ="text-align:center; color: #2061a5; font-size:16px; margin-top:0px; padding-top:20px; padding-bottom:20px; font-weight:bold">
    <strong><%= @standard.name %>&nbsp;Element</strong>
  </div>
  <%= render :partial => "/shared/error_and_notice" %>
  <div class="Form clear">
    <span class="fsn-button ui-button ui-state-default ui-corner-all" style ='margin:20px'>
      <%= link_to ' Return ', elt_config_standards_path(:organization_id => @current_organization) %>
    </span>
    <%= form_for(:elt_element, :url => elt_config_standard_element_update_path(:organization_id => @current_organization, :elt_element_id=>@element, :elt_standard_id => @standard)) do |f| %>
        <%= render :partial => "/apps/learning_time_standards/form_element" %>
        <div class="FormRow">
          <div class="FormRowTitle">
          </div>
          <div class="FormRowData" style= "margin-left:25px">
            <%= f.submit :class =>"fsn-button ui-button ui-state-default ui-corner-all save" %>
          </div>
        </div>
    <% end -%>
    <%= render :partial => "/apps/learning_time/activate_rubric", :locals=>{:entity => @element} %>
  </div>
  <%= render :partial => "manage_element_indicators", :locals=>{:element => @element} %>
</div>

<style type="text/css" media="screen">
  .FormRowData { width: auto; }
  .form_title { display: block; font-family: Verdana,Arial,Helvetica,sans-serif; font-size:12px;	padding:10px 0; }
  .FormSectionTitle { margin-top: 10px;}
  * html .FormRow { float: none; display: block; width: 530px; }
</style>
