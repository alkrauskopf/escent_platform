        <%= pluralize(@current_organization.blogs.size, " Blog")%>
      </p>
		<% elsif @app.ifa? %>
      <p>
        <%= pluralize(@is_provider ? @app.provider_app_admins(@provider).size : @current_organization.admins_for_app(@app).size,  " Admin") %>
        <% if !@is_provider %>:&nbsp;<%= @current_organization.admin_list_for_app(@app) %><% end %>
      </p>
      <p>
        <%= pluralize(ActAssessment.all.size, @app.abbrev + " Assessment")%>&nbsp;In Repository
      </p>
      <p>
        <%= pluralize(ActQuestion.all.size, @app.abbrev + " Question")%>&nbsp;In Repository
      </p>
      <p>
        <%= pluralize(ActSubmission.all.size, " Student Assessment")%>&nbsp;Taken
