<div class="organization_app_stats">
	<% unless @app.nil? -%>
      <p>
        Provider:&nbsp;<%= @provider.short_name %>
      </p>
		<% if @app.ctl? -%>
      <p>
        <%= pluralize(@is_provider ? @app.provider_app_admins(@provider).size : @current_organization.admins_for_app(@app).size,  " Admin") %>
        <% if !@is_provider %>:&nbsp;<%= @current_organization.admin_list_for_app(@app) %><% end %>
      </p>
      <p>
        <%= pluralize(@is_provider ? @app.provider_observations(@provider).size : @current_organization.itl_observation_count, " Finalized Observation")%>
      </p>
      <p>
        <%= pluralize(@is_provider ? @app.provider_observer_levels(@provider).size : @current_organization.itl_observers.size, " Observer")%>
      </p>
		<% elsif @app.pd? %>
      <p>
        <%= pluralize(@is_provider ? @app.provider_app_admins(@provider).size : @current_organization.admins_for_app(@app).size,  " Admin") %>
