<div id="org_status">

  	<div style="text-align:center;  word-wrap:break-word; color:#2061a5;  font-size: 18px; font-style: normal; font-weight: bold">
			<br/><center>Maintain&nbsp;Organization Statuses</center>
	</div>
	<% if @current_user.app_superuser?(@app)%>
		<% Organization.all.sort_by{|o| o.name}.each do |org| -%>
			<% unless org.default?%>
				<% color = org.status.name == "Approved" ? "#2061a5" : "#C83A14"%>
				<table id="<%=org.public_id%>_stat"   style="width:450px; margin-left:120px;color:<%= color%>">
					<tbody>  
						<tr>
							<td class="resource_levels_close">		
							<%= link_to '', :controller => "apps/owner_maintenance", :action => :core_org_status, :organization_id => @current_organization, :org=> org, :app_id=> @app.id %>
							<%= org.name%>
							<span></span>
							</td>
						</tr>
					</tbody>
				</table>
			<script type="text/javascript" charset="utf-8">
			jQ(document).ready(function() {
				jQ('#<%=org.public_id%>_stat .resource_levels_close').toggleResourceLevels();
				jQ('#<%=org.public_id%>_stat .resource_levels_open').toggleResourceLevels();	
			});
			</script>
			<% end -%>
		<% end-%>
	<% end-%>	
	<br/>

</div>







