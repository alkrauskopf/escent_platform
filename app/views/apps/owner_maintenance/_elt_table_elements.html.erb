<div id="elt_tables_<%=org.public_id%>">

	<table id="1_header_<%= org.public_id %>" style="width:650px; width:fixed; margin-left:250px">
		<tbody>
			<tr>
				<td id="1_show_<%= org.public_id %>" style="padding-top:0px; padding-left:0px;">
					<span style=" font-weight:normal;  font-size:10px; color: #2061a5;  text-align:left">
						>&nbsp;&nbsp;<u>View Elements</u>  
					</span>
				</td>
			</tr>
		</tbody>
	</table>
	<table   id="1_descript_<%= org.public_id %>" style="width:650px; width:fixed; margin-top:10px; margin-left:250px">
		<style type="text/css" media="screen">
	    table,tr,td { border:medium}
		table tr:hover{
        background-color: transparent;
      }
    	</style>
		<tbody>  
			<tr style="border:0px solid #ddd;">
				<td id="1_hide_<%= org.public_id %>"colspan=2 style="padding-top:0px; padding-left:0px;">
					<span style=" font-weight:normal;  font-size:10px; color: #2061a5;  text-align:left">
						>&nbsp;&nbsp;<u>Hide</u>  
					</span>
				</td>
			</tr>

			<tr style="border:0px solid #ddd; ">
				<td style="vertical-align:top ">
	    			<%= render :partial => "/apps/owner_maintenance/elt_element_rows", :locals=>{:org=>@current_organization, :app=>app} %>
				</td>
				<td style="width:200px; width:fixed; padding-left:20px; vertical-align:top ">
					<span class="fsn-button ui-button ui-state-default ui-corner-all">
						<%= link_to 'Create New Element', {:controller => "/apps/owner_maintenance", :action => :elt_element_new, :app_id=> app.id, :task=>"New", :organization_id => @current_organization},{:target=>"_blank"}  %>
					</span>
				</td>
			</tr>
		</tbody>
	</table>

<script type="text/javascript">
jQ(document).ready(function() {
  		  jQ("#1_header_<%= org.public_id %>").show();
		  jQ("#1_descript_<%= org.public_id %>").hide();		  

	jQ("#1_show_<%= org.public_id %>").click(function() {
		  	jQ("#1_header_<%= org.public_id%>").hide();	 
	   		jQ("#1_descript_<%= org.public_id %>").slideDown("slow");
	})

	jQ("#1_hide_<%= org.public_id %>").click(function() {
	   		jQ("#1_descript_<%= org.public_id %>").slideUp("slow");
	   		jQ("#1_header_<%= org.public_id %>").show();
	})	
});
</script>

</div>








