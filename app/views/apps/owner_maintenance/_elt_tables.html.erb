
<div id ="elt_tables" style = "font-size:12px; color: #2061a5; padding-left:0px;">
	<% unless !@current_organization.appl_owner?(@app) -%>

		<div style ="color: #2061a5; font-size:14px; margin-top:0px; font-weight:bold"> 
			<strong><center><%= app.name %>&nbsp;Table Maintenance</center></strong>
		</div>	
		<div>
			<center>
				<table style="width:350px;margin-left:0px">
					<tbody>  
						<tr  style="border:0px solid #ddd;" >
							<td   id = "elt_activity" style="width:200px; width:fixed;  border:0px solid #ddd;vertical-align:middle;  padding-left:10px; padding-right:0px; padding-top:2px; text-align:center; color: #2061a5; font-size:10.5px; font-weight:bold">
								<%=  select(:elt, :types,   EltType.all.collect{|t| [t.name, t.id]}, :prompt => "Select Activity") %>
							</td>
						</tr>
					</tbody>
				</table>	
			</center>
	    	<%= render :partial => "/apps/owner_maintenance/elt_table_elements", :locals=>{:org=>@current_organization, :app=>app} %>
		</div>	
		<% unless activity.nil? -%>
			<div style ="border:1px solid #ddd; color: #2061a5; margin-top:20px; font-weight:bold"> 
				<center>
				<span style ="color: #C73914;font-size:12px; ">
					<u><%= activity.name %></u>
				</span><br/>
					<span class="fsn-button ui-button ui-state-default ui-corner-all">
						<%= link_to 'Create Indicators', {:controller => "/apps/owner_maintenance", :action => :elt_indicator_new, :elt_type_id=>activity, :app_id=> app.id, :task=>"New", :organization_id => @current_organization},{:target=>"_blank"}  %>
					</span>
				</center>
				<table id="activity_<%=activity.public_id%>" style="margin-left:80px; width:800px; width:fixed; border:1px solid #ddd;">
					<tbody>  
						<tr>
							<td class="resource_levels_close" style="width:950px;">
			
							<%= link_to '', :controller => "apps/owner_maintenance", :action => :elt_manage_indicators, :organization_id => @current_organization, :elt_type_id=> activity, :app_id=> @app.id  %>
							View/Manage Indicators
							<span></span>
							</td>
						</tr>
					</tbody>
				</table>
	<script type="text/javascript" charset="utf-8">
	jQ(document).ready(function() {
		jQ('#activity_<%=activity.public_id%> .resource_levels_close').toggleResourceLevels();
		jQ('#activity_<%=activity.public_id%> .resource_levels_open').toggleResourceLevels();	
	});
	</script>
			</div>
		<% end -%>

<script type="text/javascript">
jQ(document).ready(function() {
	jQ('#elt_activity').change(function() {
		var activity_id = jQ('#elt_types').val();
		var url = "<%= url_for :controller => "/apps/owner_maintenance", :action => :elt_select_type, :organization_id => @current_organization, :app_id=> @app.id %>";
			jQ.get(url, {'elt_type_id':activity_id}, function(data) {
			jQ("#elt_tables").html(data); 
	   		jQ("#elt_tables").show();
			});
	})
});
</script>

	<% else -%>
		<br/>
		<span style ="color: #C83A14; font-size:11px">
		<center><i>* * *  <%= @current_organization.short_name %>&nbsp;Is Not An App Owner  * * *</i></center>
		</span>
	<% end %>
</div>
