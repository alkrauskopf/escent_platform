<div >

  	<div style="text-align:center;  word-wrap:break-word; color:#2061a5;  font-size: 18px; font-style: normal; font-weight: bold">
			<br/><center>Review & Maintain&nbsp;Open&nbsp;<%= @app.abbrev %>&nbsp;Observations</center>
	</div>
			<% button_label = @app.abbrev + " Owner Maintenance"%>
			<table  style="width:350px; margin-left:400px; color: #2061a5; ">
				<tbody>
					<tr>
						<td  style="width:350px; vertical-align:middle; text-align:left;padding-bottom:0px; padding-top:0px; padding-left:0px">
							<span class="fsn-button ui-button ui-state-default ui-corner-all">
								 <%= link_to button_label ,{:controller => "apps/owner_maintenance", :action => :index, :organization_id => @current_organization, :app_id=> @app.id}, {:target => "_blank"} %>
							</span>
						</td>
					</tr>
				</tbody>
			</table>
			<table  style="width:850px; margin-left:70px; color: #000000; ">
				<tbody>
					<tr>
						<td  style="width:850px; width:fixed; font-size: 12px; font-style: normal; vertical-align:middle; text-align:left;padding-bottom:0px; padding-top:0px; padding-left:0px">							
							This allows <%= @app.abbrev %> Co-Owners to review all <%= @app.abbrev %> observations that have not been finalized and allows Super-Users to remove them enmass from the data base.
							<br/><br/>
						</td>
					</tr>
				</tbody>
			</table>	
	<% if @current_user.app_superuser?(@app)%>
		<% TltSession.backlog.completed.collect{|s| s.organization}.uniq.sort_by{|o| o.name}.each do |org|%>							
			<table id="<%=org.public_id%>_open_sessions"   style="width:900px; margin-left:10px; color: #2061a5;padding-left:0px;font-size:12px; font-weight:bold; ">
				<tbody>  
					<tr>
						<td class="resource_levels_close">
		
						<%= link_to '', :controller => "/apps/owner_maintenance", :action => :app_ctl_school_opens, :org_id => org, :app_id=> @app.id %>
							<%= pluralize(org.tlt_sessions.backlog.size, org.medium_name + " Open Observation") -%>
						<span></span>
						</td>
					</tr>
				</tbody>
			</table>
			<script type="text/javascript" charset="utf-8">
			jQ(document).ready(function() {
				jQ('#<%=org.public_id%>_open_sessions"  .resource_levels_close').toggleResourceLevels();
				jQ('#<%=org.public_id%>_open_sessions"  .resource_levels_open').toggleResourceLevels();	
			});
			</script>
		<% end -%>		
	<% end-%>
</br/>
</div>







