
	<div style ="text-align:center;color: #2061a5; font-size:16px; margin-top:0px; padding-top:20px; font-weight:bold">
		<strong><%=@task %>&nbsp;<%= @current_organization.short_name %>&nbsp;<%= @app.abbrev %>&nbsp;Element</strong>
	</div>
	
	<%= render :partial => "/shared/error_and_notice" %>

	
	<div class="Form clear">
		<%= form_for(:elt_element, :url => elt_maint_element_new_path(:organization_id => @current_organization, :elt_element_id=>@element, :app_id => @app.id, :task=>@task, :function => @task)) do |form| %>
		
			<%= render :partial => "/apps/owner_maintenance/elt_element_form", :locals=>{:button_label=> (@task == "New" ? "Create Element" : "Update"), :element => @element} %>
		
		<% end -%>	
		
		<% unless @task == "New" || @element.active?%>
			<%= form_for(:elt_element, :url => elt_maint_element_new_path(:organization_id => @current_organization, :elt_element_id=>@element, :app_id => @app.id, :task=>@task, :function => "Destroy")) do |form| %>
				<div class="FormRow submit_warp" style= "padding-left:25px; padding-bottom:20px">	
					<br/>
					<%= submit_tag "Destroy", :confirm => "Are you sure?", :class =>"fsn-button ui-button ui-state-default ui-corner-all save"  %>
					<br/>
				</div>			
			<% end -%>	
		<% end -%>
	</div>	

