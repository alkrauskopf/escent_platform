								<div id="<%= id%>dialog">
                  <div class="ifa_modal_header">
                    <%=titl%>
                  </div>
                  <div class="ifa_modal_title">
                      <%= pluralize(body.size, ' ' + blue) %>
                  </div>
                  <hr>
                  <div class="ifa_modal_box">
                    <% body.each_with_index do |benchmark, idx| %>
                        <div class="row ifa_modal_row">
                          <%= simple_format ((idx+1).to_s + ') ' + benchmark.description.humanize)%>
                        </div>
                    <% end %>
                  </div>
								</div>
<script type="text/javascript" charset="utf-8">
    	jQ(document).ready(function() {

    	    jQ("#<%= id%>dialog").dialog({
    	            bgiframe: true,
    	            autoOpen: false,
    	            width: <%=width%>,
    	            height: <%=height%>,
    	            modal: true,
    				buttons: {
    					 Close: function(){
    		                        jQ(this).dialog('close');
    		                    }
    				}
        	    }
    		);					
			
    		jQ('#<%= id%>').click(function(event){
    		    jQ("#<%= id%>dialog").dialog('open');
    			 event.preventDefault();
    		})							

    });
</script>
