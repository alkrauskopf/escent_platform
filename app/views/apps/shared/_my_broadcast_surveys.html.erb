<div id="broadcast_surveys">
	<% @current_user.surveys_broadcast_for_org(@current_organization).each do |survey| -%>
		<table id="broadcast_<%= survey.id %>"   style="width:99%;">
				<tbody>  
					<% col_label = survey.schedule_start.strftime("%m-%d-%y") + " " + survey.display_label + " " + survey.audience_type_label -%>
						<tr>
							<td class="resource_levels_close" style="color: #2061a5;  font-size:10.5px; font-weight:normal">
								<%= link_to '', :controller => "apps/shared", :action => :show_aggregated_results, :organization_id => @current_organization, :schedule_id => survey %>							<%= col_label %>
							<span></span>
							</td>
						</tr>
				</tbody>
			</table>
			<script type="text/javascript" charset="utf-8">
			jQ(document).ready(function() {
				jQ('#broadcast_<%= survey.id %> .resource_levels_close').toggleResourceLevels();
				jQ('#broadcast_<%= survey.id %> .resource_levels_open').toggleResourceLevels();	
			});
			</script>
	<% end -%>
</div>


