		<% box_height =  [1,2,4].include?(resource.content_object_type.content_object_type_group_id) ? 530 : 240  %>
		<span style = "font-size:10px; top:100px;">
			<a id="<%=key%>_<%= resource.id%>" style = "cursor:pointer" href=""><%= button ? ("<button>"+ label + "</button>") : ("<u>"+ label + "</u>")%></a>
		</span>
		&nbsp;<%= title %>
		<div  class="normal_text" id="<%=key%>_<%= resource.id%>_dialog" title= "<%= resource.title %>" style="text-align:left;">
			<table  style="width:500px;width:fixed; margin-left:15px;border:0px solid #ddd;"  >
				<tbody>  
					<% unless resource.description.nil? || resource.description.empty? -%>
						<tr  style="border-top:0px solid #ddd; ">
							<td   style="border:0px solid #ddd; line-height:1.5em; font-size:12px; color:#000000; padding-bottom:15px; text-align:left; vertical-align:middle;">
								<%=  resource.description %>
							</td>
						</tr>
					<% end -%>
					<tr  style="border-top:0px solid #ddd; ">
						<td   style="border:0px solid #ddd; line-height:1.2em; font-size:12px; color:#2061a5; padding-bottom:15px; text-align:left; vertical-align:middle;">
							<%= render :partial => "/shared/content", :locals => {:panel_id_prefix => "static_resource", :content => resource} %>
						</td>
					</tr>
				</tbody>
			</table>
		</div>


<script type="text/javascript" charset="utf-8">
    	jQ(document).ready(function() {


    	    jQ("#<%=key%>_<%= resource.id%>_dialog").dialog({
    	            bgiframe: true,
    	            autoOpen: false,
    	            width: 570,
    	            height: <%=box_height%>,
    	            modal: true,
    				buttons: {
    					 Close: function(){
    		                        jQ(this).dialog('close');
    		                    }
    				}
        	    }
    		);					
			
    		jQ('#<%=key%>_<%= resource.id%>').click(function(event){
    		    jQ("#<%=key%>_<%= resource.id%>_dialog").dialog('open');
    			 event.preventDefault();    			 
    		})							

    });
</script>






