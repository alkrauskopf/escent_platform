<div id="resource_lists" style = "font-size:12px; color: #2061a5; padding-left:10px;">
	<div style ="color: #2061a5; font-size:14px; margin-top:5px; font-weight:bold"> 
		<strong><center><%= app.abbrev %>&nbsp;Resource Repository</center></strong>
	</div>
	
		<table id="resource_list"   style="width:850px; ">
			<tbody>  
				<tr>
					<td class="resource_levels_close">
	
					<%= link_to '', :controller => "apps/shared", :action => :show_app_resources, :organization_id => @current_organization, :app_id=> app.id  %>
					<%= app.abbrev %>&nbsp;Resources
					<span></span>
					</td>
				</tr>
			</tbody>
		</table>
	<script type="text/javascript" charset="utf-8">
	jQ(document).ready(function() {
		jQ('#resource_list .resource_levels_close').toggleResourceLevels();
		jQ('#resource_list .resource_levels_open').toggleResourceLevels();	
	});
	</script>

	<% if admin -%>	
		<table id="admin_resource_list"   style="width:850px; ">
			<tbody>  
				<tr>
					<td class="resource_levels_close">
	
					<%= link_to '', :controller => "apps/shared", :action => :admin_app_resources, :organization_id => @current_organization, :admin=> admin, :app_id=> app.id  %>
					Administer&nbsp;<%= app.abbrev %>&nbsp;Resources
					<span></span>
					</td>
				</tr>
			</tbody>
		</table>
	<script type="text/javascript" charset="utf-8">
	jQ(document).ready(function() {
		jQ('#admin_resource_list .resource_levels_close').toggleResourceLevels();
		jQ('#admin_resource_list .resource_levels_open').toggleResourceLevels();	
	});
	</script>
	<% end -%>


