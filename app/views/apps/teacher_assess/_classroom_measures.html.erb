
<div style = "font-size:12px; color: #000000;padding-left:10px;">
	<br/>
	<span style ="color: #C83A14; font-size:18px">
	<center><strong>Classroom Metrics & Hattie Impact Scores</strong></center>
	</span>
	<div>
	<% unless @classroom_list.size.zero? %>
	<br/>
	<div id="assign_resources_panel">
		<table id="resource_levels"  class="tablesorter" style="width:99%;">
			<thead>
				<tr>
					<% header_string = pluralize(@classroom_list.size.to_s, " Classroom") + " At " + @current_organization.name.titleize %>
					<th><strong><%= header_string %></strong></th>											
				</tr>
			</thead>
			<tbody>  
				<% sub_ids = @classroom_list.group_by(&:act_subject_id) %>
				<% sub_ids.each do |si, clsrm| %>
					<% subj_name = ActSubject.find(si).name rescue nil-%> 
					<% col_label = clsrm.size.to_s + " " + subj_name-%>
					<tr>
					<td class="resource_levels_close">

					<%= link_to '', :controller => "apps/teacher_assess", :action => :subject_classrooms, :organization_id => @current_organization, :classroom_id => @classroom,  :subject_id => si %>
					<strong><%= col_label %></strong>
					<span></span>
					</td>
					</tr>
					<% end -%>
			</tbody>
		</table>
	<br/>

	</div>
<% else -%>
	<br/>
	<span style ="color: #C83A14; font-size:11px">
	<center><i> * * *  There Are No Classrooms At <%= @current_organization.name %> At This Time  * * *</i></center>
	</span>
<% end -%>	
</div>
</div>
