
<div style = "width:950px;font-size:12px; color: #2061a5; padding-left:10px;">
	<% if admin -%>
		<% teachers = @current_organization.tlt_dashboards.collect{|d| d.user}.uniq.sort_by{|t| t.last_name} %>
	<% else -%>
		<% teachers = [@current_user] %>
	<% end -%>
	<% header_string = pluralize(teachers.size, @current_organization.medium_name + " Teacher") + " In Time & Learning Repository" %>
	<div style ="color: #2061a5; font-size:14px; margin-top:5px; font-weight:bold"> 
		<strong><center><%= header_string %></center></strong>
	</div>

			<% teachers.each do |teacher| %>
				<%= render :partial => "/apps/time_learning/show_itl_dashboard", :locals => {:teacher => teacher, :subject=> nil } %>
			<% end -%>

	</div>

<script type="text/javascript" charset="utf-8">
jQ(document).ready(function() {
	jQ('#dashboad_levels .resource_levels_close').toggleResourceLevels();
	jQ('#dashboad_levels .resource_levels_open').toggleResourceLevels();	
});
</script>