<div id="school_<%= group %><%= app_method.id %>" >
	<% family = "Garamond, Time New Roman, Helvitica,sans-serif" -%>
	<table  style="width:880px; border:1px solid #ddd;font-family:<%=family%>; margin-top:0px;">
		<tbody>
			<style type="text/css" media="screen">
	    		table,tr,td { border:medium }
				table tr:hover{
        		background-color: transparent;
      			}
   			</style>
			<% backgrnd = "#"+ app_method.dashboard_color -%>
			<% app_method.tl_activity_types.by_position.each do |activity| -%>
				<tr style="border:0px solid #ddd;background:<%=backgrnd%>;">
					<td style="border:0px solid #ddd; " >
					    <%= render :partial => "/apps/time_learning/school_method_activity_dashboard", :locals => {:school => school, :group=>group, :subj=>subj, :duration=>duration, :tl_sessions=>tl_sessions, :start_date =>start_date, :activity=>activity, :columns=>columns, :task_details=> task_details}  %>		
					</td>
				</tr>
			<% end -%>	
		</tbody>
	</table>
</div>	
<script type="text/javascript">
jQ(document).ready(function() {
	jQ('a.toggle_<%= group %><%= app_method.id.to_s %>').click(function() {
		var $this = jQ(this);
		var url = $this.attr("href");
			jQ.get(url, function(data){
				jQ("#school_<%= group %><%= app_method.id %>").html(data);
				jQ("#school_<%= group %><%= app_method.id %>").show();
			})
			return false;
	})
});
</script>