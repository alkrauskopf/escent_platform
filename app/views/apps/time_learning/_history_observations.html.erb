<div >


	<% unless @sessions.size == 0 -%>
			
	<table style="width:600px; border:0px solid #ddd;">
		<tbody>
			<style type="text/css" media="screen">
	    		table,tr,td { border:medium }
				table tr:hover{
        		background-color: transparent;
      			}
   			</style>

			<% @sessions.each do |tlt| -%>
			<% teacher = tlt.user ? tlt.user.last_name : "Former User" -%>
			<% observer = tlt.tracker ? tlt.tracker.last_name : "Former User" -%>
			<tr style="border:0px solid #ddd;">

					<td width = 120px style=" border:0px solid #ddd; color: #2061a5; vertical-align:top;text-align:left; font-size:12px" >
						<%= tlt.session_date.strftime("%b %d, %Y") %><br/>
					</td>
					<td width = 480px style=" border:0px solid #ddd; color: #2061a5; vertical-align:top;text-align:left; font-size:12px" >
							<strong><%= teacher %></strong>&nbsp;
							<span style="font-size:10px">
								(<%= observer %>)&nbsp;
							</span>
							<%= tlt.classroom_name -%>;&nbsp;&nbsp;<%= tlt.class_period_name %>
					</td>			
 			</tr>
			<% end -%>
		</tbody>
	</table>
	<% else -%>	
		No Observations
	<% end -%>
<br/>

</div>
