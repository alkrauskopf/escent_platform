<div id="manage_belts">
  <table style="width:750px; margin-left:10px; color: #2061a5;">
    <thead>
      <tr>
        <th colspan=3 style = "padding-top:5px; padding-bottom:5px; color: #2061a5; text-align:center; vertical-align:middle; font-size:12px; font-weight:bold">
          <%= @current_organization.medium_name%>&nbsp;<%=@current_application.abbrev%>&nbsp;Proficiencies
        </th>
      </tr>
    </thead>
    <tbody>
      <style type="text/css" media="screen">
          table,tr,td { border:none; }
        table tr:hover{
            background-color: transparent;
            }
        </style>
      <% @current_organization.itl_observers.sort_by{|o| o.last_name}.each do |observer| -%>
        <tr style="  border:1px solid #ddd;">
          <td style=" width:100%; border:1px solid #ddd; padding-top:5px; padding-bottom:5px; color: #2061a5; vertical-align:top; font-weight:bold; font-size:11px" >
            <table id="<%=observer.public_id%>_manage_user_ranking"   style="width:87%; border:0px solid #ddd; margin-left:0px; color: #2061a5; ">
              <tbody>
                <tr>
                  <td class="resource_levels_close">
                    <%= link_to '', ctl_options_belts_manage_user_path(:organization_id => @current_organization, :user_id => observer)%>
                    <strong><%= observer.last_name_first %></strong>&nbsp;&nbsp;&nbsp;<%= pluralize(observer.tlt_sessions.final.size, " Observation")%>,&nbsp;<%= pluralize(observer.tlt_sessions.practice.size, " Practice")%>
                    <span></span>
                  </td>
                </tr>
              </tbody>
            </table>
            <script type="text/javascript" charset="utf-8">
            jQ(document).ready(function() {
              jQ('#<%=observer.public_id%>_manage_user_ranking .resource_levels_close').toggleResourceLevels();
              jQ('#<%=observer.public_id%>_manage_user_ranking .resource_levels_open').toggleResourceLevels();
            });
            </script>
          </td>
        </tr>
      <% end -%>
    </tbody>
  </table>
</div>