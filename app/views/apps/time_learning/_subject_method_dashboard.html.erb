<div id="subject_<%= group %><%= app_method.id %>" >
	<% family = "Garamond, Time New Roman, Helvitica,sans-serif" -%>
	<table  style="width:770px; border:1px solid #ddd; font-family:<%=family%>">
		<tbody>
			<style type="text/css" media="screen">
	    		table,tr,td { border:medium }
				table tr:hover{
        		background-color: transparent;
      			}
   			</style>
			<% backgrnd = "#"+ app_method.dashboard_color -%>
			<% app_method.tl_activity_types.by_position.each do |activity| -%>
				<tr style="border:0px solid #ddd;background:<%=backgrnd%>;">
					<td colspan=8 style="border:0px solid #ddd; " >
					 <%= render :partial => "/apps/time_learning/subject_method_activity_dashboard", :locals => {:school => school, :group=>group, :subject=>subject, :session_count=>session_count, :month =>month, :activity=>activity, :task_details=> task_details}  %>		
					</td>
				</tr>
			<% end -%>	
		</tbody>
	</table>
</div>	
<script type="text/javascript">
jQ(document).ready(function() {
	jQ('a.toggle_<%= group %><%= app_method.id.to_s %>').click(function() {
		var $this = jQ(this);
		var url = $this.attr("href");
			jQ.get(url, function(data){
				jQ("#subject_<%= group %><%= app_method.id %>").html(data);
				jQ("#subject_<%= group %><%= app_method.id %>").show();
			})
			return false;
	})
});
</script>