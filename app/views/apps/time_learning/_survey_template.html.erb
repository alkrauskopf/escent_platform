
<table style="width:800px; border:0px solid #ddd; color:#000000;">
	<tbody>
			<style type="text/css" media="screen">
	    		table,tr,td { border:medium }
				table tr:hover{
        		background-color: transparent;
      			}
   			</style>
			<% @current_organization.tlt_survey_questions.for_audience(audience).for_type(survey_type).active.each_with_index do |quest,idx|%>
				<tr  style="margin-left:00px; border:0px solid #ddd;">
					<td   style="width:250px; border:0px solid #ddd; margin-left:0px; padding-top:10px; vertical-align:top; text-align:left; font-size:12px;">
						<%=idx+1%>)&nbsp;<%= quest.question %>
					</td>
					<td   colspan=2 >
						<table syle="width:320px; border:0px solid #ddd;">
							<tbody>  
								<style type="text/css" media="screen">
						    		table,tr,td { border:none; }
									table tr:hover{
					        		background-color: transparent;
					      			}
					   			</style>
								<tr>
									<td   style="width:65px; border:0px solid #ddd; margin-left:0px; vertical-align:top; text-align:left; font-size:10px;">
										<input type='radio' id='survey_answer' name="question[<%=quest.id %>]" value='1' />&nbsp;<%= quest.tlt_survey_range_type.low_end %>
									</td>										
									<td   style="width:95px; border:0px solid #ddd; margin-left:0px; vertical-align:top; text-align:left; font-size:10px;">
										<input type='radio' id='survey_answer' name="question[<%=quest.id %>]" value='2' />&nbsp;Somewhat&nbsp;<%= quest.tlt_survey_range_type.low_end %>
									</td>										
									<td   style="width:95px; border:0px solid #ddd; margin-left:0px; vertical-align:top; text-align:left; font-size:10px;">
										<input type='radio' id='survey_answer' name="question[<%=quest.id %>]" value='3' />&nbsp;Somewhat&nbsp;<%= quest.tlt_survey_range_type.high_end %>
									</td>										
									<td   style="width:65px; border:0px solid #ddd; margin-left:0px; vertical-align:top; text-align:left; font-size:10px;">
										<input type='radio' id='survey_answer' name="question[<%=quest.id %>]" value='4' />&nbsp;<%= quest.tlt_survey_range_type.high_end %>
									</td>
								</tr>
								<tr>
									<td   colspan=4 style=" border:0px solid #ddd; margin-left:0px; vertical-align:top; text-align:left; font-size:11px;">
										<%= text_area :survey_response, quest.id.to_s , :rows => 1, :cols => 75  %><br/>
									</td>
								</tr>
							</tbody>
						</table>
					</td>
				</tr>		
			<tr>
				<td   colspan=2 style=" border:0px solid #ddd; margin-left:0px; vertical-align:bottom; text-align:left; font-size:11px;">
					&nbsp;
				</td>
			</tr>
			<% end -%>
		</tbody>
	</table>
