
	<table  style="width:585px; margin-left:0px;border:0px solid #ddd;"  >
		<tbody>  
			<style type="text/css" media="screen">
	    		table,tr,td { border:none }
				table tr:hover{
        		background-color: transparent;
      			}
   			</style>
			<% activity_tasks.in_groups_of(3).each do |task| -%>
				<% if task[0] || task[1] || task[2] -%>
					<tr  style="border:0px solid #ddd;">
						<% if task[0] -%>
							<td  id="no_time_log_<%= task[0].id.to_s %>" style="border:0px solid #ddd;width:30px; width:fixed; vertical-align:middle; padding-top:0px; text-align:center">
								<span class="fsn-button ui-button ui-state-default ui-corner-all" style="cursor:pointer">
									<%= link_to "Log", {:controller => "apps/time_learning",:action => "log_no_time_session_task", :organization_id => @current_organization, :tlt_task_id => task[0].id,:tlt_session_id => session}, :class => "task_button"%>
								</span>
							</td>
							<td    id="c0a_<%=task[0].id %>" href="" style="border:0px solid #ddd; width:165px; cursor:help; width:fixed; font-size:11px; vertical-align:middle; padding-top:0px; line-height: 1.2em; text-align:left">
								<%= task[0].name.titleize -%>

						<div title="<%=task[0].tl_activity_type.activity %>" id="c0b_<%=task[0].id %>" style="text-align:left;">
					    <div class="title_large_blue" style="margin-bottom:15px;">
					      <%= task[0].name.titleize -%>
					    </div>
					    <div class="normal_text" style=" font-size:12px;">
					      <%= task[0].description -%>
					    </div>
					</div>
					
	<script type="text/javascript" charset="utf-8">
	    	jQ(document).ready(function() {
	
	    	    jQ("#c0b_<%=task[0].id %>").dialog({
	    	            bgiframe: true,
	    	            autoOpen: false,
	    	            width: 500,
	    	            height: 180,
	    	            modal: true,
	    				buttons: {
	    					 Close: function(){
	    		                        jQ(this).dialog('close');
	    		                    }
	    				}
	        	    }
	    		);					
				
	    		jQ('#c0a_<%=task[0].id %>').click(function(event){
	    		    jQ("#c0b_<%=task[0].id %>").dialog('open');
	    			 event.preventDefault();
	    		})							
	
	    });
	</script>
							</td>										

