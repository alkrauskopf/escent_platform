<div >

	<% unless @teacher.tlt_diagnostics.for_subject(@tlt_subject).empty? -%>
		<% @teacher.tlt_diagnostics.for_subject(@tlt_subject).sort{|a,b| b.created_at <=> a.created_at}.each do |diag| -%>
	<table id="diag_header_<%= diag.public_id %>" style="width:730px; margin-left:0px;border:0px solid #ddd;">
		<tbody>  
			<style type="text/css" media="screen">
	    		table,tr,td { border:medium }
				table tr:hover{
        		background-color: transparent;
      			}
   			</style>

			<tr  style="border:0px solid #ddd;">
				<td  id="diag_show_<%= diag.public_id %>"  style=" border:0px solid #ddd;  color:#1b5698; vertical-align:top;text-align:left; font-weight:normal; font-size:10.5px" >
						 >  Show <%= diag.created_at.strftime("%b %d, %Y") %> Exercise
				</td>
			</tr>
		<tbody> 
	</table>			

	<table id="diag_descript_<%= diag.public_id %>" style="width:730px; margin-left:0px; border:0px solid #ddd;">
		<thead>
			<tr style="border:1px solid #ddd;">
					<th id="diag_hide_<%= diag.public_id %>" style=" width:150px; border:0px solid #ddd; vertical-align:middle;  padding-top:3px; padding-bottom:3px; color:#1b5698; font-weight:strong; font-size:10.5px">
						<u>Hide Exercise</u></th>
					<th style="width:290px; vertical-align:middle; border:0px solid #ddd; text-align:left; padding-top:3px; padding-bottom:3px; color: #1b5698; font-weight:bold; font-size:11px">
						<%= diag.created_at.strftime("%b %d, %Y") %></th>
					<th style="width:290px; vertical-align:middle; border:0px solid #ddd; text-align:left; padding-top:3px; padding-bottom:3px; color: #000000; font-weight:bold; font-size:11px">
						&nbsp;</th>
			</tr>
		</thead>
		<tbody>  
			<style type="text/css" media="screen">
	    		table,tr,td { border:medium }
				table tr:hover{
        		background-color: transparent;
      			}
   			</style>
			<% diag.tlt_diagnostic_lessons.sort_by{|a| a.tl_activity_type_id}.each do |les| -%>
			<tr  style="border:0px solid #ddd;">
				<td  width = 150px style=" border:0px solid #ddd;  vertical-align:middle; color: #2061a5; text-align:center; padding-right:0px; font-weight::normal; font-size:11px" >
						<%= les.tl_activity_type.activity -%>
				</td>
				<td width = 290px style=" border:0px solid #ddd;  padding-top:3px; padding-bottom:3px; color: #2061a5; vertical-align:top; text-align:left; padding-right:0px;font-weight::normal; font-size:11px" >
					<% unless les.strategies.empty? -%>
						<u>Strategy</u><br/> <%= simple_format les.strategies -%> 
					<% end -%>
				</td>
				<td width = 290px style=" border:0px solid #ddd;  padding-top:3px; padding-bottom:3px; color: #2061a5; vertical-align:top; text-align:left; padding-right:0px;font-weight::normal; font-size:11px" >
					<% unless les.how_effective.empty? -%>
						<u>How Effective</u><br/> <%= simple_format les.how_effective -%>
					<% end -%>
				</td>
			</tr>
			<% end -%>
			<% unless diag.survey_schedules.empty? -%>
				<tr  style="border:0px solid #ddd;">
					<td  width = 150px style=" border:0px solid #ddd;   padding-top:10px; padding-bottom:0px; color: #2061a5;vertical-align:top; text-align:right; padding-right:3px;  font-weight::normal; font-size:10.5px" >
							Reflective Questions
					</td>
					<td colspan=2 width = 580px style=" border:0px solid #ddd; color: #000000; vertical-align: top;text-align:left; font-weight:normal; font-size:10.5px" >
						<%= render :partial => "apps/shared/show_results", :locals => {:survey => diag.survey_schedules.last, :offering=> nil, :observer => nil,:teacher => nil} %>	

					</td>
				</tr>
			<% end-%>
		<tbody> 
	</table>
	
<script type="text/javascript">
	jQ(document).ready(function() {
  		  jQ("#diag_header_<%= diag.public_id %>").show();
		  jQ("#diag_descript_<%= diag.public_id %>").hide();		  

	jQ("#diag_show_<%= diag.public_id %>").click(function() {
		  	jQ("#diag_header_<%= diag.public_id %>").slideUp("slow");	 
	   		jQ("#diag_descript_<%= diag.public_id %>").slideDown("slow");
	})

	jQ("#diag_hide_<%= diag.public_id %>").click(function() {
	   		jQ("#diag_descript_<%= diag.public_id %>").slideUp("slow");
	   		jQ("#diag_header_<%= diag.public_id %>").show();
	})	
});
</script>				

		<% end -%>
	<% else -%>
	<table style="width:700px; margin-left:0px;border:0px solid #ddd;">
		<tbody>  
			<style type="text/css" media="screen">
	    		table,tr,td { border:medium }
				table tr:hover{
        		background-color: transparent;
      			}
   			</style>

			<tr  style="border:0px solid #ddd;">
				<td  style=" border:0px solid #ddd;  color: #C83A14; vertical-align:top;text-align:center; font-weight:normald; font-size:11px" >
						 * * No <%= @teacher.last_name %> <%=@tlt_subject.name %> Reflection History To Display * *
				</td>
			</tr>
		<tbody> 
	</table>	
	<% end -%>

					
</div>