
			<% @current_organization.bios.each do |bio| -%>
			
				<table  style = "width:400px; margin-left:40px; font-size:11px; line-height: 1.5em;">
					<tbody>
						<tr>
			        	<% unless bio.picture_file_name.nil? -%>
							<td style = " width:90px; text-align:center; vertical-align:bottom; padding-top:0px; padding-bottom:0px; font-weight:normal; font-size:10.5px; ">
								<%= image_tag(bio.picture.url,  :width => 85,:alt => " ") -%>
							</td>
						<% else -%>							
							<td style = " text-align:center; vertical-align:bottom; padding-top:0px; padding-bottom:0px; font-weight:normal; font-size:10.5px;">
								&nbsp;
							</td>
						<% end -%>
							<td  class="main_ep_page_subheading" style = " vertical-align:middle; padding-top:0px; padding-bottom:0px; font-weight:bold; font-size:13px;">
								<%= bio.title %> 
								<span style="font-weight:normal; font-size:11.5px"%><%= simple_format bio.description %></span>
							</td>
						</tr>
					</tbody>
				</table>
				<table  id="bio_header_<%= bio.public_id %>" style = "width:400px; margin-left:40px; font-size:11px; line-height: 1.5em;">
					<tbody>
						<tr>
							<td id="bio_show_<%= bio.public_id %>" class="main_ep_page_subheading" style = " vertical-align:top; padding-top:0px; padding-bottom:0px; font-weight:normal; font-size:12px;">
								<span style="font-weight:normal; margin-left:95px; font-size:10px"%><u>View Bio</u></span>
							</td>
						</tr>					
					</tbody>
				</table>		
				<table  id="bio_descript_<%= bio.public_id %>" style = "width:400px; margin-left:40px; font-size:11px; line-height: 1.5em;">
					<tbody>
						<tr>
							<td id="bio_hide_<%= bio.public_id %>" class="main_ep_page_text" style = " vertical-align:top; padding-top:0px; padding-bottom:0px; font-weight:normal; font-size:12px;">
								<span class="main_ep_page_subheading" style="font-weight:normal; margin-left:95px;font-size:10px"%><u>Roll Up</u></span><br/><br/>
								<% unless bio.blog_posts.active.empty? %>
									<%= simple_format bio.blog_posts.active.first.body %>
								<% end -%>
							</td>
						</tr>					
					</tbody>
				</table>
				<br/>
<script type="text/javascript">
	jQ(document).ready(function() {
  		  jQ("#bio_header_<%= bio.public_id %>").show();
		  jQ("#bio_descript_<%= bio.public_id %>").hide();		  

	jQ("#bio_show_<%= bio.public_id %>").click(function() {
		  	jQ("#bio_header_<%= bio.public_id %>").hide();	 
	   		jQ("#bio_descript_<%= bio.public_id %>").slideDown("slow");
	})

	jQ("#bio_hide_<%= bio.public_id %>").click(function() {
	   		jQ("#bio_descript_<%= bio.public_id %>").slideUp("slow");
	   		jQ("#bio_header_<%= bio.public_id %>").show();
	})	
});
</script>
			<% end -%>