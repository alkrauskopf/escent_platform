<div id="classroom_dbs_<%=subject.id%>" >
  <div class="teacher_review_period_box ">
    <div class= "precision_prep_review_panel">
      <div class="teacher_review_header_label">
      <%= pluralize(classrooms.size, @classroom_dashboards['name'] + ' Classroom') %>
      </div>
    </div>
  </div>
  <% if !classrooms.empty? -%>
    <div class="precision_milestone_panel">
      <div class="precision_prep_review_box">
        <% classrooms.each do |classroom| -%>
          <div class="row subject_student_db_row">
            <div class="col-md-12 subject_student_name">
              <table id="subj_dbs_<%=classroom.id %>">
                <tbody>
                  <% classroom_label = classroom.name + @classroom_list_label[classroom.id] + ' (' + classroom.ifa_dashboards.for_subject(subject).size.to_s + ')' %>
                  <tr>
                    <td class="resource_levels_close">
                      <%= link_to '', ifa_dashboards_entity_subject_path(:organization_id => @current_organization, :entity_class => "Classroom", :subject_id => subject.id, :entity_id => classroom) %>
                      <%= classroom_label %>
                      <span></span>
                    </td>
                  </tr>
                </tbody>
              </table>
              <script type="text/javascript" charset="utf-8">
                jQ(document).ready(function() {
                  jQ('#subj_dbs_<%=classroom.id %> .resource_levels_close').toggleResourceLevels();
                  jQ('#subj_dbs_<%=classroom.id %> .resource_levels_open').toggleResourceLevels();
                });
              </script>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

