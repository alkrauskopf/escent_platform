<div id="manage_plans">
  <div class="row ifa_panel_title">
    <div>
      <%= @current_organization.short_name %> Student Guardians
    </div>
  </div>
  <div>
  <% if !@guardian_students.empty? %>
    <% @guardian_students.each do |student| %>
      <div class="row plan_base_upon">
        <div class="col-md-4">
          <%= student.full_name %>
        </div>
        <div class="col-md-8">
          <%= student.guardian_name_list %>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
</div>