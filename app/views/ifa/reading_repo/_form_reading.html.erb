<div class="row repo_edit_box">
      <div class="row repo_edit_row">
        <div class="col-md-3 repo_label_field">
          Genre
        </div>
        <div class="col-md-9 repo_select_field">
          <%= select(:genre, :id, @active_genres.collect{|g| [g.name, g.id]},
                     :prompt => @current_reading.genre ? @current_reading.genre.name : 'Select Genre') %>
        </div>
      </div>
      <div class="row repo_edit_row">
        <div class="col-md-3 repo_label_field">
          Subject Area
        </div>
        <div class="col-md-9 repo_select_field">
          <%= select(:subject, :id, @active_subjects.collect{|s| [s.name, s.id]},
                     :prompt => @current_reading.subject ? @current_reading.subject.name : 'Select Subject') %>
        </div>
      </div>
      <div class="row repo_edit_row">
        <div class="col-md-3 repo_label_field">
          Title
        </div>
        <div class="col-md-9 repo_text_field">
          <%= text_field :act_rel_reading, :label, :size => 55, :maxlength => 150,  :value => @current_reading.label  %>
        </div>
      </div>
      <div class="row repo_edit_row">
        <div class="col-md-3 repo_label_field">
          Reading
        </div>
        <div class="col-md-9 repo_text_field">
          <%= text_area :act_rel_reading, :reading, :class =>"tinymce", :rows => 15, :cols => 70, :value => @current_reading.reading  %>
          <%= tinymce %>
        </div>
      </div>
</div>