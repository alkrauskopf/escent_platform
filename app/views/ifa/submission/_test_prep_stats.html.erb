<div id="test_prep_stats" >
  <div class="teacher_review_period_box ">
    <div class= "precision_prep_review_panel">
      <div class="row">
        <div class="col-md-12">
          <%= @current_classroom.name%> | <%= pluralize(@current_classroom.students.size, ' Student') %>
        </div>
      </div>
    </div>
    <div class="precision_milestone_panel">
      <div class="precision_prep_review_box">
        <div class='student_test_prep_stats_box'>
          <table class="table table-bordered table-hover student_test_prep_stats_table">
            <tbody >
              <colgroup>
                <col style="width:24%">
                <col style="width:35%">
                <col style="width:41%">
              </colgroup>
              <% if !@test_prep_stats.empty? %>
                <% @test_prep_stats.each do |stat| %>
                  <% if !stat['break'] %>
                    <tr >
                      <td class="student_test_prep_stats_row">
                        <%= stat['date'].nil? ? '' : stat['date'].strftime("%b %d, %Y")%>
                        <div>
                          <%= stat['assessment_name']%>
                        </div>
                      </td>
                      <td class="student_test_prep_stats_data">
                        <%= stat['name'] %>: <%= stat['sat_score'] %>,
                          <%=pluralize(stat['total_points'], ' Point')%>, <%=pluralize(stat['answer_count'], ' Answer')%>&nbsp;(<%=stat['proficiency']%>%)
                        <div class="population">
                          Others:&nbsp;
                          <%=pluralize(stat['target_points'], ' Point')%>, <%=pluralize(stat['target_answers'], ' Answer')%>&nbsp;(<%=stat['target_pct']%>%)
                        </div>
                      </td>
                      <td class="student_test_prep_stats_data">
                        <%= stat['name'] %>: <%=pluralize(stat['duration_minutes'], ' Min')%>,&nbsp;
                          <%=pluralize(stat['answer_rate'], ' Sec')%>/Ques, <%=pluralize(stat['point_rate'], ' Sec')%>/Point
                        <div class="population">
                        Others:&nbsp;
                        <%=pluralize(stat['target_duration'], ' Min')%>,&nbsp;
                        <%=pluralize(stat['target_answer_rate'], ' Sec')%>/Ques, <%=pluralize(stat['target_point_rate'], ' Sec')%>/Point
                        </div>
                      </td>
                    </tr>
                  <% elsif stat['ass_taken'] > 0 %>
                    <tr >
                      <td  class="student_test_prep_stats_break">
                        <%=stat['name']%>&nbsp;(<%=stat['ass_taken']%>)
                      </td>
                      <td  class="student_test_prep_stats_break">
                        <div class="heading">
                          Proficiency
                        </div>
                      </td>
                      <td  class="student_test_prep_stats_break">
                        <div class="heading">
                          Efficiency
                        </div>
                      </td>
                    </tr >
                  <% end %>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>