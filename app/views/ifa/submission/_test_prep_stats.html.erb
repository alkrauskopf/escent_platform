<div id="test_prep_stats" >
  <div class="teacher_review_period_box ">
    <div class= "precision_prep_review_panel">
      <div class="row">
        <div class="col-md-12">
          <%= @current_classroom.name%> | <%= pluralize(@current_classroom.students.size, ' Student') %>
        </div>
      </div>
    </div>
    <div class="precision_milestone_panel">
      <div class="precision_prep_review_box">
        <div class='student_test_prep_stats_box'>
          <table class="table table-bordered table-hover student_test_prep_stats_table">
            <tbody >
              <colgroup>
                <col style="width:24%">
                <col style="width:35%">
                <col style="width:41%">
              </colgroup>
              <% if !@test_prep_stats.empty? %>
                <% @test_prep_stats.each do |stat| %>
                  <% if !stat['break'] %>
                    <tr >
                      <td class="student_test_prep_stats_row">
                        <div>
                          <%= stat['assessment_name']%>
                        </div>
                        <%= stat['date'].nil? ? '' : stat['date'].strftime("%b %d, %Y")%>
                      </td>
                      <td class="student_test_prep_stats_data">
                        <%= stat['sat_score'] %> | <%=stat['total_points']%> Pts | <%=stat['answer_count']%> Ans |  <%=stat['proficiency']%>%
                        <div class="population">
                          Population:&nbsp;&nbsp;
                          <%= stat['target_points']%> Pts | <%=stat['target_answers']%> Ans | <%=stat['target_pct']%>%
                        </div>
                      </td>
                      <td class="student_test_prep_stats_data">
                        <%=pluralize(stat['duration_minutes'], ' Min')%>&nbsp;|&nbsp;<%=pluralize(stat['answer_rate'], ' Sec')%> | <%=pluralize(stat['point_rate'], ' Sec')%>
                        <div class="population">
                          Population:&nbsp;
                          <%=pluralize(stat['target_duration'], ' Min')%>&nbsp;|&nbsp;
                          <%=pluralize(stat['target_answer_rate'], ' Sec')%> | <%=pluralize(stat['target_point_rate'], ' Sec')%>
                        </div>
                      </td>
                    </tr>
                  <% elsif stat['ass_taken'] > 0 %>
                    <tr >
                      <td  class="student_test_prep_stats_break">
                        <%=stat['name']%>
                      </td>
                      <td  class="student_test_prep_stats_break">
                        <div class="heading">
                          Proficiency
                          <div class="sub_heading">
                            Score | Points | Answers Made | % Correct
                          </div>
                        </div>
                      </td>
                      <td  class="student_test_prep_stats_break">
                        <div class="heading">
                          Efficiency
                          <div class="sub_heading">
                            Test Duration | Time/Question | Time/Point
                          </div>
                        </div>
                      </td>
                    </tr >
                  <% end %>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>