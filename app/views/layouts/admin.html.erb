    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta name="description" content="" />
        <meta name="keywords" content="" />
        <%= stylesheet_link_tag 'fsn.css' %>
        <%= stylesheet_link_tag 'site.css' %>
