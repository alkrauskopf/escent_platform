		<%#= stylesheet_link_tag 'facebox.css' %>
		-->
        <%= stylesheet_link_tag 'fsn/jquery-ui-1.7.1.custom.css' %>
        <%= stylesheet_link_tag 'colorpicker.css' %>
		<%= stylesheet_link_tag 'jquery.autocomplete.css' %>
        <%= javascript_include_tag 'prototype' %>
        <%= javascript_include_tag 'jquery-1.3.2.min.js' %>
        <script type="text/javascript" charset="utf-8">
            jQ = jQuery.noConflict();
        </script>
		<%= javascript_include_tag "jquery.qtip-1.0.0.min.js" %>        
		<%= javascript_include_tag 'jquery-ui-1.7.1.custom.min' %>
        <%= javascript_include_tag 'jquery.tablesorter.min' %>
        <%= javascript_include_tag 'jquery.validate.min' %>
        <%= javascript_include_tag 'colorpicker' %>
        <%= javascript_include_tag 'jquery.corner' %>    
        <%= javascript_include_tag "jquery.bgiframe" %>
		<%= javascript_include_tag "jquery.ajaxQueue" %>
		<%= javascript_include_tag "jquery.autocomplete.min" %>
		
		<%= javascript_include_tag '/player/swfobject.js' %>
		
		<%= javascript_include_tag 'application' %>
        <%= javascript_include_tag "wforms_core" %>
        <%= javascript_include_tag "wforms_sync" %>
        <%= javascript_include_tag "wforms_validation" %>
        <%= javascript_include_tag "wforms_switch" %>
        <%= javascript_include_tag "wforms_repeat_rails" %>
        <%= javascript_include_tag "tiny_mce/tiny_mce" %>
        <%%= xalendar_date_select_includes "blue" %>
        <%= include_tiny_mce_if_needed %>
        <script type="text/javascript" charset="utf-8">
            function initTinyMCE(){
                tinyMCE.init({
                    entity_encoding: "raw",
                    mode: "textareas",
					editor_selector : "mceEditor",
					editor_deselector : "mceNoEditor",
                    theme: "advanced",
                    plugins: "equation,table,insertdatetime,preview",
                    theme_advanced_buttons1_add_before: "save,separator",
                    theme_advanced_buttons1_add: "bold,italic,underline,fontselect,fontsizeselect",
                    theme_advanced_buttons2_add: "undo,redo,forecolor,backcolor,sub,sup,insertdate,inserttime,charmap,emotions",
                    theme_advanced_buttons3_add: "tablecontrols,equation",
                    theme_advanced_toolbar_location: "top",
                    theme_advanced_toolbar_align: "left",
                    theme_advanced_path_location: "bottom",
                    content_css: "/stylesheets/tiny_mce.css"
                });
            }
            
            initTinyMCE();
            
            jQ(document).ready(function(){
                var AUTH_TOKEN = "<%= protect_against_forgery? ? form_authenticity_token : '' %>";
                jQ.ajaxSetup({
                    data: {
                        authenticity_token: AUTH_TOKEN
                    }
                });
							 jQ("#loading").ajaxStart(function(){
							   jQ(this).show();
							 })
							.ajaxStop(function(){
								 jQ(this).hide();
							});
            });
        </script>
        <title>Escent Partners, LLC</title>
    </head>
    <body>
    	<div class="header">
    		<div style="width:900px; margin:0 auto;">
		        <%= render(:partial => "/shared/login", :locals => {:admin => true}) %>
			</div>
		</div>
        <div id="container">
            <div id="home_header">
                <div class="logo">
                    <a href="#"><h1>The Escent Community</h1></a>
                        <p>
                            Teachers Helping Teachers
                        </p>
                    </a>
                </div>
                <!-- close logo class div -->
            </div>
            <!-- close home_header class div -->
            <div id="home_body">
                <!-- close sidebar class div -->
                <div id="main_content">
                    <%= yield %>
                </div>
                <!-- close main_content div -->
                <div class="clear">
                    &nbsp;
                </div>
                <div class="bottom">
                    <div id="communities">
                    </div>
                </div>
            </div>
        </div>
              <%= render(:partial => "/shared/footer" ) %>
				<div id="loading" style="display:none;">
					<%= image_tag "ajax-loader.gif" %>
				</div>
    </body>
</html>
