<div class="section_selector" class="clear">
<!--	<%# for section in ["roles", "authorization_levels", "unverified_users"] do -%> -->
	<% for section in ["authorization_levels", "roles"] do -%>
		<% if @current_action == section || (@current_action == "index" && section == "authorization_levels")-%>
			<div class="active_section">
				<span><%= section.gsub(/_/, " ") %></span>
			</div>
		<% else -%>
			<div>
				<%= link_to_remote section.gsub(/_/, " "), :update => "our_family_panel", :url => {:controller => :our_family, :action => section, :organization_id => @current_organization}, :method => :get %>
			</div>
		<% end -%>
	<% end -%>
</div>
<div>
	<br style="clear:both" />
	<br />	
	<%= render :partial => "/shared/error_and_notice" %>
	<%= yield %>
</div>
<script type="text/javascript">
jQ(document).ready(function() {
	jQ("#our_family_panel .section_selector").segmentedControl();
})
</script>