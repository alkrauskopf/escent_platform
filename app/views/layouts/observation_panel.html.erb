<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
		 <title>Escent Partners, LLC</title>
		<%= stylesheet_link_tag 'screen' %>
		<%= stylesheet_link_tag url_for(:controller => "/stylesheets", :action => :iwing, :organization_id => @current_organization, :format => "css") %>

		<%= stylesheet_link_tag "public_info", :media => "screen" %>
		<%= stylesheet_link_tag "fsn/jquery-ui-1.7.1.custom.css", :media => "screen" %>
		<%= stylesheet_link_tag "master/print", :media => "print" %>
		<%= javascript_include_tag 'prototype' %>
		<%= javascript_include_tag 'jquery-1.3.2.min.js' %>
		<script type="text/javascript" charset="utf-8">
			jQ = jQuery.noConflict();

		</script>

		<%= javascript_include_tag 'jquery-ui-1.7.1.custom.min' %>

		<%= javascript_include_tag 'jquery.MetaData' %>

		<%= javascript_include_tag 'jquery.corner' %>
		<%= javascript_include_tag "jquery.bgiframe" %>
		<%= javascript_include_tag "jquery.ajaxQueue" %>

		<%= javascript_include_tag 'application' %>
		<%= javascript_include_tag "wforms_core" %>
		<%= javascript_include_tag "wforms_sync" %>
		<%= javascript_include_tag "wforms_validation" %>
		<%= javascript_include_tag "wforms_switch" %>
		<%= javascript_include_tag "wforms_repeat_rails" %>
		<%= javascript_include_tag "tiny_mce/tiny_mce" %>
		<%= javascript_include_tag "jquery.tools.min.js" %>

		<style type="text/css">
			a.continue {
				text-transform: uppercase;
				text-decoration: none;
				color: #ffffff;
				display: block;
				text-align: right;
				font-weight: bold;
				font-size: 12px;
				font-family: Garamond, Helvetica, Arial;
			}
			a.continue:hover {
				text-decoration: underline;
			}
			#panel_content {
                width: 1200px;
                margin-left:10px;
                padding: 0px 27px 0 27px;
				background: transparent;
                height: auto;
			}
			#panelContent {
				background: #FFFFFF;
             } #panel_content #panel_header{
                position: relative;
                top: 20px;
				margin-bottom:20px;
		        width: 100%; 
             } #panel_content #panel_header div#panel_video{
                position: relative;
				margin-bottom:0px;
                margin-left:40px; 
             } #panel_content #track_activities{
                position: relative;
				margin-top:0px;
                width: 100%; 
            } #panel_bottom {
				position: relative;
                width: 1200px;
                padding: 0 30px 0 30px;
				background: #FFFFFF;
			}
		</style>
		<script type="text/javascript" charset="utf-8">
			function initTinyMCE() {
				tinyMCE.init({
					entity_encoding : "raw",
					mode : "textareas",
					editor_selector : "mceEditor",
					editor_deselector : "mceNoEditor",
					theme : "advanced",
					plugins : "equation,table,insertdatetime,emotions",
					theme_advanced_buttons1_add_before : "save",
					theme_advanced_buttons1_add : "bold,italic,underline,fontselect,fontsizeselect",
					theme_advanced_buttons2_add : "undo,redo,forecolor,backcolor,sub,sup,insertdate,inserttime,charmap,emotions",
					theme_advanced_buttons3_add : "tablecontrols,equation",
					theme_advanced_toolbar_location : "top",
					theme_advanced_toolbar_align : "left",
					theme_advanced_path_location : "bottom",
					content_css : "/stylesheets/tiny_mce.css"
				});
			}

			initTinyMCE();

			jQ(document).ready(function() {
				jQ.ajaxSetup({
					'beforeSend' : function(xhr) {
						xhr.setRequestHeader("Accept", "text/javascript")
					}
				});
				jQ("#loading").ajaxStart(function() {
					jQ(this).show()
				}).ajaxStop(function() {
					jQ(this).hide()
				});
				jQ('.fsn-button').addUIStateClass();
			})
		</script>
	</head>
	<body class="iwing_page_background" >

			<div id="home_body">
				<!-- close sidebar class div -->
				<div id="panel_content">
					<%= yield %>
					<!-- close main_content div -->
					<div style="clear:both">
						&nbsp;
					</div>

					<div class="bottom"></div>	

						<div class="iwing_footer">
							<div class="iwing_header_and_footer_bars">
								<%= render(:partial => "/shared/footer") %>
							</div>
						</div>

				<div style="width:100%; text-align:center; font-size:10px;" class="background_text">
					&copy; <%= Time.now.year %> ESCENT PARTNERS, LLC
				</div>
			</div>
		</div>
		<div id="loading" style="display:none;">
			<%= image_tag "ajax-loader.gif" %>
		</div>

	</body>
</html>
