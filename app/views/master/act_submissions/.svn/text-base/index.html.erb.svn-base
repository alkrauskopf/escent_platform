<h2>ACT Submission</h2>
<%= link_to "Add", :action => :new %>
<table>
	<thead>
		<tr>
			<th>User</th>
			<th>Submission</th>
			<th>Classroomt</th>
			<th># Answers</th>
			<th>SMS & Created</th>
			<th></th>
		</tr>		
	</thead>
	<tbody>
		<% @submissions.each do |sub| -%>
		<tr>
			<td><%= sub.user.full_name %><br/>
				<%=sub.organization.short_name %></td>
			<td>Submit ID: <%= sub.id %><br/>
				Assess ID: <%= sub.act_assessment_id %><br/>
				Is Final? <%= sub.is_final%></td>
			<td><%= sub.classroom.course_name %></td>
			<td><% sub.act_answers.each do |a| -%>
				Answers ID: <%= a.id%><br/>
				<% end -%>
				</td>	
			<td>Est. SMS <%= sub.est_sms%><br/>
				<%= sub.created_at.strftime("%Y-%m-%d") %></td>		
			
			<td class="edit_and_remove">
				<button title="<%= sub.id %>" class="show fsn-button ui-button ui-state-default ui-corner-all">Show</button>
				<button title="<%= sub.id %>" class="edit fsn-button ui-button ui-state-default ui-corner-all">Edit</button>				
				<%= button_to "remove", {:action => :delete, :id => sub.id}, :confirm => 'Are you sure?', :class => "fsn-button ui-button ui-state-default ui-corner-all"  %>

			</td>
		</tr>		
		<% end -%>
	</tbody>
</table>