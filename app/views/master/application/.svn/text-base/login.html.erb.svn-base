<% form_tag :controller => "/master/application", :action => :login, :organization_id => @current_organization do -%>
<div class="content form">
    <div class="header_row clear">
    	<div class="header_footer_text">
        <label for="email_address">
            SIGN-IN EMAIL:
        </label>
        <%= text_field_tag "user[email_address]", @email_address, :size=> 15, :class => "text" %>
        <label for="password">
            PASSWORD:
        </label>
        <%= password_field_tag "user[password]", "", :size=> 8, :class => "text" %>
        <%= submit_tag "Sign-in", :class => "fsn-button ui-button ui-state-default ui-corner-all" %>
    	</div>
    </div>
</div>
<% end -%>
