
<% form_for(@organization_size) do |f| %>
  <%= f.error_messages %>

	<div class="MasterItemHeaderDiv">Edit Organization Size</div>
	<table>
		<tr><th style="width:150px;"></th><th></th></tr>
		<tr>
			<td>
			    <%= f.label :description %><br />
			</td>
			<td>
			    <%= f.text_field :description %>
			</td>
		</tr>
		<tr>
			<td>
			    <%= f.label :value_low %><br />
			</td>
			<td>
			    <%= f.text_field :value_low %>
			</td>
		</tr>
		<tr>
			<td>
			    <%= f.label :value_high %><br />
			</td>
			<td>
			    <%= f.text_field :value_high %>
			</td>
		</tr>
		<tr>
			<td colspan="2">
				<%= f.submit 'Update' %>
				&nbsp;&nbsp;
				<%= link_to 'Cancel', organization_sizes_path %>
			</td>
		</tr>
	</table>
<% end %>
