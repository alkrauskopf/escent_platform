<% form_for(@organization_type) do |f| %>
  <%= f.error_messages %>

	<div class="MasterItemHeaderDiv">Edit Organization Type</div>
	<table>
		<tr><th style="width:150px;"></th><th></th></tr>
		<tr>
			<td>
    			<%= f.label :name %><br />
			</td>
			<td>
			    <%= f.text_field :name %>
			</td>
		</tr>
		<tr>
			<td>
			    <%= f.label :template_name %><br />
 			</td>
			<td>
				<%= f.text_field :template_name %>
			</td>
		</tr>
		<tr>
			<td>
			    <%= f.label :has_size %><br />
 			</td>
			<td>
			  	<%= f.check_box :has_size %>
			</td>
		</tr>
		<tr>
			<td>
			    <%= f.label :has_religious_affiliation %><br />
			</td>
			<td>
			    <%= f.check_box :has_religious_affiliation %>
			</td>
		</tr>
		<tr>
			<td colspan="2">
				<%= f.submit 'Update' %>
				&nbsp;&nbsp;
				<%= link_to 'Cancel', organization_types_path %>
			</td>
		</tr>
	</table>
<% end %>

