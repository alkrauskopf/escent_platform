
	<% @children.children.each do |child| %>
		<tr>
			<td><%= child.name%></td>
				<td class="edit_and_remove">
					<button title="<%= child.id %>" class="show fsn-button ui-button ui-state-default ui-corner-all">Show</button>
					<button title="<%= child.id %>" class="edit fsn-button ui-button ui-state-default ui-corner-all">Edit</button>				
					<%= button_to "remove", {:action => :delete, :id => child.id}, :confirm => 'Are you sure?', :class => "fsn-button ui-button ui-state-default ui-corner-all" %>
				</td>
			</tr>
		<% if child.has_children? %>
			<%= render :partial => "affiliation_tree" %>
		<% end %>