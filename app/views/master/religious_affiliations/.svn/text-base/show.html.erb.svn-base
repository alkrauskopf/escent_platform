<div class="formBox">
	
	<div class="MasterItemHeaderDiv">View Religious Affiliation</div>

	<% if @religious_affiliation.parent_id != 51 %>
		<div>
			<%= label_tag 'Parent Affiliate:' %>
			<%= ReligiousAffiliation.find(@religious_affiliation.parent_id).name%>
		</div>
	<% end %>		

	<div>
		<%= label_tag 'Name:' %>
		<%= @religious_affiliation.name %>
	</div>

	<% if @religious_affiliation.channel_id %>
		<div>
			<%= label_tag 'Channel:' %>
			<%= @religious_affiliation.channel_id  %>
		</div>
	<% end %>

<p><%= link_to "Back", :action => :index %></p>
</div>