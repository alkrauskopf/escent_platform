<%= error_messages_for :religious_affiliation %>
<p>
	<%= label_tag 'Name:' %>
	<%= text_field :religious_affiliation, :name %>
</p>
<p>
	<% root = ReligiousAffiliation.find_by_name("root") %>
	<%= label_tag 'Parent ID:' %>

	<% if root %>
	  <%= text_field :religious_affiliation, :parent_id, :value => "null" %>
	<% else %>	
		<%= select("religious_affiliation", "parent_id", ReligiousAffiliation.all.collect {|p| [ p.name, p.id ] }) %>
	<% end %>
</p>
