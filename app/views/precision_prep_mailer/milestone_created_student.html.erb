<table class="envelope_box" border="0" cellpadding="0" cellspacing="0">
  <!-- start copy -->
  <tr>
    <td class="envelope">
      <p class="env_header">
        <%= @student_last_name %> | SAT/ACT Prep | <%= @school_name %>
      </p>
      <p class="env_subheader">
        Student Notification | <%= @student_first_name %> Milestone
      </p>
      <p class="env_dear">
        Dear <%= @student_first_name %>:
      </p>
      <p class="env_text_line">
        You created a new SAT/ACT Prep milestone.
      </p>
      <p class="env_content_line">
        Subject: <span class="content_a"><%= @subject_area %></span>
      </p>
      <p class="env_content_line">
        Knowledge Area: <span class="content_a"><%= @strand_name %></span>
      </p>
      <p class="env_content_line">
        Mastery Level: <span class="content_a"><%= @mastery_level %></span>
      </p>
      <% if !@teacher_name.nil? %>
          <p class="env_content_line">
            Teacher: <span class="content_a"><%= @teacher_name %></span>
          </p>
      <% end %>
      <p class="env_content_line">
        Work Description:
      </p>
      <p class="env_content_line_remark">
        "<%= @milestone.description%>"
      </p>
      <p class="env_text_line">
        When you feel you've achieved your milestone, attach evidence of this to your plan.
      </p>
      <p class="env_text_line">
        So far, you have achieved <%=@miles_achieved %> of <%=pluralize(@miles_defined, ' milestone')%> for
        <%= @subject_area %>.
      </p>
      <p class="env_text_line">
        <span class="cc">(cc: <%= @guardian_cc %>)</span>
      </p>
    </td>
  </tr>
  <%= render :partial => 'button_student_plan_link', :locals => {:student=> @student, :school => @organization, :subject => @act_subject, :ep_host => @ep_host} %>

  <%= render :partial => 'prep_outreach_student_new', :locals => {:school_name=> @school_name, :student_name => @student_first_name, :organization_id => @organization.public_id,
                                                                  :student_id=>@student.public_id} %>
</table>