<table class="envelope_box" border="0" cellpadding="0" cellspacing="0">
  <!-- start copy -->
  <tr>
    <td class="envelope">
      <p class="env_header">
        <%= @student_full_name %> | SAT/ACT Prep | <%= @school_name %>
      </p>
      <p class="env_subheader">
        Guardian Notification | Teacher Remark
      </p>
      <p class="env_dear">
        Dear <%= @guardian_first_name %>:
      </p>
      <p class="env_text_line">
        A teacher just added a remark to your student's SAT/ACT Prep plan.
      </p>
      <p class="env_content_line">
        Student: <span class="content_a"><%= @student_full_name%></span>
      </p>
      <p class="env_content_line">
        Teacher: <span class="content_a"><%= @teacher_full_name %></span>
        <span class="content_b">(<%= @teacher_email %>)</span>
      </p>
      <p class="env_content_line">
        Subject: <span class="content_a"><%= @subject_area %></span>
      </p>
      <p class="env_content_line">
        Remark:
      </p>
      <p class="env_content_line_remark">
        "<%=@remark%>"
      </p>
      <p class="env_text_line">
        You're encouraged to ask <%= @student_first_name %> to login, below,
        and explain how the process will help <%= @student_first_name %> work toward SAT/ACT goals. And please remember that all data are diagnostic, not evaluative.
      </p>
    </td>
  </tr>
  <%= render :partial => 'button_student_plan_link', :locals => {:student=> @student, :school => @organization, :subject => @act_subject, :ep_host => @ep_host} %>

  <%= render :partial => 'prep_outreach_guardian_new', :locals => {:school_name=> @school_name, :student_name => @student_first_name,
                                                                 :organization_id => @organization.public_id, :guardian_id=>@guardian_id} %>
</table>