<table class="envelope_box" border="0" cellpadding="0" cellspacing="0">
  <!-- start copy -->
  <tr>
    <td class="envelope">
      <p class="env_header">
        <%= @student.last_name %> | SAT/ACT Prep | <%= @school_name %>
      </p>
      <p class="env_subheader">
        <%= @submission['classroom'].name %> Assessment Notification
      </p>
      <p class="env_dear">
        Dear <%= @student_first_name %>:
      </p>
      <p class="env_content_line">
        Subject: <span class="content_a"><%= @submission['subject'].name %></span>
      </p>
      <p class="env_content_line">
        <span class="<%=@submission['class_color']%>">
          Your Test Time: <%= pluralize(@submission['duration'], ' Minute') %>,&nbsp;<%= pluralize(@submission['delta_seconds'], ' Second') %><%= @submission['slower_faster'] %> target.
        </span>
      </p>
      <% if !@submission['teacher'].nil? %>
        <p class="env_content_line">
          Teacher: <span class="content_a"><%= @submission['teacher'] %></span>
        </p>
      <% end %>
      <p class="env_text_line">
        You're encouraged to login, below, and reflect on your data with your guardian.
      </p>
    </td>
  </tr>
  <%= render :partial => 'button_school_link', :locals => {:school_name=> @school_name, :school => @organization, :ep_host=>@ep_host} %>
  <%= render :partial => 'prep_outreach_guardian_strategy', :locals => {:school_name=> @school_name, :student_name => @student_first_name,
                                                                   :organization_id => @organization.public_id, :student=> @student} %>
</table>

