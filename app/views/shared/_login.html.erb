<style type="text/css">
ul#mymenu {}
li.potato-menu-item {
	width:380px;
	font-size:11px;
	background-color:<%= @current_organization ? @current_organization.style_setting_value_named("Header and Footer Bars") : '000' %>;
	/* background-color:rgba(0,0,0,0.9); */
}
li.potato-menu-item a {
	padding:5px 20px 5px 12px;
	color:<%= @current_organization ? @current_organization.style_setting_value_named("Header and Footer Text") : '000' %>;

}
li.potato-menu-hover {
	background-color: #666;
}

/*  Remove Arrows for Now 
 * 
li.potato-menu-has-vertical > a {
	background: transparent url(/images/icons/arrow_down.gif) right no-repeat;
}
*/
li.potato-menu-has-horizontal > a {
	background: transparent url(/images/icons/arrow_right.gif) right no-repeat;
}


li.potato-menu-item ul {
	border-top:1px solid #444;
	border-left:1px solid #444;
	width:250px;
}
</style>
<div class="login_bar">
    <div class="iwing_header_and_footer_bars clear">
        <% if @current_user -%>
        <div class="content" style="width:100%;">
            <div class="header_row clear">
                <div style="float:left; width:40%;" class="header_footer_text">
                  Welcome, <%= @current_user.full_name %>&nbsp;
				 <% if @current_user.created_at == @current_user.updated_at -%>
						&nbsp;<%= link_to "Setup Your Profile!", :controller => "/users", :action => :edit_profile, :organization_id => @current_organization, :id => @current_user %> 
					<% end %>
                </div>
				<div style="float:left; width:30%;" class="header_footer_text">
				<% unless @current_user.waiting_surveys.active.empty? -%>
                  	&nbsp;<%= pluralize(@current_user.waiting_surveys.active.size, " Survey") %>&nbsp;Waiting <blink><u><i><%= link_to "Take Now", {:controller => "/apps/shared", :action => :my_surveys, :organization_id => @current_organization}, {:target => "_blank"}  %></i></u></blink>
				 <% else-%>
					&nbsp;				 
				 <% end -%>

				</div>
				<% unless @current_organization.nil? %>
                <div style="float:left; width:30%; text-align:right;" class="header_footer_text">
                    <%= link_to @current_organization.name, :controller => "/site/site", :action => :static_organization, :organization_id => @current_organization %>
                </div>
				<% else %>
	                <div style="float:left; width:25%; text-align:right;" class="header_footer_text">
					&nbsp;
				</div>
				<% end %>
				<% stands = @current_organization.ifa_org_option.act_masters rescue []-%>
            </div>
		        <div class="header_row clear" style="border-top:2px solid #FFFFFF;">
                <div style="width:100%; float:left; text-align:left;"class="header_footer_text">
				   <ul id="mymenu">
			   		<li style="width: 10%;">
  							<%= render :partial => 'shared/my_profile', :locals => {:stands => stands}%>
				   	</li>
					<li style="width: 10%;">
   							<%= render :partial => 'shared/my_schools'%>
					</li>

					<li style="width: 13%;">
   							<%= render :partial => 'shared/my_classrooms'%>
					</li>

					<li style="width: 13%;">
   							<%= render :partial => 'shared/my_colleagues'%>
					</li>

					<li style="width: 10%;">
   							<%= render :partial => 'shared/my_resources'%>
					</li>
										
					<li style="width: 7%;">
							&nbsp;
					</li>					
					<li style="width: 10%;">
							&nbsp;
					</li>
					<li style="width: 10%;">
   							<%= render :partial => 'shared/our_apps'%>
					</li>
				  	<li style="width:7%; text-align:center">
                   		<% if @in_admin -%> 
							&nbsp;
	                    	<% elsif @current_organization.can_be_displayed?(@current_user) && @current_user.administrator_of?(@current_organization) || @current_user.superuser? -%>
   								<%= link_to "Admin", :controller => "/admin/application", :action => :index, :organization_id => @current_organization %>
							<% else%>
							<span style="visibility:hidden;"> Admin </span>
	                	<% end -%>
				   	</li>
					<li style="width:10%; text-align:center;" class="header_footer_text">	
	                    <%= link_to "Sign Out", :controller => "/users", :action => :logout, :organization_id => @current_organization %>
					</li>
				</ul>
	<script type="text/javascript" charset="utf-8">
		jQ(document).ready(function() {
			jQ('#mymenu').ptMenu();
	    })
	</script>	
			</div>
 
            </div>
        </div>
        <% else -%>
        <div class="tip_info">
        	<div class="header_footer_text">
            <%= link_to "Register Here!", {:controller => "/users", :action => :register, :organization_id => @current_organization}, {:target => "_blank"}, :class => "join" %>
        	</div>
        </div>
        <% form_tag :controller => @in_admin ? "/admin/application" : "/users", :action => :login, :organization_id => @current_organization do -%>
        <div class="content form">
            <div class="header_row clear">
            	<div class="header_footer_text">
                <label for="login_id">
                    ID:
                </label>
                <%= text_field_tag "login_id]", "", :size=> 15, :class => "text" %>
                <label for="password">
                    Password:
                </label>
                <%= password_field_tag "user[password]", "", :size=> 8, :class => "text" %>
                <%= submit_tag "Sign-in", :class => "fsn-button ui-button ui-state-default ui-corner-all" %>
            	</div>
            	<div class="forgot_password">
                	<div class="header_footer_text">
                    <%= link_to "Forgot Password?",  {:controller => "/users", :action => :forgot_password, :organization_id => @current_organization}, :class => "login_forgot_password" %>
            			</div>
            	</div>
            </div>
        </div>
        <% end -%>
				<div class="content header_flash_notice" style="display:none;">
					<%= flash[:login_error] %>, <%= link_to "Try Again", "#", :id => "try_again" %>
				</div>
        <% end -%>
    </div>
</div>
<% if flash[:login_error] -%>
	<% if flash[:unverified] -%>
	<script type="text/javascript" charset="utf-8">
		jQ(document).ready(function() {
			alert("Your ID is valid but not verified.  Please check your email from escent_registration@escentpartners.com and click on Verfication link.  Check Spam Folder, if email not found.");
	    })
	</script>
	<% flash[:unverified] = nil%>  

	<% elsif flash[:suspended] -%>
	<script type="text/javascript" charset="utf-8">
		jQ(document).ready(function() {
			alert("Your ID has been suspended.  Contact Your Administrator.");
	    })
	</script>
	<% flash[:suspended] = nil%> 
	<% else %>
	<script type="text/javascript" charset="utf-8">
		jQ(document).ready(function() {
			jQ(".form").hide();
			jQ(".header_flash_notice").show();	
			jQ("#try_again").click(function() {
				jQ(".form").show();
				jQ(".header_flash_notice").hide();
				return false;
			});
		})
	</script>
	<% end %>
<% end -%>