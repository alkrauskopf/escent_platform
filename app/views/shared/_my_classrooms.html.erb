
	<a href="#" >My Offerings</a>
	<% if @current_organization.can_be_displayed?(@current_user)-%>
	<ul>
		<% unless @classroom.nil? -%>
			<% if @classroom.status == "active" -%>
				<% if @current_user.classroom_manager_for?(@classroom) then -%>
					<% link_string = truncate("MANAGE OFFERING: " + @classroom.course_name, :omission => "...", :length => 35) -%>
					<li style="width: 330px;"><%= link_to link_string, {:controller => "apps/classroom", :action => :setup_classroom, :organization_id => @current_organization,  :classroom_id => @classroom}, :target => '_blank' %></li> 

					<% if @current_topic then -%>
						<% link_string = truncate("MANAGE UNIT: " + @current_topic.title, :omission => "...", :length => 30)  -%>									
						<li style="width: 330px;"><%= link_to link_string, {:controller => "apps/classroom", :action => :setup_classroom_lu, :organization_id => @current_organization, :topic_id => @current_topic}, {:target=> 'blank'} %></li> 
					<% end -%>
				<% end -%>
				
				<% tag_label = @current_user.has_favorite?(@classroom) ? "UnTag " : "Tag " -%> 
				<% link_string = truncate(tag_label + @classroom.course_name, :omission => "...", :length => 35)  -%> 
				<li style="width: 330px;"><strong><%= link_to link_string, :controller => "/users", :action => :toggle_favorite_classroom, :organization_id => @current_organization, :classroom_id => @classroom.id %></strong></li>
			<% end -%>
		<% end -%>
		<% for room in @current_user.favorite_classrooms.sort_by{|c| c.course_name.upcase} do -%>
			<% unless room.nil? || room.organization.nil? -%>
				<% link_string = truncate(room.course_name, :omission => "...", :length => 24) + ", " +  truncate(room.organization.short_name, :omission => "...", :length => 15) + ":&nbsp;" + truncate(room.teacher_list, :omission => "...", :length => 20) -%>
				<li style="width: 330px;"><%= link_to link_string, {:controller => "/site/site", :action => :static_classroom, :organization_id => room.organization, :id => room} %>
				</li>
			<% end -%>
		<% end %>
	</ul>
	<% end -%>
