
	<a href="#" >Colleagues</a>
		<ul>
			<% unless @user.nil?%>
					<% unless @current_user == @user -%>
						<% if @current_user.colleagues.include?(@user) -%> 
						<% link_string = "UnTag " + @user.last_name -%>
						<li  style="width: 180px;"><strong><%= link_to link_string, :controller => "/users", :action => :remove_this_colleague, :organization_id => @current_organization, :user_id => @user.id%></strong></li> 
						<% else -%>
						<% link_string = "Tag " + @user.last_name -%>
						<li  style="width: 180px;"><strong><%= link_to link_string, :controller => "/users", :action => :add_this_colleague, :organization_id => @current_organization, :user_id => @user.id%></strong></li> 
						<% end -%>
					<% end %>
			<% end %>
			<% @current_user.colleagues.each do|col| -%>
				<% unless col.nil?%>
					<li style="width: 180px;"><%= link_to col.full_name, {:controller => "/users", :action => :member_public_profile, :organization_id => @current_organization, :id => col}, :html => {:style => "text-decoration:none;padding:1px 5px;margin-top:5px;margin-bottom: 5px;", :class =>"view-member fsn-button ui-button ui-state-default ui-corner-all"} %></li>	
				<% end %>
			<% end -%>
		</ul>
