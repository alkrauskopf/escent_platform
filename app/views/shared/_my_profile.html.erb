<span>My Profile</span>
  <ul style="width: 80%;" class="hdr-dropdown-content">
    <li ><%= link_to "Edit", user_edit_path(:organization_id => org, :id => user) %></li>
    <li ><%= link_to "View", user_view_path(:organization_id => org, :id => user) %></li>
    <li ><%= link_to "My Surveys", my_survey_view_path(:organization_id => org), {:target => "_blank"}  %></li>
    <% unless stands.empty?%>
      <li style="margin-left:0px"><u>Standards</u></li>
      <% stands.each do |mstr| -%>
        <% unless mstr == user.act_master -%>
          <% link_string = mstr.abbrev.upcase -%>
          <li style="margin-left:0px">
            <%= link_to link_string, user_assign_std_path(:organization_id => org, :id => user, :view => mstr) %>
          </li>
        <% else -%>
          <% link_string = "Current: " + mstr.abbrev.upcase -%>
          <li style="margin-left:0px; text-align:center">
            <i><%= link_string %></i>
          </li>
        <% end -%>
      <% end -%>
    <% end -%>
  </ul>