
	<% @heading_color = "#1b5698" -%> 
    <% @post_title_color = "#1b5698" -%>
    <% @text_color = "#555555" -%>
	<% @blog_posts.each_with_index do |@blog_post, idx| %>
	<a name="post_<%= idx + 1 %>"></a>

	<div class="mempro_box">
		<a href= "#Top" style="font-size:10px; text-align:left">Top</a>
	<!--
			<%# if idx+1 < @blog_posts.size %>
			&nbsp;&nbsp;<a href= "#post_<%#= idx+2 %>" style="font-size:10px">Next</a>	
			<%# end -%>
	-->
		<div class="blog_item">
		<table     style="width:760px;  margin-left:00px; border:0px solid white;">
		<tbody>
			<style type="text/css" media="screen">
		    table,tr,td { border:medium}
			table tr:hover{
 	       	background-color: transparent;
 	     	}
 		   	</style>
			<tr style=" border:0px solid white;">
				<td style="width:200px;  padding-left:10px; border:0px solid white;">
 				     <%= render :partial => "site/blog_posts/share_head" %>			
				</td>

				<td  class="blog_post_title" style="width:560px;">
					<center><%= simple_format @blog_post.title %></center>
 					<% unless @blog_post.picture_file_name.nil? -%>				
 						<table   id="compress_<%= @blog_post.public_id %>" style="width:540px;  margin-left:20px; border:0px solid white;">
							<tbody>
								<tr style=" border:0px solid white;">
 									<td style="padding-left:0px; border:0px solid white;">									
  										<% flash_file = @blog_post.picture.url %>

					     					<object classid="clsid:d27cdb6e-ae6d-11cf-96b8-444553540000" codebase="http://download.macromedia.com/pub/shockwave/cabs/flash/swflash.cab#version=9,0,0,0" width="540" height="290" id="fs_home" align="top">
					         				<param name="allowScriptAccess" value="sameDomain" /><param name="allowFullScreen" value="false" /><param name="movie" value= <%= flash_file %> /><param name="quality" value="best" /><param name="bgcolor" value="#ffffff" /><embed src= <%= flash_file %> quality="best" bgcolor="#ffffff" width="540" height="290" name="FS_attempt9_REVISED_JOSH" align="top" allowScriptAccess="sameDomain" allowFullScreen="false" type="application/x-shockwave-flash" pluginspage="http://www.macromedia.com/go/getflashplayer" />
					     					</object>

 									</td>
								</tr>
								<tr id="less_<%= @blog_post.public_id %>" style=" border:0px solid white;">
 									<td style="padding-left:0px;  font-size:10px; border:0px solid white; color: #C83A14;">									
									>> <u>Hide Illustration</u>
 									<br/>
 									</td>
								</tr>
							</tbody>					
						</table>
  						<table   id="expand_<%= @blog_post.public_id %>" style="width:540px;  margin-left:20px; border:0px solid white;">
							<tbody>
								<tr id="more_<%= @blog_post.public_id %>" style=" border:0px solid white;">
 									<td style="padding-left:0px;  font-size:10px; border:0px solid white; color: #C83A14;">									
									>> <u>Display Illustration</u>
 									<br/>
 									</td>
								</tr>
							</tbody>					
						</table>
 
 				     <% end -%>
 				     <div class="blog_post_text" >
  						<br/>
  						<%= simple_format @blog_post.body -%>
  					 </div>				
					</td>
				</tr>
			</tbody>					
		</table>
	<% if @blog.is_commentable -%>
     	<%= render :partial => "site/blog_posts/show_make_comments" %>		
	<% end -%>
	</div>
	</div>

<script type="text/javascript">
jQ(document).ready(function() {
  		  jQ("#compress_<%= @blog_post.public_id %>").hide();
		  jQ("#expand_<%= @blog_post.public_id %>").show();		  

	jQ("#less_<%= @blog_post.public_id %>").click(function() {
		  	jQ("#compress_<%= @blog_post.public_id %>").hide();	 
	   		jQ("#expand_<%= @blog_post.public_id %>").slideDown("slow");
	})

	jQ("#more_<%= @blog_post.public_id %>").click(function() {
	   		jQ("#expand_<%= @blog_post.public_id %>").slideUp("slow");
	   		jQ("#compress_<%= @blog_post.public_id %>").show();
	})	
});
</script>
<% end -%>
