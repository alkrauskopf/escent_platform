
<% if @current_user -%>
	<div style = "font-size:12px; color: #000000;padding-left:10px;">
		<%= form_for(:purge, :url => resource_destroy_path(:organization_id => @current_organization, :function => 'Destroy', :format => 'js'), :html => { :multipart => true, :method => :put}) do |form| -%>
			<br/>
			<span style ="color: #C83A14; font-size:15px">
				<center><strong>Manageable Resources:&nbsp;<%= @current_organization.short_name%>/<%= @current_user.last_name %> </strong></center>
			</span>
			<%= render :partial => "/shared/error_and_notice" %>		
			<div class="flash_notice" style="display:none;"></div>
			<%= render :partial => "site/contents/list_content_groups", :locals => {:org=>@current_organization, :content_groups=>@content_groups, :current_group=> @current_group}%>

		<% end -%>
	</div>
	<script type="text/javascript" charset="utf-8">
	jQ(document).ready(function() {
		jQ('#authorization_levels .authorization_levels_close').toggleAuthorizationLevels();
		jQ('#authorization_levels .authorization_levels_open').toggleAuthorizationLevels();	
	  jQ("#roles").tablesorter({ headers: { 1: { sorter: false }} });
	});
	</script>
<% end -%>
