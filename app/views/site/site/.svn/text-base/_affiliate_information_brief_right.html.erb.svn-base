<div class="affiliate_information_title" style="word-wrap:break-word">
<!--
    <div style="margin-right:10px;font-size: 14px; font-weight:bold; color:#C73914; text-align:center; width:220px;" class="affiliate_information_title">	
		<%#= @current_organization.organization_type.name%><br/>
	</div>
-->
	<div style="font-size: 14px; font-weight:bold; color:#C73914; text-align:center; width:220px;" class="affiliate_information_title">	
		<%= @current_organization.medium_name%><br/>
	</div>
	<div style="font-size: 12px; font-weight:normal; color:#000000; text-align:center; width:220px;" class="affiliate_information_title">	
	<span class="normal_text">
	<% if @current_organization.addresses.first.country == 'US' %>
		<%= @current_organization.addresses.first.street1 rescue nil -%><br/>
		<% unless @current_organization.addresses.first.street2.empty? %><%= @current_organization.addresses.first.street2 rescue nil -%><br/> <% end %>
		<%= @current_organization.addresses.first.city rescue nil -%>,	
	 	<%= @current_organization.addresses.first.state rescue nil -%> &nbsp <%= @current_organization.addresses.first.postal_code rescue nil -%><br/>
	<% else %>
		<%= @current_organization.addresses.first.city rescue nil -%>, 
		<%= I18n.t @current_organization.addresses.first.country, :scope => 'countries' %>	&nbsp <%= @current_organization.addresses.first.postal_code rescue nil -%><br/>
	<% end %>
		<% unless @current_organization.phone.empty? %><%= @current_organization.phone rescue nil -%><br/> <% end %>
	<% unless @current_organization.web_site_url.nil? %>
		<% web_link = "Website"%>
		<%= link_to web_link, @current_organization.web_site_url, :target => "_blank"  %></span>
	<% end %>
	</div>
</div>
