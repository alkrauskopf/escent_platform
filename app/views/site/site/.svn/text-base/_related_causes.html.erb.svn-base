<div class="module_header">
    <span class="content_area_title">GET INVOLVED</span>
</div>
<div class="module_body">
    <%= image_tag "related_discussion_header2.jpg" %>
    <div style="padding-top: 10px;">
        <div class="causes_title">
           <!-- IDP  @current_organization.name.upcase %> CAUSES -->
					 OUR DISCUSSIONS
        </div>
        <ul style="list-style: none; padding: 0; margin: 0;">
            <% for topic in @current_organization.topics.active do -%>
            <li>
                <% if topic == @current_topic -%>
                <%= topic.title %>
                <% else -%>
                <%= link_to topic.title, :action => :index, :organization_id => @current_organization, :topic_id => topic %>
                <% end -%>
            </li>
            <% end -%>
        </ul>
    </div> 
    <% if @current_organization.blogs.present? -%>
    <div class="causes_title" style="padding-top: 10px;">
      OUR BLOGS
    </div>
    <div>
        <ul style="list-style: none; padding: 0; margin: 0;">
            <li>
                <%= link_to "Blogging for Peace", :controller => "/site/blogs", :action => :index, :organization_id => @current_organization %>
            </li>
        </ul>
    </div>
		<% end -%>
    <% unless @current_organization.cause_partners.empty? -%>
    <div class="causes_title" style="padding-top: 10px;">
        OUR PARTNERS
    </div>
    <div>
        <ul style="list-style: none; padding: 0; margin: 0;">
            <% for topic in @active_topics_within_network do -%>
            <li>
                <%= link_to "#{topic.organization.name} - #{topic.title}", :controller => "/site/site", :action => :index, :organization_id => topic.organization, :topic_id => topic %>
            </li>
            <% end -%>
        </ul>
    </div>
    <% end -%>
</div>
