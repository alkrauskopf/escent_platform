<style type="text/css" media="screen">
    .warp_content {
        padding: 0;
        background-color: transparent;
    }
</style>
<script type="text/javascript" charset="utf-8">
    jQ(document).ready(function(){
        //jQ("#call_to_action").addImageShadow();
        //jQ("#followup").addImageShadow();
    })
</script>
<div id="iwcontent">
    <div id="leftpane">
        <div id="affiliate_information" class="module">
            <div class="module_body">
                <div class="page_text">
                    <%= render :partial => "affiliate_information" %>
                </div>
            </div>
        </div>
        <div id="call_to_action" class="module">
            <div class="module_header">
                <span class="content_area_title">TAKE ACTION</span>
            </div>
            <div class="module_body">
                <div class="page_text">
                    <%#= @current_organization.content_object_of_page_section("index", "call_to_action") %>
										<%= PageSection.image_value(@current_organization.content_object_of_page_section("index", "call_to_action")) %>
										<%= to_br(PageSection.body_value(@current_organization.content_object_of_page_section("index", "call_to_action"))) %><br />
										<div id="link_of_call_for_action" style="clear:both;">
											<%= render :partial => "link_of_call_for_action" %>
										</div>
                    <div style="clear:both"></div>
                </div>
            </div>
        </div>
				<div id="related_causes" class="module">
          <%= render :partial => "related_causes" %>
        </div>
        <div id="followup" class="module">
            <div class="module_header">
                <span class="content_area_title">MAKE CONNECTIONS</span>
            </div>
            <div class="module_body">
            	<div class="page_text">
                <%= @current_organization.content_object_of_page_section("index", "followup") %>
				      </div>
            </div>
        </div>
    </div>
    <div id="rightpane">
        <%= render(:partial => "topic") %>
    </div>
</div>
