<div style="padding-top:10px;padding-bottom:0px;">
	<span style="cursor:pointer"><button>
	    <%= link_to "Back", {:controller => "site", :action => :related_content_list, :organization_id => @current_organization, :folder_id => @folder, :topic_id => @topic}, :id => "back_to_related_content" %>
	</button><br/></span>
</div>
	<% ext = @folder.nil? ? "" : @folder.id.to_s -%>
	<%= render :partial => "/shared/content", :locals => {:panel_id_prefix => ("related_content_" + ext), :content => @content} %>

	
<script type="text/javascript" charset="utf-8">
  jQ(document).ready(function() {
			jQ("#back_to_related_content").click(function() {
			  url = jQ(this).attr("href")
			  topic = jQ("#control_panel_ul_<%= ext %>").val();
			  jQ.post(url, {"topic_id" : topic}, function(data) {
			    jQ("#related_content_panel_<%=ext%>").html(data)
			  })
			  return false;
			})
  })
</script>