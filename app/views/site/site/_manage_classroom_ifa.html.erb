<div id="ifa_options" style="padding:0px; width:99%;  border:0px; margin: 0px 0px 0px 0px; text-align:left; min-height:5px;">
	<table style="width:99%;">
		<thead>
			<tr>
				<th><strong>INTEGRATED FORMATIVE ASSESSMENTS</strong></th>											
			</tr>
		</thead>
	</table>

	<%= render :partial => "classroom_ifa_options", :locals=>{:classroom => classroom} %>
    
	<% if @classroom.ifa_classroom_option -%>
	<table id="ifa_levels" class="tablesorter" style="width:99%;">
		<tbody>
			<% col_label = "Click Here To Manage " + @classroom.course_name + " Assessment Pool" -%>
			<tr>
			<td class="ifa_levels_close" style=" color: #2061a5;">
				<%= link_to '', :controller => "apps/assessment", :action => :assign_classroom_assessment, :organization_id => @current_organization, :classroom_id => classroom, :topic_id => @topic, :id => @current_user %>
				<%= col_label %>
				<span></span>
			</td>
			</tr>
		</tbody>
	</table>

	<% end -%>	
</div>

<script type="text/javascript" charset="utf-8">
jQ(document).ready(function() {
	jQ('#ifa_levels .ifa_levels_close').toggleIfaLevels();
	jQ('#ifa_levels .ifa_levels_open').toggleIfaLevels();
});
</script>
