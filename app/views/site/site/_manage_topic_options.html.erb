<div id="topic_options" style="padding:0px; width:99%;  border:0px; margin: 0px 0px 0px 0px; text-align:left; min-height:5px;">
	<table  class="tablesorter" style="width:900px; border:0px;">
		<tbody>
			<tr style=" border:0px;">
				<% if @classroom.featured_topic == @topic %>
					<td   style="width:180px; border:0px; font-size:11px; padding-left:70px; vertical-align:bottom; text-align:right;color: #C83A14;font-weight:bold;">
							<%= (image_tag "button_enabled.png",:width => 15) -%>
					</td>			
				<%else -%>
					<td  id="feature_topic" style="width:180px; border:0px; font-size:11px; padding-left:70px; vertical-align:bottom; text-align:right;color: #C83A14;font-weight:bold;">
						<%= (image_tag "button_disabled.png",:width => 15) -%>
					</td>
				<% end-%>
				<% if @topic.is_open%>
					<td  id="discussion_open_closed" style="width:180px; border:0px; font-size:11px; padding-left:70px; vertical-align:bottom; text-align:right;color: #C83A14;font-weight:bold;">
						<%= (image_tag "button_enabled.png",:width => 15) -%>
					</td>			
				<%else -%>
					<td  id="discussion_open_closed" style="width:180px; border:0px; font-size:11px; padding-left:70px; vertical-align:bottom; text-align:right;color: #C83A14;font-weight:bold;">
						<%= (image_tag "button_disabled.png",:width => 15) -%>
					</td>
				<% end-%>
				<% if @topic.should_notify%>
					<td  id="notify_yes_no" style="width:180px; border:0px; font-size:11px; padding-left:70px; vertical-align:bottom; text-align:right;color: #C83A14;font-weight:bold;">
						<%= (image_tag "button_enabled.png",:width => 15) -%>
					</td>			
				<%else -%>
					<td  id="notify_yes_no" style="width:180px; border:0px; font-size:11px; padding-left:70px; vertical-align:bottom; text-align:right;color: #C83A14;font-weight:bold;">
						<%= (image_tag "button_disabled.png",:width => 15) -%>
					</td>
				<% end-%>			
				<% if @topic.discussions.active.size > 0 %>
					<td  id="clear_button" style="width:180px; border:0px; font-size:11px; padding-left:20px; vertical-align:bottom; text-align:right;color: #C83A14;font-weight:bold;">
						<%= (image_tag "button_discussion_clear.png",:width => 120) -%>
					</td>			
				<%else -%>
					<td  style="width:180px; border:0px; font-size:11px; padding-left:70px; vertical-align:bottom; text-align:right;color: #C83A14;font-weight:bold;">
						&nbsp;
					</td>
				<% end-%>			
				<td  style="width:180px; border:0px; font-size:11px; padding-left:70px; vertical-align:bottom; text-align:right;color: #C83A14;font-weight:bold;">
						&nbsp;
				</td>			
				<td  style="width:180px; border:0px; font-size:11px; padding-left:70px; vertical-align:bottom; text-align:right;color: #C83A14;font-weight:bold;">
						&nbsp;
				</td>			
			</tr>
			<tr style=" border:0px;">
				<% if @classroom.featured_topic == @topic %>
				<% feature_hover = "<center><strong>" + @topic.title.titleize + "</strong> Is Presented As The Default Learning Unit On Your Classroom Page.</center>" %>
					<td   class="tip" title="<%= feature_hover %>" style="width:180px; border:0px; font-size:10px;  vertical-align:top; text-align:center; color: #C83A14; font-weight:normal;">
						Featured
					</td>
				<%else -%>
				<% feature_hover = "<center><strong>" + @topic.title.titleize + "</strong> Is Not The Default Learning Unit That Is Featured On Your Classroom Page.<br/><i>Red Button Features This Learning Unit.</i></center>" %>
					<td   class="tip" title="<%= feature_hover %>" style="width:180px; border:0px; font-size:10px;  vertical-align:top; text-align:center; color: #C83A14; font-weight:normal;">
						Not Featured
					</td>
				<% end-%>
				<% if @topic.is_open%>
				<% discussion_hover = "<center><strong>" + @topic.title.titleize + " Discussion Forum Is Open.</strong><br/>Participation Is Limited To Teachers & Students.<br/><i>Green Button Closes The Discussion For This Learning Unit.</i></center>" %>
					<td   class="tip" title="<%= discussion_hover %>" style="width:180px; border:0px; font-size:10px;  vertical-align:top; text-align:center; color: #C83A14; font-weight:normal;">
						Discussion Forum<br/>Open
					</td>
				<%else -%>
				<% discussion_hover = "<center><strong>" + @topic.title.titleize + " Discussion Forum Is Closed.</strong><br/>When Open, Participation Is Limited To Teachers & Students.<br/><i>Red Button Opens The Discussion For This Learning Unit.</i></center>" %>
					<td   class="tip" title="<%= discussion_hover %>" style="width:180px; border:0px; font-size:10px;  vertical-align:top; text-align:center; color: #C83A14; font-weight:normal;">
						Discussion Forum<br/>Closed
					</td>
				<% end-%>
				<% if @topic.should_notify%>
				<% notify_hover = "<center>" + @classroom.course_name + " Teachers Are Notified By Email When Students Register Discussion Comments.<br/><i>Green Button Disables This Feature.</i></center>" %>
					<td   class="tip" title="<%= notify_hover %>" style="width:180px; border:0px; font-size:10px;  vertical-align:top; text-align:center; color: #C83A14; font-weight:normal;">
						Notifications<br/>Enabled
					</td>
				<%else -%>
				<% notify_hover = "<center>" + @classroom.course_name + " Teachers Are Not Notfied When Students Register Discussion Comments.<br/><i>Red Button Enables This Feature.</i></center>" %>
					<td   class="tip" title="<%= notify_hover %>" style="width:180px; border:0px; font-size:10px;  vertical-align:top; text-align:center; color: #C83A14; font-weight:normal;">
						Notifications<br/>Disabled
					</td>
				<% end-%>			
				<% if @topic.discussions.active.size > 0 %>
					<% clear_hover = "<center><strong>Clear " + @topic.title.titleize + " Discussion Forum</strong><br/><i>All Comments Will Be Permanently Erased.</i></center>" %>
					<td   class="tip" title="<%= clear_hover %>" style="width:180px; border:0px; font-size:10px;  vertical-align:top; text-align:center; color: #C83A14; font-weight:normal;">
						<%= pluralize(@topic.discussions.active.size.to_s, "Discussion Comment") %>
					</td>
				<%else -%>
					<% clear_hover = "<center>All " + @topic.title.titleize + " Discussion Comments Have Been Permanently Erased.</center>" %>
					<td   class="tip" title="<%= clear_hover %>" style="width:180px; border:0px; font-size:10px;  vertical-align:top; text-align:center; color: #C83A14; font-weight:normal;">
						<%= pluralize(@topic.discussions.active.size.to_s, "Discussion Comment") %>
					</td>
				<% end-%>				
				<td  style="width:180px; border:0px; font-size:10px; padding-left:0px; vertical-align:top; text-align:center; color: #C83A14; font-weight:normal;">
						&nbsp;
				</td>				
				<td  style="width:180px; border:0px; font-size:10px; padding-left:0px; vertical-align:top; text-align:center; color: #C83A14; font-weight:normal;">
						&nbsp;
				</td>
			</tr>
		</tbody>					
	</table>
</div>

<script type="text/javascript">
jQ(document).ready(function() {
	jQ("#feature_topic").click(function() {
		var organization = "<%= @current_organization.public_id %>";
		var classroom = "<%= @classroom.public_id %>";
		var topic = "<%= @topic.public_id %>";
		var user = "<%= @current_user.public_id %>";
		var url = "<%= url_for :controller => '/site/site', :action => :set_featured_topic_option %>";
		jQ.get(url,{'organization_id': organization,'classroom_id': classroom, 'topic_id': topic,'user_id': user},  function(data) {
			jQ("#topic_options").html(data); 
	   		jQ("#topic_options").show();
					});
               
	})
});
</script>

