<div>
	<% unless @avail_links.size.zero? %>

	<div class="FormRow submit_warp" style= "padding-left:25px">	
		<% button_label = "Add Links"%>
		<%= submit_tag button_label, :class =>"fsn-button ui-button ui-state-default ui-corner-all save"  %>
	</div>
<br/>

	<table style="width:600px; border:0px; float-left:0px">
		<tbody>
			<% for tpc in @avail_links do -%>
			<% unless tpc.nil? -%>
			<tr>
				<td style="width:60px; vertical-align:top; padding-left:18px; padding-top: 2px; padding-bottom:10px;">					
					<%=  check_box_tag "tpc_check[]", value = tpc.id ,checked = false %>
				</td>
				<td style="width:540px; vertical-align:top; text-align:left; padding-left:0px; padding-top: 2px; padding-bottom:10px;">					
					<strong><%= link_to tpc.title.titleize,{:controller => "site/site", :action => "static_classroom", :organization_id => tpc.classroom.organization, :topic_id => tpc, :id => tpc.classroom}, {:target => "_blank"} %></strong>
					&nbsp; &nbsp;&nbsp; &nbsp; <%= tpc.classroom.teacher_list %>
				</td>
			</tr>
			<% end -%>
			<% end -%>
		</tbody>
	</table>
	<% else -%>	
		<% if @clsrm.topics.empty?%> No Classroom Links Available.
		<% else %> All Classroom Links Already Assigned.
		<% end -%>
	<% end -%>

</div>

<script type="text/javascript" charset="utf-8">
jQ(document).ready(function() { 
	jQ('.fsn-button').addUIStateClass();
});
</script>
