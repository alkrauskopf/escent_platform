			<%= date_select(:topic, :estimated_end_date, :order=>[:month, :day, :year], :start_year => Time.now.year - 1, :end_year => Time.now.year + 1) %>
        	<br/><br/><br/><br/>
		</div>
    </div>

   <input type="hidden" name="topic[act_score_range_id]" value=0 />
 	



	</div>	

<% end -%>	
</div>	

