	<% if @current_organization.classrooms.active.collect{|c| c.topics.active}.flatten.size > 0 -%>
  <div class="module_header">
      <span class="content_area_title">
      	<center><strong>Current Learning Units</strong></center></span>
    </div>
	
	<%= render(:partial => "static_organization_classrooms", :locals=>{:display=>"lu"})%>
	
	<% end -%>
  </div> 

</div>

  <!-- CURRENT LESSONS  End -->
      
  <!-- RIGHT Side --> 
  
  <div style="float:right;width:500px;">
  
    <!-- Our OFFERINGS --> 
     
  <div class="module" id="followup" style="margin-left:10px; width:380px; margin-top:5px;">
    <div class="module_header">
      <span class="content_area_title">
      	 <center><strong><%= pluralize(@current_organization.classrooms.active.size, @current_organization.short_name + " Offering") %></strong></center>
</span>
    </div>

	<%= render(:partial => "static_organization_classrooms", :locals=>{:display=>"Offering"})%>


  </div>
  
  <!-- Our Offerings End --> 
  <!-- Our RESOURCES  --> 
  
  <div class="module" id="followup" style="margin-left:10px; width:380px; margin-top:5px;">
    <div class="module_header">
      <span class="content_area_title" >
	  <center><strong>Resource Library Contributions</strong></center>
	 </span>
    </div>


	<%= render(:partial => "static_organization_resources")%>




  <!-- Our Resources End -->    
</div>


