<% form_tag :action => 'forgot_password', :organization_id => @organization do -%>
<div style="width:500px;">
    <div class="title_large_blue" style="margin-bottom:10px;">
        FORGOT YOUR PASSWORD?
    </div>
    <div class="normal" style="margin-bottom:10px;">
        No need to worry. Please fill out the information below and we will send it to you.
    </div>
    <div class="form_container">
        <%= render :partial => "/shared/error_and_notice" %>
        Your Login ID: <%= text_field :user, :email_address, :class => "text" %>
        <br/>
        <div style="text-align:center; margin:10px 0px 10px 0px;">
            <%= submit_tag 'Reset Password' %>
          <br/>
		  <br/>
		  <% if @user -%>
		  Go To: <%= link_to @user.organization.name,{:controller => "/site/site", :action => :static_organization, :organization_id => @user.organization} -%>
		  <% else -%>
		  	<input class="fsn-button ui-button ui-state-default ui-corner-all" style="font-size:14px; margin-top:20px;" type=button value="RETURN" onClick="history.go(-2)">
       	  <% end -%>
        </div>		
		
    </div>
</div>
<% end -%>