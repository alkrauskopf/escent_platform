

<div style="text-align:left;"><span style="color:#c73914;">Already Registered? Click <a href= <%= organization_view_path(:organization_id => @current_organization)%>>Cancel</a></span></div>
<br /><br />
<div style="text-align:left;"><span style="margin-left:85px; color:#c73914;">All Fields Required</span></div>
<br />

 <div style="width:700px; text-align:right;">
    <div class="FormRow">
        <div class="FormRowTitle">
            First Name:
        </div>
        <div class="FormRowData">
            <%= text_field :user, :first_name, :class=>"text", :size=>"50" %>
        </div>
    </div>
    <div class="FormRow">
        <div class="FormRowTitle">
            Last Name:
        </div>
        <div class="FormRowData">
            <%= text_field :user, :last_name, :class=>"text", :size=>"50" %>
        </div>
    </div>
    <div class="FormRow">
        <div class="FormRowTitle">
            Email Address:
        </div>
        <div class="FormRowData">
            <%= text_field :user, :email_address, :class=>"text", :size=>"50" %>
        </div>
    </div>
    <div class="FormRow">
        <div class="FormRowTitle">
            Verify Email Address: 
        </div>
        <div class="FormRowData">
            <%= text_field :user, :email_address_confirmation, :class=>"text", :size=>"50" %>
        </div>
    </div>
    <% if !org_list.empty? %>
        <div class="FormRow">
            <div class="FormRowTitle">
                School Affiliation:
            </div>
            <% org = @user.organization.nil? ? @current_organization : @user.organization%>
            <div class="FormRowData">
                <%=  select(:user, :home_org_id, org_list.collect{|o| [o.name, o.id]}, :value => org.id, :prompt => org.medium_name)  %>
            </div>
        </div>
    <% end %>

    <div class="FormRow">
        <div class="FormRowTitle">
            Password:
        </div>
        <div class="FormRowData">
            <%= password_field :user, :password, :class=>"text", :size=>"50" %>
            <p class="smallPrint">
                Minimum 7 Characters. Numbers/Letters Only. Case Sensitive.
            </p>
        </div>
    </div>
    <div class="FormRow">
        <div class="FormRowTitle">
            Verify Password:
        </div>
        <div class="FormRowData">
			<%= password_field :user, :password_confirmation, :class => "text", :size => "50", :value => "" %>
        </div>
    </div>
    <div class="FormRow">
        <div class="FormRowTitle">
            &nbsp;
        </div>
        <div class="FormRowData">
<!-- Remove Country Field Entry
			<%#= localized_country_select(:user, :country, [], :include_blank => 'Please choose...') %>
-->
			<input type="hidden" name="user[country]" value="US" />


        </div>
    </div>	
    <div class="FormRow">
      <div class="FormRowTitle">&nbsp;</div>
      <div class="FormRowData">
        <%#= show_simple_captcha %>
      </div>
	  </div>
   <% captcha = captcha_pick %>
   <% if !captcha.nil? %>
     <div class="FormRow">
       <div class="FormRowTitle">What's in this picture?</div>

       <div class="FormRowData">
         <%= text_field :access, :registration_code, :class=>"text", :size=>"10" %><br/>&nbsp;<%= image_tag captcha.image(:thumb) %>
       </div>
     </div>
       <input type="hidden" name="captcha_id" value= <%= captcha.id %> />
   <% end %>

    <div class="FormRow" style="text-align:center;">
            &nbsp;
    </div>	
    <div class="FormRow" style="text-align:left;">
        <div class="FormRowTitle">
            &nbsp;
        </div>
        <div class="FormRowData">
            <%= check_box  :user, :age_verified %>
            I verify that I am 14 years of age or older.
            <br/>
            <br/>
            <%= check_box :user, :read_tos %>
            I have read and understand the
			<%= link_to 'Terms of Service', terms_path, :target => '_blank' %> .
        
            <p class="smallPrint" style="padding-top:1em; padding-left:17px;">
                Your email address will not be shared. See <%= link_to 'Privacy Policy', privacy_path,  :target => '_blank' %>
            </p>
        </div>
    </div>
    <div class="FormRow" style="text-align:center;">
            &nbsp;
    </div>
    <div class="FormRow" style="text-align:center;">
            &nbsp;
    </div>
</div>

